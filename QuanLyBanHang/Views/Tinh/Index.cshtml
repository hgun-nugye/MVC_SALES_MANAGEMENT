@model IEnumerable<QuanLyBanHang.Models.Tinh>

@{
    ViewBag.Title = "Quản lý Tỉnh";
}

<style>
    .search-wrapper {
        position: relative;
        width: 100%;
        max-width: 400px;
    }

        .search-wrapper input {
            padding-left: 38px !important;
            border-radius: 8px;
            background: #f8f9fa;
        }

        .search-wrapper i {
            position: absolute;
            left: 12px;
            top: 50%;
            transform: translateY(-50%);
            pointer-events: none;
        }

    .table {
        overflow-x: auto;
        white-space: nowrap;
        width: 100%;
    }

    .table-hover tbody tr:hover {
        background-color: #f5faff;
        transition: 0.2s;
    }
</style>

<div class="container">
    <h4 class="mb-3 text-success">
        Danh sách Tỉnh
    </h4>

    @* Form  *@
    <form id="Form" class="d-flex flex-wrap align-items-center justify-content-between mb-4 gap-3">
              <div class="search-wrapper" style="max-width: 350px; position: relative;">
            <i class="fa fa-search" style="
            position: absolute; left: 12px; top: 50%;
            transform: translateY(-50%); color: #777;
        "></i>

            <input id="searchBox" type="text" class="form-control"
                   placeholder="Tìm mã tỉnh, tên tỉnh..."
                   style="padding-left: 35px;">
        </div>

        <div class="d-flex flex-wrap align-items-center gap-2">           
            <button type="button" id="btnClear" class="btn btn-secondary"><i class="fa-solid fa-rotate-left"></i>Reset</button>
            <a href="@Url.Action("Create", "Tinh")" class="btn btn-success"><i class="fa-solid fa-circle-plus"></i> Add</a>
        </div>
    </form>


    <div class="table">
        <table class="table table-bordered table-hover align-middle text-center shadow-sm">
            <thead class="table-success">
                <tr>
                    <th class="w-25">Mã Tỉnh</th>
                    <th class="w-25">Tên Tỉnh</th>

                    <th class="w-50">Hành động</th>
                </tr>
            </thead>
            <tbody class="text-start">
                @foreach (var item in Model)
                {
                    <tr class="clickable-row"
                        data-href="@Url.Action("Details", "Tinh", new { id = item.MaTinh })"
                        data-matinh="@item.MaTinh"
                        data-tentinh="@item.TenTinh">

                        <td>@item.MaTinh</td>
                        <td>@item.TenTinh</td>

                        <td class="flex justify-content-between text-center">
                            <a class="btn btn-info btn-sm text-white" href="@Url.Action("Details", "Tinh", new { id = item.MaTinh })">
                                <i class="fa-solid fa-eye"></i> Chi tiết
                            </a>
                            <a class="btn btn-warning btn-sm text-white" href="@Url.Action("Edit", "Tinh", new { id = item.MaTinh })">
                                <i class="fa-solid fa-pen-to-square"></i> Sửa
                            </a>
                            <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", "Tinh", new { id = item.MaTinh })">
                                <i class="fa-solid fa-trash"></i> Xóa
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    // --- Lọc realtime ---
    function filterTinh() {
        let search = document.getElementById("searchTinh").value.toLowerCase().trim();

        document.querySelectorAll("tbody tr").forEach(row => {
            let maTinh = row.dataset.matinh.toLowerCase();
            let tenTinh = row.dataset.tentinh.toLowerCase();

            let matchSearch =
                maTinh.includes(search) ||
                tenTinh.includes(search);

            row.style.display = matchSearch ? "" : "none";
        });
    }

    // sự kiện nhập search
    document.getElementById("searchTinh").addEventListener("input", filterTinh);

     // --- Nút reset ---
        document.getElementById("btnClear").addEventListener("click", function () {
            document.getElementById("searchBox").value = "";
            filterTable();
        });    
</script>

<script>
    // clickable row (giữ nguyên)
    document.addEventListener("DOMContentLoaded", function () {
        document.querySelectorAll(".clickable-row").forEach(row => {
            row.addEventListener("click", function () {
                window.location = this.dataset.href;
            });
        });
    });
</script>