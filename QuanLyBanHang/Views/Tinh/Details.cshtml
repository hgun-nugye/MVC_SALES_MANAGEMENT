@model QuanLyBanHang.Models.Tinh
@{
    ViewBag.Title = "Chi tiết Tỉnh";
}

<div class=" container">
    <h4 class="text-success mb-3">
        Chi tiết Tỉnh
    </h4>

    <div class="border p-4 rounded shadow-sm bg-light">
            <p><strong>@Html.DisplayNameFor(m => m.MaTinh):</strong> @Model.MaTinh</p>
            <p><strong>@Html.DisplayNameFor(m => m.TenTinh):</strong> @Model.TenTinh</p>
    </div>

    <div class="mt-4">
        <a class="btn btn-warning text-white me-2" href="@Url.Action("Edit", "Tinh", new { id = Model.MaTinh })">
            <i class="fa-solid fa-pen-to-square"></i> Sửa
        </a>
        <a class="btn btn-danger me-2 text-white" href="@Url.Action("Delete", "Tinh", new { id = Model.MaTinh })">
            <i class="fa-solid fa-trash"></i> Xóa
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fa-solid fa-arrow-left"></i> Quay lại
        </a>
    </div>
</div>
