<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QuanLyBanHang</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    @* //icon *@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">

    @* //animation *@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

    @* //font preconnect *@
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap" rel="stylesheet">

    @* //bootstrap js *@
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        body {
            font-family: "Segoe UI", sans-serif;
            min-height: 100vh;
            background-color: #f8f9fa;
        }

        .navbar {
            background-color: #198754 !important;
            box-shadow: 0 2px 4px rgba(0,0,0,.1);
        }

        .navbar-brand {
            color: white !important;
            font-weight: bold;
        }

        .navbar-nav .nav-link {
            color: rgba(255,255,255,.85) !important;
        }

        .navbar-nav .nav-link:hover {
            color: white !important;
        }

        .product-card {
            transition: transform 0.3s, box-shadow 0.3s;
            border: none;
            border-radius: 12px;
            overflow: hidden;
        }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0,0,0,.15) !important;
        }

        .product-image {
            height: 250px;
            object-fit: cover;
            width: 100%;
        }

        .price {
            color: #198754;
            font-weight: bold;
            font-size: 1.25rem;
        }       

        .btn-signup, .btn-login {
            background-color: transparent;
            color: white;
            border: 2px solid white;
        }

        .btn-signup:hover, .btn-login:hover {
            background-color: white;
            color: #198754;
        }

        .main-content {
            min-height: calc(100vh - 200px);
        }
    </style>
</head>
<body>
    <!-- Header với Login/Sign Up -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                <i class="fa-solid fa-store me-2"></i>Quản Lý Bán Hàng
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    @if (Context.Session.GetString("IsLoggedIn") == "true")
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="fa-solid fa-user me-1"></i>
                                @Context.Session.GetString("UserName")
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                @if (Context.Session.GetString("IsCustomer") == "true")
                                {
                                    <li><a class="dropdown-item" href="@Url.Action("Index", "DonBanHang")">
                                        <i class="fa-solid fa-shopping-cart me-2"></i>Đơn hàng của tôi</a></li>
                                }
                                else
                                {
                                    <li><a class="dropdown-item" href="@Url.Action("Index", "SanPham")">
                                        <i class="fa-solid fa-box me-2"></i>Quản lý sản phẩm</a></li>
                                }
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="@Url.Action("Logout", "Home")">
                                    <i class="fa-solid fa-sign-out-alt me-2"></i>Đăng xuất</a></li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link btn btn-login me-2" href="@Url.Action("Login", "Home")">
                                <i class="fa-solid fa-sign-in-alt me-1"></i>Đăng nhập
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-signup" href="@Url.Action("SignUp", "Home")">
                                <i class="fa-solid fa-user-plus me-1"></i>Đăng ký
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="main-content">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-white text-center py-3 mt-5">
        <div class="container">
            &copy; 2025 - QuanLyBanHang - Hệ thống quản lý bán hàng
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    @if (TempData["SuccessMessage"] != null)
    {
        <script>
            Swal.fire({
                icon: 'success',
                title: 'Thành công!',
                text: '@Html.Raw(TempData["SuccessMessage"])',
                showConfirmButton: false,
                timer: 2000
            });
        </script>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <script>
            Swal.fire({
                icon: 'error',
                title: 'Lỗi!',
                text: '@Html.Raw(TempData["ErrorMessage"])'
            });
        </script>
    }

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

