<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QuanLyBanHang</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    @* //icon *@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">

    @* //animation *@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

    @* //font preconnect *@
    <link rel="preconnect" href="https://fonts.googleapis.com">

    @* //font *@
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap" rel="stylesheet">

    <style>
        body {
            display: flex;
            font-family: "Segoe UI", sans-serif;
            max-height: 100vh;
        }
        
        /* Sidebar */
        .sidebar {
            width: 250px;
            height: 100vh;
            background: #fffffa;
            color: #198754;
            padding-top: 20px;
            font-weight:bolder;
            border-right: 2px solid #198754;
            position: fixed;
        }
        
        .sidebar {
                text-align: center;
                margin-bottom: 20px;
                font-weight: 700;
                font-size: 30px;
        }
        
        .sidebar a {
                color: #198754;
                display: flex;
                align-items: center;
                gap: 12px;
                padding: 12px 20px;
                text-decoration: none;
                font-size: 15px;
                transition: 0.2s;
                font-size: large;
                font-weight:bold;
            }
            
        .sidebar a i {
                    width: 22px;
                    text-align: center;
                }
        
                .sidebar a:hover {
                    background: #198754;
                    color: #fff;
                }

                    .sidebar a:hover i {
                        color: #FFFFE0;
                    }

                .sidebar a.active {
                    background: #198754;
                    color: #fff;
                }

                    .sidebar a.active i {
                        color: #FFFFE0;
                    }


        .content {
            margin-left: 250px;
            width: calc(100% - 250px);
            font-size: 14px;
        }

                .page-link{
            border: 1px solid #198754 !important;
            color: #198754 !important;
        }

        .page-item.active .page-link{
            background-color: #198754 !important;
            color: white !important;           
        }

        input:focus,
        select:focus,
        textarea:focus {
            border-color: #28a745 !important;
            box-shadow: 0 0 0 0.25rem rgba(40,167,69,0.25) !important;
        }

        .table {
            overflow-x: auto;
            -webkit-overflow-scrolling: touch; /* mượt trên mobile */
            scrollbar-width: thin; /* Firefox */
            scrollbar-color: #28a745 transparent; /* Firefox */
        }

            /* Chrome, Edge, Safari */
            .table::-webkit-scrollbar {
                height: 8px; /* chiều cao thanh scroll */
            }

            .table::-webkit-scrollbar-track {
                background: transparent;
            }

            .table::-webkit-scrollbar-thumb {
                background-color: #28a745;
                border-radius: 4px;
            }

                .table::-webkit-scrollbar-thumb:hover {
                    background-color: #28a745;
                }
    </style>
</head>

<body>

    <!-- SIDEBAR -->
    <div class="sidebar">
        <h4 class="pb-3 border-bottom"> <i class="fa-solid fa-folder"></i> Danh mục</h4>

        <a asp-controller="NhaCC" asp-action="Index"
           class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "") mb-3">
            <i class="fa-solid fa-bars-progress"></i> Dashboard
        </a>

        <a asp-controller="NhaCC" asp-action="Index"
           class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "NhaCC" ? "active" : "") mb-3">
            <i class="fa-solid fa-truck-field"></i> Nhà Cung Cấp
        </a>

        <a asp-controller="KhachHang" asp-action="Index"
           class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "KhachHang" ? "active" : "") mb-3">
            <i class="fa-solid fa-users"></i> Khách Hàng
        </a>

         <a asp-controller="GianHang" asp-action="Index"
           class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "GianHang" ? "active" : "") mb-3">
            <i class="fa-solid fa-store"></i> Gian Hàng
        </a>
       
        <a asp-controller="LoaiSP" asp-action="Index"
           class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "LoaiSP" ? "active" : "") mb-3">
            <i class="fa-solid fa-tags"></i> Loại Sản Phẩm
        </a>

        <a asp-controller="NhomSP" asp-action="Index"
           class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "NhomSP" ? "active" : "") mb-3">
            <i class="fa-solid fa-layer-group"></i> Nhóm Sản Phẩm
        </a>

        <a asp-controller="SanPham" asp-action="Index"
           class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "SanPham" ? "active" : "") mb-3">
            <i class="fa-solid fa-box"></i> Sản Phẩm
        </a>
        <a asp-controller="DonBanHang" asp-action="Index"
           class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "DonBanHang" ? "active" : "") mb-3">
            <i class="fa-solid fa-file-invoice-dollar"></i> Đơn Bán Hàng
        </a>

        <a asp-controller="DonMuaHang" asp-action="Index"
           class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "DonMuaHang" ? "active" : "") mb-3">
            <i class="fa-solid fa-file-invoice"></i> Đơn Mua Hàng
        </a>
               
    </div>

    <!-- CONTENT -->
    <div class="content d-flex flex-column">

        <main role="main" class="pb-3 bg-white p-4 mb-4" style="min-height: 100vh;">
            @RenderBody()
        </main>

        @* <footer class="border-top footer text-muted pt-2 text-center">
            <div class="container">
                &copy; 2025 - QuanLyBanHang
            </div>
        </footer> *@

    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    @if (TempData["SuccessMessage"] != null)
    {
        <script>
            Swal.fire({
                icon: 'success',
                title: 'Thành công!',
                text: '@Html.Raw(TempData["SuccessMessage"])',
                showConfirmButton: false,
                timer: 2000,
                showClass: { popup: 'animate__animated animate__bounceIn' },
                hideClass: { popup: 'animate__animated animate__fadeOutUp' },
                didOpen: () => {
                    Swal.showLoading();
                }
            });
        </script>
    }
    else if (TempData["UpdateMessage"] != null)
    {
        <script>
            Swal.fire({
                icon: 'success',
                title: 'Đã cập nhật!',
                text: '@Html.Raw(TempData["UpdateMessage"])',
                showConfirmButton: false,
                timer: 2000,
                showClass: { popup: 'animate__animated animate__bounceIn' },
                hideClass: { popup: 'animate__animated animate__fadeOutUp' },
                didOpen: () => {
                    Swal.showLoading();
                }
            });
        </script>
    }
    else if (TempData["ErrorMessage"] != null)
    {
        <script>
            Swal.fire({
                icon: 'error',
                title: 'Lỗi!',
                text: '@Html.Raw(TempData["ErrorMessage"])',
                showConfirmButton: false,
                timer: 2000,
                showClass: { popup: 'animate__animated animate__bounceIn' },
                hideClass: { popup: 'animate__animated animate__fadeOutUp' }
            });
        </script>
    }

</body>
</html>
