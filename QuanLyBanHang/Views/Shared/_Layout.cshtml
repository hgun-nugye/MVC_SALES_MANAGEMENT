<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QuanLyBanHang</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    @* //icon *@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">

    @* //animation *@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

    @* //font preconnect *@
    <link rel="preconnect" href="https://fonts.googleapis.com">

    @* //font *@
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap" rel="stylesheet">

    @* //bootstrap js *@
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>


    <style>
        body {
            display: flex;
            font-family: "Segoe UI", sans-serif;
            min-height: 100%;
            background-color: #fffef4;
        }
        .text-success{
            color: #198754 !important;
        }
        
        /* Sidebar */
        .sidebar {
            width: 250px;
            height: 100vh;
            background: #fffffa;
            color: #198754;
            padding-top: 20px;
            padding-bottom: 20px;
            font-weight: bolder;
            position: fixed;
            overflow-y: auto;
            overflow-x: hidden;
            scrollbar-width: none;
            scrollbar-color: #198754 #f0f0f0;
        }

        .sidebar::-webkit-scrollbar {
            width: 6px;
        }

        .sidebar::-webkit-scrollbar-track {
            background: #f0f0f0;
        }

        .sidebar::-webkit-scrollbar-thumb {
            background-color: #198754;
            border-radius: 3px;
        }

        .sidebar::-webkit-scrollbar-thumb:hover {
            background-color: #157347;
        }
        
        .sidebar a {
                display: flex;
                align-items: center;
                color: #198754;
                padding: 14px 20px;
                text-decoration: none;
                font-size: 15px;
                transition: 0.2s;
                font-size: 16px;
                font-weight:bold;
            }
            
        .sidebar a i {
                    width: 22px;
                    text-align: center;
                }
        
                .sidebar a:hover {
                    background: #42c74685;
                    color: #198754;
                    border-radius: 4px;
                }

                    .sidebar a:hover i {
                        color: #198754;
                    }

                .sidebar a.active {
                    background: #198754;
                    color: #fff;
                    border-radius: 4px;
                }

                    .sidebar a.active i {
                        color: #FFFFE0;
                    }

        .menu-label {
            color: #6c757d;
            font-size: 11px;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1px;
            padding: 12px 20px 8px 20px;
            margin-top: 8px;
            border-top: 1px solid #e9ecef;
        }

        .menu-label:first-of-type {
            border-top: none;
            margin-top: 0;
        }

        .content {
            margin-left: 250px;
            width: calc(100% - 250px);
            font-size: 16px;
            min-height: 100vh;
        }

        .main{
            border-radius: 12px;
            background-color: white;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .page-link{
            border: 1px solid #198754 !important;
            color: #198754 !important;
        }

        .page-item.active .page-link{
            background-color: #198754 !important;
            color: white !important;           
        }

        input:focus,
        select:focus,
        textarea:focus {
            border-color: #28a745 !important;
            box-shadow: 0 0 0 0.25rem rgba(40,167,69,0.25) !important;
        }

        .table {
            overflow-x: auto;
            -webkit-overflow-scrolling: touch; /* mượt trên mobile */
            scrollbar-width: thin; /* Firefox */
            scrollbar-color: #28a745 transparent; /* Firefox */
        }

            /* Chrome, Edge, Safari */
            .table::-webkit-scrollbar {
                height: 8px; /* chiều cao thanh scroll */
            }

            .table::-webkit-scrollbar-track {
                background: transparent;
            }

            .table::-webkit-scrollbar-thumb {
                background-color: #28a745;
                border-radius: 4px;
            }

                .table::-webkit-scrollbar-thumb:hover {
                    background-color: #28a745;
                }

        .search-wrapper i{
            color: #198754 !important;
        }

        label{
            font-weight: bold;
        }

    </style>
</head>

<body>

    <!-- SIDEBAR -->
    <div class="sidebar shadow-lg">
        <div class="pb-3 border-bottom text-center">
            <img src="~/images/logo.png" class="rounded-circle w-50 text-center mb-2" />
            @if (Context.Session.GetString("IsLoggedIn") == "true")
            {
                <div class="px-3">
                    @if (ViewBag.IsCustomer == true)
                    {
                        <div class="badge bg-info text-dark w-100 mb-1 p-2 text-white" style="font-size: 16px">
                            <i class="fa-solid fa-user-circle me-1"></i>Khách hàng
                        </div>
                    }
                    else
                    {
                        <div class="badge bg-success w-100 mb-1 p-2 text-white" style="font-size:16px">
                            <i class="fa-solid fa-user-tie me-1"></i>Nhân viên
                        </div>
                    }
                    <div class="text-muted mt-1" style="word-break: break-word;">
                        @Context.Session.GetString("UserName")
                    </div>
                </div>
            }
        </div>

        @{
            var ctrl = ViewContext.RouteData.Values["controller"]?.ToString();
            bool isCustomer = ViewBag.IsCustomer == true;
        }

        <!-- Dashboard -->
        <a href="@Url.Action("Index", "Home")" class="ajax-link @(ctrl == "Home" ? "active" : "")">
            <i class="fa-solid fa-bars-progress me-2"></i>Dashboard
        </a>

        @if (!isCustomer)
        {
            <!-- Hàng hóa -->
            <div class="menu-label">Hàng hóa</div>
            <a href="@Url.Action("Index", "SanPham")" class="ajax-link @(ctrl == "SanPham" ? "active" : "")">
                <i class="fa-solid fa-box me-2"></i>Sản Phẩm
            </a>
            <a href="@Url.Action("Index", "LoaiSP")" class="ajax-link @(ctrl == "LoaiSP" ? "active" : "")">
                <i class="fa-solid fa-tags me-2"></i>Loại Sản Phẩm
            </a>
            <a href="@Url.Action("Index", "NhomSP")" class="ajax-link @(ctrl == "NhomSP" ? "active" : "")">
                <i class="fa-solid fa-layer-group me-2"></i>Nhóm Sản Phẩm
            </a>

            <!-- Thông tin cơ bản -->
            <div class="menu-label">Thông tin cơ bản</div>
            <a href="@Url.Action("Index", "HangSX")" class="ajax-link @(ctrl == "HangSX" ? "active" : "")">
                <i class="fa-solid fa-box me-2"></i>Hãng sản xuất
            </a>

            <a href="@Url.Action("Index", "Nuoc")" class="ajax-link @(ctrl == "Nuoc" ? "active" : "")">
                <i class="fa-solid fa-flag me-2"></i>Nước
            </a>

            <!-- Khách hàng & Đối tác -->
            <div class="menu-label">Khách hàng & Đối tác</div>
            <a href="@Url.Action("Index", "KhachHang")" class="ajax-link @(ctrl == "KhachHang" ? "active" : "")">
                <i class="fa-solid fa-users me-2"></i>Khách Hàng
            </a>
            <a href="@Url.Action("Index", "NhaCC")" class="ajax-link @(ctrl == "NhaCC" ? "active" : "")">
                <i class="fa-solid fa-truck me-2"></i>Nhà Cung Cấp
            </a>
            <a href="@Url.Action("Index", "NhanVien")" class="ajax-link @(ctrl == "NhanVien" ? "active" : "")">
                <i class="fa-solid fa-user-tie me-2"></i>Nhân Viên
            </a>

            <!-- Giao dịch -->
            <div class="menu-label">Giao dịch</div>
            <a href="@Url.Action("Index", "DonBanHang")" class="ajax-link @(ctrl == "DonBanHang" ? "active" : "")">
                <i class="fa-solid fa-shopping-cart me-2"></i>Đơn Bán Hàng
            </a>
            <a href="@Url.Action("Index", "DonMuaHang")" class="ajax-link @(ctrl == "DonMuaHang" ? "active" : "")">
                <i class="fa-solid fa-shopping-bag me-2"></i>Đơn Mua Hàng
            </a>

            <!-- Địa lý -->
            <div class="menu-label">Địa lý</div>
            <a href="@Url.Action("Index", "Tinh")" class="ajax-link @(ctrl == "Tinh" ? "active" : "")">
                <i class="fa-solid fa-map me-2"></i>Tỉnh / Thành phố
            </a>
            <a href="@Url.Action("Index", "Xa")" class="ajax-link @(ctrl == "Xa" ? "active" : "")">
                <i class="fa-solid fa-map-location-dot me-2"></i>Xã / Phường
            </a>
        }
        else
        {
            <!-- Menu rút gọn cho Khách hàng -->
            <div class="menu-label">Khách hàng</div>
            <a href="@Url.Action("Index", "SanPham")" class="ajax-link @(ctrl == "SanPham" ? "active" : "")">
                <i class="fa-solid fa-box me-2"></i>Xem sản phẩm
            </a>
            <a href="@Url.Action("Index", "DonBanHang")" class="ajax-link @(ctrl == "DonBanHang" ? "active" : "")">
                <i class="fa-solid fa-shopping-cart me-2"></i>Đơn mua hàng
            </a>
        }
    </div>

    <!-- CONTENT -->
    <div class="content p-4 d-flex flex-column">

        <!-- Header với thông tin người dùng và nút đăng xuất -->
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div>
                @if (isCustomer)
                {
                    <h5 class="mb-0">
                        <i class="fa-solid fa-user-circle text-info me-2"></i>
                        <span class="text-info">Khách hàng: </span>
                        <strong>@Context.Session.GetString("UserName")</strong>
                    </h5>
                }
                else
                {
                    <h5 class="mb-0">
                        <i class="fa-solid fa-user-tie text-success me-2"></i>
                        <span class="text-success">Nhân viên: </span>
                        <strong>@Context.Session.GetString("UserName")</strong>
                    </h5>
                }
            </div>
            <div>
                <a class="dropdown-item text-danger btn btn-danger" href="javascript:void(0)" onclick="confirmLogout()">
                    <i class="fa-solid fa-sign-out-alt me-2"></i>Đăng xuất
                </a>

                <form id="logoutForm" action="@Url.Action("LogoutConfirmed", "Home")" method="post" style="display:none;">
                    @Html.AntiForgeryToken()
                </form>
            </div>
        </div>

        <main role="main" id="main-content" class="p-4 mb-4 flex-grow-1 main">
            @RenderBody()
        </main>

        <footer class="border-top text-muted pt-2 text-center">
            <div class="container">
                &copy; 2025 - QuanLyBanHang
            </div>
        </footer>

    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    @if (TempData["SuccessMessage"] != null)
    {
        <script>
            Swal.fire({
                icon: 'success',
                title: 'Thành công!',
                text: '@Html.Raw(TempData["SuccessMessage"])',
                showConfirmButton: false,
                timer: 2000,
                showClass: { popup: 'animate__animated animate__bounceIn' },
                hideClass: { popup: 'animate__animated animate__fadeOutUp' },
                didOpen: () => {
                    Swal.showLoading();
                }
            });
        </script>
    }
    else if (TempData["UpdateMessage"] != null)
    {
        <script>
            Swal.fire({
                icon: 'success',
                title: 'Đã cập nhật!',
                text: '@Html.Raw(TempData["UpdateMessage"])',
                showConfirmButton: false,
                timer: 2000,
                showClass: { popup: 'animate__animated animate__bounceIn' },
                hideClass: { popup: 'animate__animated animate__fadeOutUp' },
                didOpen: () => {
                    Swal.showLoading();
                }
            });
        </script>
    }
    else if (TempData["ErrorMessage"] != null)
    {
        <script>
            Swal.fire({
                icon: 'error',
                title: 'Lỗi!',
                text: '@Html.Raw(TempData["ErrorMessage"])',
                showConfirmButton: false,
                timer: 2000,
                showClass: { popup: 'animate__animated animate__bounceIn' },
                hideClass: { popup: 'animate__animated animate__fadeOutUp' }
            });
        </script>
    }


    <script>
        $(document).ready(function () {
            $(document).on('click', '.ajax-link', function (e) {
                e.preventDefault(); 

                var url = $(this).attr('href');
                var $this = $(this);

                if (url === "#" || !url) return;

                // Hiệu ứng chờ (Loading)
                $('#main-content').css('opacity', '0.5');

                $.ajax({
                    url: url,
                    type: 'GET',
                    headers: { "X-Requested-With": "XMLHttpRequest" }, // Gửi header để _ViewStart nhận diện
                    success: function (data) {
                        // Cập nhật vùng nội dung
                        $('#main-content').html(data).css('opacity', '1');

                        // Cập nhật Menu Active
                        $('.sidebar a').removeClass('active');
                        $this.addClass('active');

                        window.history.pushState({ path: url }, '', url);
                      
                    },
                    error: function () {
                        $('#main-content').css('opacity', '1');
                        Swal.fire('Lỗi!', 'Không thể kết nối máy chủ.', 'error');
                    }
                });
            });

            // Xử lý nút Back của trình duyệt
            window.onpopstate = function () {
                location.reload();
            };
        });

            $(document).on('click', '.clickable-row', function (e) {
                // Nếu click vào nút bấm hoặc link bên trong row thì không chạy Detail
                if ($(e.target).closest('a, button, input').length) return;

                var url = $(this).data('href');
                if (url) {
                    // Gọi AJAX để load trang Detail luôn (không load lại trang)
                    loadAjaxContent(url);
                }
            });

            // Hàm dùng chung để load nội dung AJAX
            function loadAjaxContent(url) {
                $('#main-content').css('opacity', '0.5');
                $.ajax({
                    url: url,
                    type: 'GET',
                    headers: { "X-Requested-With": "XMLHttpRequest" },
                    success: function (data) {
                        $('#main-content').html(data).css('opacity', '1');
                        window.history.pushState({ path: url }, '', url);
                        // Cuộn lên đầu trang sau khi load nội dung mới
                        window.scrollTo(0, 0);
                    }
                });
            }
        });
    </script>

    <script>
        function confirmLogout() {
            Swal.fire({
                title: 'Bạn muốn đăng xuất?',
                text: "Phiên làm việc của bạn sẽ kết thúc!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#198754',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Đăng xuất',
                cancelButtonText: 'Hủy'
            }).then((result) => {
                if (result.isConfirmed) {
                    // Submit form ẩn để gửi POST request lên Controller
                    document.getElementById('logoutForm').submit();
                }
            })
        }
    </script>
    
</body>
</html>
