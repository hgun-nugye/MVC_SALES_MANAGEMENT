    <script>
        function confirmLogout() {
            Swal.fire({
                title: 'Bạn muốn đăng xuất?',
                text: "Phiên làm việc của bạn sẽ kết thúc!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#198754',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Đăng xuất',
                cancelButtonText: 'Hủy'
            }).then((result) => {
                if (result.isConfirmed) {
                    // Submit form ẩn để gửi POST request lên Controller
                    document.getElementById('logoutForm').submit();
                }
            })
        }

        function goBack(fallbackUrl) {
            const referrer = document.referrer;
            if (referrer && (referrer.includes('/Edit') || referrer.includes('/Delete'))) {
                window.location.href = fallbackUrl;
            } else if (referrer && referrer !== window.location.href && !referrer.includes(window.location.pathname)) {
                history.back();
            } else {
                window.location.href = fallbackUrl;
            }
        }
    </script>
    
</body>
</html>
