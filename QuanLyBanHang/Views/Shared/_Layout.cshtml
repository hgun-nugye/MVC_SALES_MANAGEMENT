<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QuanLyBanHang</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    @* //icon *@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">

    @* //animation *@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

    @* //font preconnect *@
    <link rel="preconnect" href="https://fonts.googleapis.com">

    @* //font *@
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap" rel="stylesheet">


    <style>
        body {
            display: flex;
            font-family: "Segoe UI", sans-serif;
            min-height: 100%;
            background-color: #fffef4;
        }
        .text-success{
            color: #198754 !important;
        }
        
        /* Sidebar */
        .sidebar {
            width: 250px;
            height: 100vh;
            background: #fffffa;
            color: #198754;
            padding-top: 20px;
            padding-bottom: 20px;
            font-weight: bolder;
            position: fixed;
            overflow-y: auto;
            overflow-x: hidden;
            scrollbar-width: none;
            scrollbar-color: #198754 #f0f0f0;
        }

        .sidebar::-webkit-scrollbar {
            width: 6px;
        }

        .sidebar::-webkit-scrollbar-track {
            background: #f0f0f0;
        }

        .sidebar::-webkit-scrollbar-thumb {
            background-color: #198754;
            border-radius: 3px;
        }

        .sidebar::-webkit-scrollbar-thumb:hover {
            background-color: #157347;
        }
        
        .sidebar a {
                display: flex;
                align-items: center;
                color: #198754;
                padding: 14px 20px;
                text-decoration: none;
                font-size: 15px;
                transition: 0.2s;
                font-size: 16px;
                font-weight:bold;
            }
            
        .sidebar a i {
                    width: 22px;
                    text-align: center;
                }
        
                .sidebar a:hover {
                    background: #42c74685;
                    color: #198754;
                    border-radius: 4px;
                }

                    .sidebar a:hover i {
                        color: #198754;
                    }

                .sidebar a.active {
                    background: #198754;
                    color: #fff;
                    border-radius: 4px;
                }

                    .sidebar a.active i {
                        color: #FFFFE0;
                    }

        .menu-label {
            color: #6c757d;
            font-size: 11px;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1px;
            padding: 12px 20px 8px 20px;
            margin-top: 8px;
            border-top: 1px solid #e9ecef;
        }

        .menu-label:first-of-type {
            border-top: none;
            margin-top: 0;
        }

        .content {
            margin-left: 250px;
            width: calc(100% - 250px);
            font-size: 16px;
            min-height: 100vh;
        }

        .main{
            border-radius: 12px;
            background-color: white;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .page-link{
            border: 1px solid #198754 !important;
            color: #198754 !important;
        }

        .page-item.active .page-link{
            background-color: #198754 !important;
            color: white !important;           
        }

        input:focus,
        select:focus,
        textarea:focus {
            border-color: #28a745 !important;
            box-shadow: 0 0 0 0.25rem rgba(40,167,69,0.25) !important;
        }

        .table {
            overflow-x: auto;
            -webkit-overflow-scrolling: touch; /* mượt trên mobile */
            scrollbar-width: thin; /* Firefox */
            scrollbar-color: #28a745 transparent; /* Firefox */
        }

            /* Chrome, Edge, Safari */
            .table::-webkit-scrollbar {
                height: 8px; /* chiều cao thanh scroll */
            }

            .table::-webkit-scrollbar-track {
                background: transparent;
            }

            .table::-webkit-scrollbar-thumb {
                background-color: #28a745;
                border-radius: 4px;
            }

                .table::-webkit-scrollbar-thumb:hover {
                    background-color: #28a745;
                }

        .search-wrapper i{
            color: #198754 !important;
        }

        label{
            font-weight: bold;
        }

        .page-header {
            background: linear-gradient(135deg, #198754 0%, #20c997 100%);
            color: white;
            padding: 2rem 2rem;
            border-radius: 16px;
            margin-bottom: 2.5rem;
            box-shadow: 0 10px 30px rgba(25, 135, 84, 0.2);
            position: relative;
            overflow: hidden;
        }

            /* Ensure all interactive elements inside page-header are clickable */
            .page-header > * {
                position: relative;
                z-index: 2;
            }

            .page-header::after {
                content: '';
                position: absolute;
                top: -50%;
                right: -10%;
                width: 300px;
                height: 300px;
                background: rgba(255, 255, 255, 0.1);
                border-radius: 50%;
                z-index: 1;
                pointer-events: none;
            }

        /* Global Filter and Search Styles */
        .filter-card {
            background: white;
            border-radius: 16px;
            padding: 1.5rem;
            box-shadow: 0 4px 20px rgba(0,0,0,0.05);
            margin-bottom: 2.5rem;
            border: 1px solid #f0f4f2;
        }

        .search-input-group {
            position: relative;
        }

            .search-input-group i {
                position: absolute;
                left: 15px;
                top: 50%;
                transform: translateY(-50%);
                color: #999;
            }

            .search-input-group .form-control {
                padding-left: 2.8rem;
                border-radius: 12px;
                border: 1.5px solid #edf2ef;
                height: 50px;
            }

        .form-select {
            border-radius: 12px;
            border: 1.5px solid #edf2ef;
            height: 50px;
        }

        .btn-clear {
            border-radius: 12px;
            height: 50px;
            width: 50px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .btn-outline-light:hover {
            color: mediumseagreen !important;
        }

    </style>
</head>

<body>

    <!-- SIDEBAR -->
    @{
        var isLoggedIn = Context.Session.GetString("IsLoggedIn") == "true";
    }

    @if (isLoggedIn)
    {
    <div class="sidebar shadow-lg">
        <div class="pb-3 text-center">
            <img src="~/images/logo.png" class="rounded-circle w-50 text-center mb-2" />           
        </div>

        @{
            var ctrl = ViewContext.RouteData.Values["controller"]?.ToString();
        }              

            @if (!(ViewBag.IsCustomer == true))
        {
            <!-- Dashboard -->
            <div class="menu-label">Tổng quan</div>
            <a href="@Url.Action("Index", "Dashboard")" class="ajax-link @(ctrl == "Dashboard" ? "active" : "")">
                <i class="fa-solid fa-chart-line me-2"></i>Dashboard
            </a>

            <!-- Địa lý -->
            <div class="menu-label">Đơn vị hành chính</div>
            <a href="@Url.Action("Index", "Xa")" class="ajax-link @(ctrl == "Xa" ? "active" : "")">
                <i class="fa-solid fa-map-location-dot me-2"></i>Xã / Phường
            </a>

            <!-- Hàng hóa -->
            <div class="menu-label">Hàng hóa</div>
            <a href="@Url.Action("Index", "SanPham")" class="ajax-link @(ctrl == "SanPham" ? "active" : "")">
                <i class="fa-solid fa-box me-2"></i>Sản Phẩm
            </a>
            <a href="@Url.Action("Index", "LoaiSP")" class="ajax-link @(ctrl == "LoaiSP" ? "active" : "")">
                <i class="fa-solid fa-tags me-2"></i>Loại Sản Phẩm
            </a>
            <!-- Thông tin hãng -->
            <div class="menu-label">Thông tin hãng</div>
            <a href="@Url.Action("Index", "HangSX")" class="ajax-link @(ctrl == "HangSX" ? "active" : "")">
                <i class="fa-solid fa-box me-2"></i>Hãng sản xuất
            </a>
            <!-- Khách hàng & Đối tác -->
            <div class="menu-label">Khách hàng & Đối tác</div>
            <a href="@Url.Action("Index", "KhachHang")" class="ajax-link @(ctrl == "KhachHang" ? "active" : "")">
                <i class="fa-solid fa-users me-2"></i>Khách Hàng
            </a>
            <a href="@Url.Action("Index", "NhaCC")" class="ajax-link @(ctrl == "NhaCC" ? "active" : "")">
                <i class="fa-solid fa-truck me-2"></i>Nhà Cung Cấp
            </a>
            <a href="@Url.Action("Index", "NhanVien")" class="ajax-link @(ctrl == "NhanVien" ? "active" : "")">
                <i class="fa-solid fa-user-tie me-2"></i>Nhân Viên
            </a>

            <!-- Giao dịch -->
            <div class="menu-label">Giao dịch</div>
            <a href="@Url.Action("Index", "DonBanHang")" class="ajax-link @(ctrl == "DonBanHang" ? "active" : "")">
                <i class="fa-solid fa-shopping-cart me-2"></i>Đơn Bán Hàng
            </a>
            <a href="@Url.Action("Index", "DonMuaHang")" class="ajax-link @(ctrl == "DonMuaHang" ? "active" : "")">
                <i class="fa-solid fa-shopping-bag me-2"></i>Đơn Mua Hàng
            </a>           
        }
        else
        {
            <!-- Menu rút gọn cho Khách hàng -->
            <div class="menu-label">Khách hàng</div>
            <a href="@Url.Action("Profile", "KhachHang")" class="ajax-link @(ctrl == "KhachHang" && ViewContext.RouteData.Values["action"]?.ToString() == "Profile" ? "active" : "")">
                <i class="fa-solid fa-user-circle me-2"></i>Thông tin cá nhân
            </a>
            <a href="@Url.Action("Index", "SanPham")" class="ajax-link @(ctrl == "SanPham" ? "active" : "")">
                <i class="fa-solid fa-box me-2"></i>Xem sản phẩm
            </a>
            <a href="@Url.Action("Index", "DonBanHang")" class="ajax-link @(ctrl == "DonBanHang" ? "active" : "")">
                <i class="fa-solid fa-shopping-cart me-2"></i>Đơn mua hàng
            </a>
            <a href="@Url.Action("Index", "Cart")" class="ajax-link @(ctrl == "Cart" ? "active" : "")">
                <i class="fa-solid fa-cart-shopping me-2"></i>Giỏ hàng
            </a>
        }
    </div>
    }

    <!-- CONTENT -->
    <div class="content p-4 d-flex flex-column" style="@(isLoggedIn ? "" : "margin-left: 0; width: 100%;")">

        <!-- Header với thông tin người dùng và nút đăng xuất -->
        <div class="d-flex justify-content-between align-items-center mb-3">
            @if (isLoggedIn)
            {
            <div>
                @{                    
                    string userName = Context.Session.GetString("UserName");
                    string userAvatar = Context.Session.GetString("UserAvatar"); // Lấy tên file ảnh từ Session

                    // Xác định thư mục chứa ảnh dựa trên loại người dùng
                        string folder = ViewBag.IsCustomer == true ? "customers" : "employees";

                    // Tạo đường dẫn ảnh hoàn chỉnh
                    string avatarPath = string.IsNullOrEmpty(userAvatar)
                    ? Url.Content("~/images/default-user.png")
                    : Url.Content($"~/images/{folder}/{userAvatar}");
                }

                <h5 class="mb-0 d-flex align-items-center gap-2">
                    <img src="@avatarPath"
                         width="40"
                         height="40"
                         style="object-fit:cover; border-radius:50%; border: 1px solid #ddd;">

                        @if (ViewBag.IsCustomer == true)
                    {
                        <span class="text-info">Khách hàng: </span>
                    }
                    else
                    {
                        <span class="text-success">Nhân viên: </span>
                    }
                    <strong class="text-success">@userName</strong>
                </h5>
            </div>
            <div>
                <a class="dropdown-item text-danger btn btn-danger" href="javascript:void(0)" onclick="confirmLogout()">
                    <i class="fa-solid fa-sign-out-alt me-2"></i>Đăng xuất
                </a>

                <form id="logoutForm" action="@Url.Action("LogoutConfirmed", "Home")" method="post" style="display:none;">
                    @Html.AntiForgeryToken()
                </form>
            </div>
            }
            else
            {
                <div class="d-flex align-items-center">
                    <a href="@Url.Action("Index", "Home")" class="text-decoration-none">
                         <img src="~/images/logo.png" height="50" alt="Logo" />
                    </a>
                </div>
                <div>
                    <a href="@Url.Action("Login", "Home")" class="btn btn-outline-success me-2 fw-bold">
                        <i class="fa-solid fa-right-to-bracket me-2"></i>Đăng nhập
                    </a>
                    <a href="@Url.Action("SignUp", "Home")" class="btn btn-success fw-bold text-white">
                        <i class="fa-solid fa-user-plus me-2"></i>Đăng ký
                    </a>
                </div>
            }
        </div>

        <main role="main" id="main-content" class="p-4 mb-4 flex-grow-1 main">
            @RenderBody()
        </main>

        <footer class="border-top text-muted pt-2 text-center">
            <div class="container">
                &copy; 2025 - QuanLyBanHang
            </div>
        </footer>

    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    @if (TempData["SuccessMessage"] != null)
    {
        <script>
            Swal.fire({
                icon: 'success',
                title: 'Thành công!',
                text: '@Html.Raw(TempData["SuccessMessage"])',
                showConfirmButton: false,
                timer: 2000,
                showClass: { popup: 'animate__animated animate__bounceIn' },
                hideClass: { popup: 'animate__animated animate__fadeOutUp' },
                didOpen: () => {
                    Swal.showLoading();
                }
            });
        </script>
    }
    else if (TempData["UpdateMessage"] != null)
    {
        <script>
            Swal.fire({
                icon: 'success',
                title: 'Đã cập nhật!',
                text: '@Html.Raw(TempData["UpdateMessage"])',
                showConfirmButton: false,
                timer: 2000,
                showClass: { popup: 'animate__animated animate__bounceIn' },
                hideClass: { popup: 'animate__animated animate__fadeOutUp' },
                didOpen: () => {
                    Swal.showLoading();
                }
            });
        </script>
    }
    else if (TempData["ErrorMessage"] != null)
    {
        <script>
            Swal.fire({
                icon: 'error',
                title: 'Lỗi!',
                text: '@Html.Raw(TempData["ErrorMessage"])',
                showConfirmButton: false,
                timer: 2000,
                showClass: { popup: 'animate__animated animate__bounceIn' },
                hideClass: { popup: 'animate__animated animate__fadeOutUp' }
            });
        </script>
    }


