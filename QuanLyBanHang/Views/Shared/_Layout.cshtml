<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QuanLyBanHang</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    @* //icon *@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">

    @* //animation *@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

    @* //font preconnect *@
    <link rel="preconnect" href="https://fonts.googleapis.com">

    @* //font *@
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap" rel="stylesheet">

    @* //bootstrap js *@
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>


    <style>
        body {
            display: flex;
            font-family: "Segoe UI", sans-serif;
            min-height: 100%;
            background-color: #fffef4;
        }
        .text-success{
            color: #198754 !important;
        }
        
        /* Sidebar */
        .sidebar {
            width: 250px;
            height: 100vh;
            background: #fffffa;
            color: #198754;
            padding-top: 20px;
            padding-bottom: 20px;
            font-weight: bolder;
            position: fixed;
            overflow-y: auto;
            overflow-x: hidden;
            scrollbar-width: none;
            scrollbar-color: #198754 #f0f0f0;
        }

        .sidebar::-webkit-scrollbar {
            width: 6px;
        }

        .sidebar::-webkit-scrollbar-track {
            background: #f0f0f0;
        }

        .sidebar::-webkit-scrollbar-thumb {
            background-color: #198754;
            border-radius: 3px;
        }

        .sidebar::-webkit-scrollbar-thumb:hover {
            background-color: #157347;
        }
        
        .sidebar a {
                display: flex;
                align-items: center;
                color: #198754;
                padding: 14px 20px;
                text-decoration: none;
                font-size: 15px;
                transition: 0.2s;
                font-size: 16px;
                font-weight:bold;
            }
            
        .sidebar a i {
                    width: 22px;
                    text-align: center;
                }
        
                .sidebar a:hover {
                    background: #42c74685;
                    color: #198754;
                    border-radius: 4px;
                }

                    .sidebar a:hover i {
                        color: #198754;
                    }

                .sidebar a.active {
                    background: #198754;
                    color: #fff;
                    border-radius: 4px;
                }

                    .sidebar a.active i {
                        color: #FFFFE0;
                    }

        .menu-label {
            color: #6c757d;
            font-size: 11px;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1px;
            padding: 12px 20px 8px 20px;
            margin-top: 8px;
            border-top: 1px solid #e9ecef;
        }

        .menu-label:first-of-type {
            border-top: none;
            margin-top: 0;
        }

        .content {
            margin-left: 250px;
            width: calc(100% - 250px);
            font-size: 16px;
            min-height: 100vh;
        }

        .main{
            border-radius: 12px;
            background-color: white;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .page-link{
            border: 1px solid #198754 !important;
            color: #198754 !important;
        }

        .page-item.active .page-link{
            background-color: #198754 !important;
            color: white !important;           
        }

        input:focus,
        select:focus,
        textarea:focus {
            border-color: #28a745 !important;
            box-shadow: 0 0 0 0.25rem rgba(40,167,69,0.25) !important;
        }

        .table {
            overflow-x: auto;
            -webkit-overflow-scrolling: touch; /* mượt trên mobile */
            scrollbar-width: thin; /* Firefox */
            scrollbar-color: #28a745 transparent; /* Firefox */
        }

            /* Chrome, Edge, Safari */
            .table::-webkit-scrollbar {
                height: 8px; /* chiều cao thanh scroll */
            }

            .table::-webkit-scrollbar-track {
                background: transparent;
            }

            .table::-webkit-scrollbar-thumb {
                background-color: #28a745;
                border-radius: 4px;
            }

                .table::-webkit-scrollbar-thumb:hover {
                    background-color: #28a745;
                }

        .search-wrapper i{
            color: #198754 !important;
        }

        label{
            font-weight: bold;
        }

    </style>
</head>

<body>

    <!-- SIDEBAR -->
    <div class="sidebar shadow-lg">
        <h4 class="pb-3 border-bottom text-center">
            <img src="~/images/logo.png" class="rounded-circle w-50 text-center" />
        </h4>

        @{
            var ctrl = ViewContext.RouteData.Values["controller"]?.ToString();
        }

        <!-- Dashboard -->
        <a asp-controller="Home" asp-action="Index"
           class="@(ctrl == "Home" ? "active" : "")">
            <i class="fa-solid fa-bars-progress me-2"></i>Dashboard
        </a>

        <!-- Hàng hóa -->
        <div class="menu-label">Hàng hóa</div>
        <a asp-controller="SanPham" asp-action="Index"
           class="@(ctrl == "SanPham" ? "active" : "")">
            <i class="fa-solid fa-box me-2"></i>Sản Phẩm
        </a>
        <a asp-controller="LoaiSP" asp-action="Index"
           class="@(ctrl == "LoaiSP" ? "active" : "")">
            <i class="fa-solid fa-tags me-2"></i>Loại Sản Phẩm
        </a>
        <a asp-controller="NhomSP" asp-action="Index"
           class="@(ctrl == "NhomSP" ? "active" : "")">
            <i class="fa-solid fa-layer-group me-2"></i>Nhóm Sản Phẩm
        </a>

        <!-- Thông tin cơ bản -->
        <div class="menu-label">Thông tin cơ bản</div>
        <a asp-controller="Hang" asp-action="Index"
           class="@(ctrl == "Hang" ? "active" : "")">
            <i class="fa-solid fa-industry me-2"></i>Hãng
        </a>
        <a asp-controller="Nuoc" asp-action="Index"
           class="@(ctrl == "Nuoc" ? "active" : "")">
            <i class="fa-solid fa-flag me-2"></i>Nước
        </a>

        <!-- Khách hàng & Đối tác -->
        <div class="menu-label">Khách hàng & Đối tác</div>
        <a asp-controller="KhachHang" asp-action="Index"
           class="@(ctrl == "KhachHang" ? "active" : "")">
            <i class="fa-solid fa-users me-2"></i>Khách Hàng
        </a>
        <a asp-controller="NhaCC" asp-action="Index"
           class="@(ctrl == "NhaCC" ? "active" : "")">
            <i class="fa-solid fa-truck me-2"></i>Nhà Cung Cấp
        </a>
        <a asp-controller="NhanVien" asp-action="Index"
           class="@(ctrl == "NhanVien" ? "active" : "")">
            <i class="fa-solid fa-user-tie me-2"></i>Nhân Viên
        </a>

        <!-- Giao dịch -->
        <div class="menu-label">Giao dịch</div>
        <a asp-controller="DonBanHang" asp-action="Index"
           class="@(ctrl == "DonBanHang" ? "active" : "")">
            <i class="fa-solid fa-shopping-cart me-2"></i>Đơn Bán Hàng
        </a>
        <a asp-controller="DonMuaHang" asp-action="Index"
           class="@(ctrl == "DonMuaHang" ? "active" : "")">
            <i class="fa-solid fa-shopping-bag me-2"></i>Đơn Mua Hàng
        </a>

        <!-- Địa lý -->
        <div class="menu-label">Địa lý</div>
        <a asp-controller="Tinh" asp-action="Index"
           class="@(ctrl == "Tinh" ? "active" : "")">
            <i class="fa-solid fa-map me-2"></i>Tỉnh / Thành phố
        </a>
        <a asp-controller="Xa" asp-action="Index"
           class="@(ctrl == "Xa" ? "active" : "")">
            <i class="fa-solid fa-map-location-dot me-2"></i>Xã / Phường
        </a>
    </div>

    <!-- CONTENT -->
    <div class="content p-4 d-flex flex-column">

        <main role="main" class="p-4 mb-4 flex-grow-1 main">
            @RenderBody()
        </main>

        <footer class="border-top text-muted pt-2 text-center">
            <div class="container">
                &copy; 2025 - QuanLyBanHang
            </div>
        </footer>

    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    @if (TempData["SuccessMessage"] != null)
    {
        <script>
            Swal.fire({
                icon: 'success',
                title: 'Thành công!',
                text: '@Html.Raw(TempData["SuccessMessage"])',
                showConfirmButton: false,
                timer: 2000,
                showClass: { popup: 'animate__animated animate__bounceIn' },
                hideClass: { popup: 'animate__animated animate__fadeOutUp' },
                didOpen: () => {
                    Swal.showLoading();
                }
            });
        </script>
    }
    else if (TempData["UpdateMessage"] != null)
    {
        <script>
            Swal.fire({
                icon: 'success',
                title: 'Đã cập nhật!',
                text: '@Html.Raw(TempData["UpdateMessage"])',
                showConfirmButton: false,
                timer: 2000,
                showClass: { popup: 'animate__animated animate__bounceIn' },
                hideClass: { popup: 'animate__animated animate__fadeOutUp' },
                didOpen: () => {
                    Swal.showLoading();
                }
            });
        </script>
    }
    else if (TempData["ErrorMessage"] != null)
    {
        <script>
            Swal.fire({
                icon: 'error',
                title: 'Lỗi!',
                text: '@Html.Raw(TempData["ErrorMessage"])',
                showConfirmButton: false,
                timer: 2000,
                showClass: { popup: 'animate__animated animate__bounceIn' },
                hideClass: { popup: 'animate__animated animate__fadeOutUp' }
            });
        </script>
    }

</body>
</html>
