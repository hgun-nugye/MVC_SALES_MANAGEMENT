@model IEnumerable<QuanLyBanHang.Models.TrangThaiBH>
@{
    ViewBag.Title = "Quản lý Trạng thái đơn hàng";
}

<style>
    .search-wrapper {
        position: relative;
        width: 100%;
        max-width: 400px;
    }

    .search-wrapper input {
        padding-left: 38px !important;
        border-radius: 8px;
        background: #f8f9fa;
    }

    .search-wrapper i {
        position: absolute;
        left: 12px;
        top: 50%;
        transform: translateY(-50%);
        pointer-events: none;
    }

    .table {
        overflow-x: auto;
        white-space: nowrap;
        width: 100%;
    }

    .table-hover tbody tr:hover {
        background-color: #f5faff;
        transition: 0.2s;
    }
</style>

<div class="container">
    <h4 class="mb-3 text-success">
        Danh sách Trạng thái đơn hàng
    </h4>

    <form id="Form" method="get" class="d-flex flex-wrap align-items-center justify-content-between mb-4 gap-3">
        <div class="search-wrapper flex-grow-1">
            <i class="fa fa-search"></i>
            <input id="searchBox" type="text" name="search" value="@ViewBag.Search" class="form-control" placeholder="Tìm mã hoặc tên trạng thái">
        </div>

        <div class="d-flex flex-wrap align-items-center gap-2">
            <button type="button" id="btnClear" class="btn btn-secondary"><i class="fa-solid fa-rotate-left"></i>Reset</button>
            <a href="@Url.Action("Create", "TrangThaiBH")" class="btn btn-success"><i class="fa-solid fa-circle-plus"></i> Add</a>
        </div>
    </form>

    <table class="table table-hover align-middle text-center shadow-sm">
        <thead class="table-success">
            <tr>
                <th class="w-25">Mã trạng thái</th>
                <th class="w-50">Tên trạng thái</th>
            </tr>
        </thead>
        <tbody class="text-start">
        @foreach (var item in Model)
        {
            <tr class="clickable-row" data-href="@Url.Action("Details", "TrangThaiBH", new { id = item.MaTTBH })">
                <td class="text-center">@item.MaTTBH</td>
                <td class="text-center">@item.TenTTBH</td>
            </tr>
        }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        function debounce(fn, delay) {
            let timer = null;
            return function () {
                const context = this, args = arguments;
                clearTimeout(timer);
                timer = setTimeout(() => fn.apply(context, args), delay);
            };
        }

        $("#searchBox").on("change", debounce(function () {
            $("#Form").submit();
        }, 400));

        $("#btnClear").on("click", function () {
            $("#searchBox").val("");
            $("#Form").submit();
        });

        document.addEventListener("DOMContentLoaded", function () {
            document.querySelectorAll(".clickable-row").forEach(row => {
                row.addEventListener("click", function () {
                    window.location = this.dataset.href;
                });
            });
        });
    </script>
}

