@model QuanLyBanHang.Models.NhaCCDetailView
@{
    ViewBag.Title = "Sửa Nhà Cung Cấp";
}

<div class="container">
    <h4 class="text-success mb-3">
       Sửa Thông Tin Nhà Cung Cấp
    </h4>

    <form asp-action="Edit" method="post" class="border p-4 rounded shadow-sm bg-light">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group mb-3">
            <label asp-for="MaNCC" class="form-label"></label>
            <input asp-for="MaNCC" class="form-control" readonly />
        </div>
        <div class="form-group mb-3">
            <label asp-for="TenNCC" class="form-label"></label>
            <input asp-for="TenNCC" class="form-control" />
            <span asp-validation-for="TenNCC" class="text-danger"></span>
        </div>
       <div class="row">
            <div class="form-group mb-3 col-md-6">
                <label asp-for="DienThoaiNCC" class="form-label"></label>
                <input asp-for="DienThoaiNCC" class="form-control" />
                <span asp-validation-for="DienThoaiNCC" class="text-danger"></span>
            </div>
            <div class="form-group mb-3 col-md-6">
                <label asp-for="EmailNCC" class="form-label"></label>
                <input asp-for="EmailNCC" class="form-control" />
                <span asp-validation-for="EmailNCC" class="text-danger"></span>
            </div>
       </div>
        
        <div class="form-group mb-3">
            <label asp-for="DiaChiNCC" class="form-label"></label>
            <input asp-for="DiaChiNCC" class="form-control mb-2" />
            <span asp-validation-for="DiaChiNCC" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label class="form-label">Tỉnh</label>
            <select id="MaTinh" name="maTinh" class="form-control" asp-items="@ViewBag.Tinh">
                <option value="">@Model.TenTinh</option>
            </select>
        </div>

        <div class="form-group mb-3">
            <label asp-for="MaXa" class="form-label"></label>
            <select id="MaXa" asp-for="MaXa" class="form-control" asp-items="@ViewBag.Xa">
                <option value="">@Model.TenXa</option>
            </select>
            <span asp-validation-for="MaXa" class="text-danger"></span>
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-warning text-white">
                <i class="fa-solid fa-save"></i> Cập nhật
            </button>
            <a asp-action="Details" asp-route-id="@Model.MaNCC" class="btn btn-secondary">
                <i class="fa-solid fa-arrow-left"></i> Quay lại
            </a>
        </div>

    </form>

    
</div>


@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        $(function () {

            // Khi chọn Tỉnh → load Xã
            $('#MaTinh').change(function () {
                var maTinh = $(this).val();

                $('#MaXa').html('<option value="">-- Chọn Xã --</option>');

                if (maTinh) {
                    $.getJSON('/KhachHang/GetXaByTinh', { maTinh: maTinh }, function (data) {

                        var options = '<option value="">-- Chọn Xã --</option>';

                        $.each(data, function (i, xa) {
                            options += `<option value="${xa.maXa}">${xa.tenXa}</option>`;
                        });

                        $('#MaXa').html(options);
                    });
                }
            });

            // Khi load trang → Tự chọn lại Xã đúng với Model.MaXa
            var selectedXa = "@Model.MaXa";
            if ($('#MaTinh').val()) {
                $('#MaTinh').trigger('change');

                setTimeout(() => {
                    $('#MaXa').val(selectedXa);
                }, 300);
            }
        });
    </script>
}
