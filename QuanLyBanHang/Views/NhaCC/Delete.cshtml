@model QuanLyBanHang.Models.NhaCCDetailView

@{
    ViewBag.Title = "Xóa Nhà Cung Cấp";
}

<style>
    .delete-card {
        background: white;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0,0,0,0.05);
        border: 1px solid rgba(220, 53, 69, 0.1);
        max-width: 800px;
        margin: 0 auto;
    }

    .warning-header {
        background: #fff5f5;
        padding: 2rem;
        border-bottom: 1px solid #ffe3e3;
        text-align: center;
    }

    .warning-icon {
        font-size: 3.5rem;
        color: #dc3545;
        margin-bottom: 1rem;
    }

    .info-display {
        padding: 2rem;
    }

    .info-row {
        display: flex;
        padding: 0.75rem 0;
        border-bottom: 1px solid #f8f9fa;
    }

    .info-label {
        width: 150px;
        font-weight: 700;
        color: #6c757d;
        font-size: 0.9rem;
        text-transform: uppercase;
    }

    .info-value {
        flex: 1;
        color: #2d3436;
        font-weight: 500;
    }

    .action-footer {
        padding: 1.5rem 2rem;
        background: #f8f9fa;
        display: flex;
        justify-content: center;
        gap: 1rem;
    }
</style>

<div class="container py-5">
    <div class="delete-card">
        <div class="warning-header">
            <div class="warning-icon">
                <i class="fa-solid fa-triangle-exclamation"></i>
            </div>
            <h4 class="text-danger fw-bold">Xác nhận xóa đối tác?</h4>
            <p class="text-muted mb-0">Hành động này không thể hoàn tác. Bạn có chắc chắn muốn xóa nhà cung cấp sau?</p>
        </div>

        <div class="info-display">
            <div class="info-row">
                <div class="info-label">Mã NCC</div>
                <div class="info-value">@Model.MaNCC</div>
            </div>
            <div class="info-row">
                <div class="info-label">Tên đối tác</div>
                <div class="info-value fw-bold">@Model.TenNCC</div>
            </div>
            <div class="info-row">
                <div class="info-label">Liên hệ</div>
                <div class="info-value">@Model.DienThoaiNCC | @Model.EmailNCC</div>
            </div>
            <div class="info-row">
                <div class="info-label">Địa chỉ</div>
                <div class="info-value">@Model.DiaChiNCC, @Model.TenXa, @Model.TenTinh</div>
            </div>
        </div>

        <div class="action-footer">
            <a asp-action="Details" asp-route-id="@Model.MaNCC" class="btn btn-light px-4">
                <i class="fa-solid fa-arrow-left me-2"></i> Quay lại
            </a>
            <form id="deleteForm" asp-action="Delete" method="post" style="display: inline;">
                <input type="hidden" asp-for="MaNCC" />
                <button type="button" class="btn btn-danger px-4 fw-bold" onclick="confirmDelete()">
                    <i class="fa-solid fa-trash-can me-2"></i> Xác nhận xóa
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function confirmDelete() {
            Swal.fire({
                title: 'Bạn chắc chắn chứ?',
                text: "Dữ liệu liên quan đến nhà cung cấp này có thể bị ảnh hưởng!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#dc3545',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Xóa',
                cancelButtonText: 'Hủy'
            }).then((result) => {
                if (result.isConfirmed) {
                    document.getElementById('deleteForm').submit();
                }
            });
        }
    </script>
}

