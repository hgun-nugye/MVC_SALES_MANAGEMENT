@model IEnumerable<QuanLyBanHang.Models.NhaCC>

@if (Model != null && Model.Any())
{
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.MaNCC</td>
            <td>@item.TenNCC</td>
            <td>@item.DienThoaiNCC</td>
            <td>@item.EmailNCC</td>
            <td>@item.DiaChiNCC</td>
            <td class="flex justify-content-between">
                <a class="btn btn-info btn-sm text-white" href="@Url.Action("Details", "NhaCC", new { id = item.MaNCC })">
                    <i class="fa-solid fa-eye"></i> Chi tiết
                </a>
                <a class="btn btn-warning btn-sm text-white" href="@Url.Action("Edit", "NhaCC", new { id = item.MaNCC })">
                    <i class="fa-solid fa-pen-to-square"></i> Sửa
                </a>
                <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", "NhaCC", new { id = item.MaNCC })">
                    <i class="fa-solid fa-trash"></i> Xóa
                </a>
            </td>
        </tr>
    }
}
else
{
    <tr>
        <td colspan="8" class="text-center text-muted fst-italic">Không có gian hàng nào.</td>
    </tr>
}
