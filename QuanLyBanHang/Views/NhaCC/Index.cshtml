@model IEnumerable<QuanLyBanHang.Models.NhaCCDetailView>

@{
    ViewBag.Title = "Quản lý Nhà Cung Cấp";
}

<style>
    .search-wrapper {
        position: relative;
        width: 100%;
        max-width: 400px;
    }

        .search-wrapper i {
            position: absolute;
            left: 12px;
            top: 50%;
            transform: translateY(-50%);
            pointer-events: none;
        }

        .search-wrapper input {
            padding-left: 38px !important;
            border-radius: 8px;
            background: #f8f9fa;
        }

    .table {
        overflow-x: auto;
        white-space: nowrap;
        width: 100%;
    }

    .table-hover tbody tr:hover {
        background-color: #f5faff;
        transition: 0.2s;
    }
</style>


<div class="container">
    <h4 class="mb-5 text-success">
        Danh sách Nhà Cung Cấp
    </h4>

    <!--  Form -->
    <form id="Form" method="get" class="d-flex flex-wrap align-items-center justify-content-between mb-4 gap-3">
        <div class="search-wrapper flex-grow-1">
            <i class="fa fa-search"></i>
            <input id="searchBox" type="text" name="search" value="@ViewBag.Search" class="form-control" placeholder="Tìm tên, mã nhà cung cấp, email...">
        </div>

        <div class="d-flex flex-wrap align-items-center gap-2">
            <!--  TỈNH -->
            <div class="d-flex align-items-center gap-2">
                <label class="w-100 text-end opacity-50">Tỉnh/Thành phố</label>
                <select asp-items="ViewBag.TinhList" id="tinh" name="tinh" class="form-select">
                    <option value="">-- Tỉnh --</option>
                </select>
            </div>

            <button type="button" id="btnClear" class="btn btn-secondary"><i class="fa-solid fa-rotate-left"></i>Reset</button>
            <a href="@Url.Action("Create", "NhaCC")" class="btn btn-success"><i class="fa-solid fa-circle-plus"></i> Add</a>
        </div>
    </form>

    <table class="table  table-hover align-middle shadow-sm">
        <thead class="table-success text-center">
            <tr>
                <th>Mã NCC</th>
                <th>Tên NCC</th>
                <th>Điện thoại</th>
                <th>Email</th>
                <th>Địa chỉ</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var item in Model)
                {
                    <tr class="clickable-row" data-href="@Url.Action("Details", "NhaCC", new { id = item.MaNCC })">

                        <td>@item.MaNCC</td>
                        <td>@item.TenNCC</td>
                        <td>@item.DienThoaiNCC</td>
                        <td>@item.EmailNCC</td>
                        <td>@item.DiaChiNCC, @item.TenXa, @item.TenTinh</td>

                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="8" class="text-center text-muted fst-italic">Không có nhà cung cấp nào.</td>
                </tr>
            }

        </tbody>
    </table>
</div>

@section Scripts {
    <script>
                // debounce function
            function debounce(fn, delay) {
                let timer = null;
                return function() {
                    const context = this, args = arguments;
                    clearTimeout(timer);
                    timer = setTimeout(() => fn.apply(context, args), delay);
                };
            }

        // khi thay đổi  -> submit form
        $("#searchBox").on("change", debounce(function(){
            $("#Form").submit();
        }, 400));

             // tinh vẫn submit ngay khi chọn
                $("#tinh").on("change", function () {
                    $("#Form").submit();
                });

        // clear form
        $("#btnClear").on("click", function(){
            $("#searchBox").val("");
            $("#tinh").val("");
            $("#Form").submit();
        });
    </script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            document.querySelectorAll(".clickable-row").forEach(row => {
                row.addEventListener("click", function () {
                    window.location = this.dataset.href;
                });
            });
        });
    </script>
}
