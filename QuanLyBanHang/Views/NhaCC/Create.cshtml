@model QuanLyBanHang.Models.NhaCC
@{
    ViewBag.Title = "Thêm Nhà Cung Cấp";
}


<div class=" container">
    <h4 class="text-success mb-3">
        Thêm Nhà Cung Cấp
    </h4>

    <form asp-action="Create" method="post" class="border p-4 rounded shadow-sm bg-light">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group mb-3">
            <label class="fw-bold">Tên NCC</label>
            <input asp-for="TenNCC" class="form-control" />
        </div>
        <div class="row">
            <div class="form-group mb-3 col-md-6">
                <label class="fw-bold">Điện thoại</label>
                <input asp-for="DienThoaiNCC" class="form-control" />
            </div>
            <div class="form-group mb-3 col-md-6">
                <label class="fw-bold">Email</label>
                <input asp-for="EmailNCC" class="form-control" />
            </div>
        </div>
        
         <!-- ĐỊA CHỈ -->
        <div class="form-group mb-3">
            <label>Địa chỉ</label>
            <input asp-for="DiaChiNCC" type="text" id="streetInput" class="form-control mb-2" placeholder="Số nhà, tên đường..." />            
        </div>

        <div class="form-group mb-2">
            <label>Tỉnh</label>
            <select id="MaTinh" name="maTinh" asp-items="@ViewBag.Tinh" class="form-control">
                <option value="">-- Chọn Tỉnh --</option>
            </select>
        </div>

        <div class="form-group mb-2">
            <label>Xã</label>
            <select id="MaXa" asp-for="MaXa" asp-items="@ViewBag.Xa" class="form-control">
                <option value="">-- Chọn Xã --</option>
            </select>
            <span asp-validation-for="MaXa" class="text-danger"></span>
        </div>

        <div class="mt-4">

            <button type="submit" class="btn btn-success">
                <i class="fa-solid fa-save"></i> Lưu
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fa-solid fa-arrow-left"></i> Quay lại
            </a>
        </div>
    </form>

    
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        $(function () {

                   $('#MaTinh').change(function () {
            var maTinh = $(this).val();
            $('#MaXa').empty().append('<option value="">-- Chọn Xã --</option>');

            if (maTinh) {
                $.ajax({
                    url: '/KhachHang/GetXaByTinh',
                    type: 'GET',
                    data: { maTinh: maTinh },
                    success: function (data) {
                        data.forEach(function (xa) {
                            $('#MaXa').append(
                                `<option value="${xa.maXa}">${xa.tenXa}</option>`
                            );
                        });
                    },
                    error: function () {
                        alert("Không load được danh sách xã!");
                    }
                });
            }
        });
        });

    </script>
}
