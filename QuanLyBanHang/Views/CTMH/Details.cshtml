@model IEnumerable<QuanLyBanHang.Models.CTMHDetailDto>


@{
    ViewBag.Title = "Chi tiết chi tiết mua hàng";
    var item = @Model.FirstOrDefault();
}

<div class=" container">
    <h2 class="mb-3 text-info">
        <i class="fa-solid fa-eye"></i> Chi tiết mua hàng - Đơn: @item.MaDMH
    </h2>

    <div class="card shadow-sm p-4 mb-3">
        <dl class="row">
            <dt class="col-sm-3">Mã sản phẩm</dt>
            <dd class="col-sm-9">@item.MaSP</dd>

            <dt class="col-sm-3">Tên sản phẩm</dt>
            <dd class="col-sm-9">@item.TenSP</dd>

            <dt class="col-sm-3">Số lượng</dt>
            <dd class="col-sm-9">@item.SLM</dd>

            <dt class="col-sm-3">Đơn giá</dt>
            <dd class="col-sm-9">@item.DGM.ToString("N")</dd>
        </dl>
    </div>
  
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-maDMH="@item.MaDMH" asp-route-maSP="@item.MaSP" class="btn btn-warning">
        <i class="fa-solid fa-pen-to-square"></i> Sửa
    </a>
    <a asp-action="Index" asp-route-maDMH="@item.MaDMH" class="btn btn-secondary">
        <i class="fa-solid fa-arrow-left"></i> Quay lại
    </a>

</div>