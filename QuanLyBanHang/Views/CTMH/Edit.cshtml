@model QuanLyBanHang.Models.CTMH
@{
    ViewBag.Title = "Sửa Chi tiết mua hàng";
}

<style>
    .form-card {
        background: white;
        border-radius: 20px;
        padding: 2.5rem;
        box-shadow: 0 10px 30px rgba(0,0,0,0.05);
        border: 1px solid #f0f4f2;
        max-width: 600px;
        margin: 2rem auto;
    }

    .form-label {
        font-weight: 700;
        color: #495057;
        margin-bottom: 0.5rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .form-control, .form-select {
        border-radius: 10px;
        padding: 0.75rem 1rem;
        border: 1.5px solid #dee2e6;
        transition: all 0.2s;
    }

    .form-control:focus, .form-select:focus {
        border-color: #198754;
        box-shadow: 0 0 0 0.25rem rgba(25, 135, 84, 0.1);
    }
</style>

<div class="container py-4">
    <div class="page-header text-center mb-4">
        <h4 class="fw-bold text-success">
            <i class="fa-solid fa-pen-to-square me-2"></i>
            Cập nhật chi tiết đơn mua
        </h4>
        <p class="text-muted">Mã Đơn: <span class="badge bg-success">@Model.MaDMH</span></p>
    </div>

    <div class="form-card">
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.MaDMH)
            
            @if (ViewContext.RouteData.Values["action"]?.ToString() == "Edit")
            {
                <input type="hidden" asp-for="MaSP" />
                <div class="mb-4">
                    <label class="form-label text-muted">Sản phẩm (Không thể đổi mã)</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light border-end-0"><i class="fa-solid fa-box text-success"></i></span>
                        <input value="@Model.MaSP" class="form-control bg-light border-start-0" readonly />
                    </div>
                </div>
            }
            else
            {
                <div class="mb-4">
                    <label asp-for="MaSP" class="form-label">Chọn sản phẩm</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light border-end-0"><i class="fa-solid fa-box text-success"></i></span>
                        @Html.DropDownListFor(m => m.MaSP, (SelectList)ViewBag.MaSP, "-- Chọn sản phẩm --", new { @class = "form-select border-start-0" })
                    </div>
                    @Html.ValidationMessageFor(m => m.MaSP, "", new { @class = "text-danger small" })
                </div>
            }

            <div class="mb-4">
                <label asp-for="SLM" class="form-label">Số lượng mua</label>
                <div class="input-group">
                    <span class="input-group-text bg-light border-end-0"><i class="fa-solid fa-calculator text-success"></i></span>
                    @Html.TextBoxFor(m => m.SLM, new { @class = "form-control border-start-0", type = "number", min = 1 })
                </div>
                @Html.ValidationMessageFor(m => m.SLM, "", new { @class = "text-danger small" })
            </div>

            <div class="mb-4">
                <label asp-for="DGM" class="form-label">Đơn giá nhập (₫)</label>
                <div class="input-group">
                    <span class="input-group-text bg-light border-end-0"><i class="fa-solid fa-tag text-success"></i></span>
                    @Html.TextBoxFor(m => m.DGM, new { @class = "form-control border-start-0", type = "number", step = 100 })
                </div>
                @Html.ValidationMessageFor(m => m.DGM, "", new { @class = "text-danger small" })
            </div>

            <div class="d-grid gap-2 mt-5">
                <button type="submit" class="btn btn-success py-2 fw-bold shadow-sm">
                    <i class="fa-solid fa-floppy-disk me-2"></i> Lưu thay đổi
                </button>
                <button type="button" onclick="history.back()" class="btn btn-outline-secondary py-2 fw-bold">
                    Hủy bỏ
                </button>
            </div>
        </form>
    </div>
</div>
