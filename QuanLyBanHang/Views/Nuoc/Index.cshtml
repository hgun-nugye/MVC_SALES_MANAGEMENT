@model IEnumerable<QuanLyBanHang.Models.Nuoc>

@{
    ViewBag.Title = "Quản lý Nước";
}

<style>
    .search-wrapper {
        position: relative;
        width: 100%;
        max-width: 400px;
    }

        .search-wrapper input {
            padding-left: 38px !important;
            border-radius: 8px;
            background: #f8f9fa;
        }

        .search-wrapper i {
            position: absolute;
            left: 12px;
            top: 50%;
            transform: translateY(-50%);
            pointer-events: none;
        }

    .table {
        overflow-x: auto;
        white-space: nowrap;
        width: 100%;
    }

    .table-hover tbody tr:hover {
        background-color: #f5faff;
        transition: 0.2s;
    }
</style>

<div class="container">
    <div class="page-header d-flex justify-content-between align-items-center">
        <h4 class="mb-0 fw-bold">
            <i class="fa-solid fa-earth-americas me-2"></i>
            Quản lý Quốc gia
        </h4>
        <div class="d-flex gap-2">
            <a href="@Url.Action("Index", "HangSX")" class="btn btn-outline-light fw-bold px-4">
                <i class="fa-solid fa-industry me-2"></i> Hãng SX
            </a>
            <a href="@Url.Action("Create", "Nuoc")" class="btn btn-light text-success fw-bold px-4">
                <i class="fa-solid fa-plus-circle me-2"></i> Thêm mới
            </a>
        </div>
    </div>

    <!-- FORM LỌC -->
    <div class="filter-card">
        <form id="Form" method="get" class="row g-3 align-items-end">
            <div class="col-lg-11">
                <label class="form-label small fw-bold text-muted text-uppercase">Tìm kiếm</label>
                <div class="search-input-group">
                    <i class="fa fa-search"></i>
                    <input id="searchBox" type="text" name="search" value="@ViewBag.Search"
                           class="form-control" placeholder="Tìm mã nước, tên nước...">
                </div>
            </div>
            <div class="col-lg-1 d-flex gap-2">
                <button type="button" id="btnClear" class="btn btn-outline-secondary btn-clear">
                    <i class="fa-solid fa-rotate-left"></i>
                </button>
            </div>
        </form>
    </div>


    <div class="table">
        <table class="table table-bordered table-hover align-middle text-center shadow-sm">
            <thead class="table-success">
                <tr>
                    <th class="w-25">Mã Nước</th>
                    <th class="w-25">Tên Nước</th>
                </tr>
            </thead>
            <tbody class="text-start">
                @if(Model!=null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr class="clickable-row"
                            data-href="@Url.Action("Details", "Nuoc", new { id = item.MaNuoc })"
                            data-manuoc="@item.MaNuoc"
                            data-tennuoc="@item.TenNuoc">

                            <td class=" text-center">@item.MaNuoc</td>
                            <td class="text-center">@item.TenNuoc</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="2 " class="text-center text-muted fst-italic">Không có quốc gia nào.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="d-flex justify-content-end">
        <a asp-action="Index" asp-controller="HangSX" class="btn btn-secondary">
            <i class="fa-solid fa-arrow-left"></i> Quay lại
        </a>
    </div>
</div>

@section Scripts {
    <script>
        // debounce function
        function debounce(fn, delay) {
            let timer = null;
            return function() {
                const context = this, args = arguments;
                clearTimeout(timer);
                timer = setTimeout(() => fn.apply(context, args), delay);
            };
        }

        // áp dụng cho searchBox
        $("#searchBox").on("change", debounce(function() {
            $("#Form").submit();
        }, 400));

        // clear
        $("#btnClear").on("click", function () {
            $("#searchBox").val("");
            $("#Form").submit();
        });
    </script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            document.querySelectorAll(".clickable-row").forEach(row => {
                row.addEventListener("click", function () {
                    window.location = this.dataset.href;
                });
            });
        });
    </script>
}
