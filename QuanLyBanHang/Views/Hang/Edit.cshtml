@model QuanLyBanHang.Models.Hang
@{
    ViewBag.Title = "Sửa Hãng";
}

<div class="container ">
    <h4 class="text-success mb-3">
        Sửa Thông Tin Hãng
    </h4>

    <form asp-action="Edit" method="post" class="border p-4 rounded shadow-sm bg-light">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group mb-3">
            <label asp-for="MaHang" class="form-label"></label>
            <input asp-for="MaHang" class="form-control" readonly />
        </div>
        <div class="form-group mb-3">
            <label asp-for="TenHang" class="form-label"></label>
            <input asp-for="TenHang" class="form-control" />
            <span asp-validation-for="TenHang" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="MaNuoc" class="form-label"></label>
            <select asp-for="MaNuoc" asp-items="ViewBag.MaNuoc" class="form-select">
                <option value="">-- Chọn nước --</option>
            </select>
            <span asp-validation-for="MaNuoc" class="text-danger"></span>
        </div>

        <div class="mt-4 d-flex gap-2">
            <button type="submit" class="btn btn-warning text-white">
                <i class="fa-solid fa-save"></i> Cập nhật
            </button>
            <a asp-action="Details" asp-route-id="@Model.MaHang" class="btn btn-secondary">
                <i class="fa-solid fa-arrow-left"></i> Quay lại
            </a>
        </div>
    </form>

    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
