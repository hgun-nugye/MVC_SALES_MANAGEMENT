@model List<QuanLyBanHang.Models.DonMuaHangDetail>

@{
    ViewBag.Title = "Xóa Đơn mua hàng";
}

<div class="container">
    <h4 class="mb-3 text-danger">
        Xóa Đơn mua hàng
    </h4>

    <div class="alert alert-warning">
        <i class="fa-solid fa-triangle-exclamation"></i>
        Bạn có chắc chắn muốn xóa đơn mua hàng <strong>@Model.First().MaDMH</strong> không?
    </div>

    <div class="card shadow-sm p-4">
        <dl class="row">
            <dt class="col-sm-3">Mã đơn mua hàng:</dt>
            <dd class="col-sm-9">@Model.First().MaDMH</dd>

            <dt class="col-sm-3">Ngày mua hàng:</dt>
            <dd class="col-sm-9">@Model.First().NgayMH.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3">Nhà cung cấp:</dt>
            <dd class="col-sm-9">@Model.First().TenNCC</dd>
        </dl>

        <form id="deleteForm" asp-action="Delete" method="post" class="mt-4">
            <input type="hidden" name="id" value="@Model.First().MaDMH" />
            <button type="button" class="btn btn-danger me-2" onclick="confirmDelete()">
                <i class="fa-solid fa-trash-can me-2"></i> Xóa
            </button>
            <a asp-action="Details" asp-route-id="@Model.First().MaDMH" class="btn btn-secondary">
                <i class="fa-solid fa-arrow-left me-2"></i> Quay lại
            </a>
        </form>
    </div>
</div>

@section Scripts {
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script>
            function confirmDelete() {
                Swal.fire({
                    title: 'Xác nhận xóa?',
                    text: 'Bạn có chắc chắn muốn xóa đơn mua hàng này?',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Xóa',
                    cancelButtonText: 'Hủy',
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#3085d6'
                }).then((result) => {
                    if (result.isConfirmed) {
                        document.getElementById('deleteForm').submit();
                    }
                });
            }
        </script>
}
