@model IEnumerable<QuanLyBanHang.Models.DonMuaHangDetail>

@{
    ViewBag.Title = "Quản lý Đơn mua hàng";
}

<style>
    /* Search box đẹp như Đơn bán hàng */
    .search-wrapper {
        position: relative;
        width: 100%;
        max-width: 400px;
    }

        .search-wrapper i {
            position: absolute;
            left: 12px;
            top: 50%;
            transform: translateY(-50%);
            font-size: 15px;
            pointer-events: none;
        }

        .search-wrapper input {
            padding-left: 38px !important;
            border-radius: 8px;
        }

            .search-wrapper input:focus {
                box-shadow: 0 0 0 3px rgba(13,110,253,0.25);
            }
</style>


<div class="container">
    @{
        bool isCustomer = ViewBag.IsCustomer == true;
    }
    <div class="d-flex flex-wrap align-items-center justify-content-between gap-2">
        <h4 class="mb-5 text-success">
            Danh sách Đơn mua hàng
        </h4>

        @if (!isCustomer)
        {
            <a href="@Url.Action("Index", "TrangThaiMH")" class="btn btn-success mb-5">
                <i class="fa-solid fa-list-check"></i> Quản lý trạng thái mua hàng
            </a>
        }
    </div>
    <!-- FORM LỌC -->
    <form id="Form" method="get"
          class="d-flex flex-wrap align-items-center justify-content-between mb-4 gap-3">

        <!-- SEARCH BOX -->
        <div class="search-wrapper flex-grow-1">
            <i class="fa fa-search"></i>
            <input id="searchBox" type="text" name="search" value="@ViewBag.Search"
                   class="form-control bg-light"
                   placeholder="Tìm đơn hàng, nhà cung cấp, ngày mua...">
        </div>

        <!--  GROUP -->
        <div class="d-flex flex-wrap align-items-center gap-2">

            <div class="d-flex align-items-center gap-2">
                <!-- THÁNG -->
                <select name="month" id="monthSelect" class="form-select" style="width: 130px;">
                    <option value="">-- Tháng --</option>
                    @for (int i = 1; i <= 12; i++)
                    {
                        @Html.Raw($"<option value='{i}' {(ViewBag.Month == i ? "selected" : "")}>Tháng {i}</option>")
                    }
                </select>

                <!-- NĂM -->
                <select name="year" id="yearSelect" class="form-select" style="width: 130px;">
                    <option value="">-- Năm --</option>
                    @for (int y = DateTime.Now.Year; y >= DateTime.Now.Year - 10; y--)
                    {
                        @Html.Raw($"<option value='{y}' {(ViewBag.Year == y ? "selected" : "")}>{y}</option>")
                    }
                </select>
            </div>

            <button type="button" id="btnClear" class="btn btn-secondary">
                <i class="fa-solid fa-rotate-left"></i> Xóa
            </button>

            <a href="@Url.Action("Create", "DonMuaHang")" class="btn btn-success">
                <i class="fa-solid fa-circle-plus"></i> Thêm
            </a>
        </div>
    </form>


    <!-- TABLE -->
    <div id="tableContainer">
        <table class="table  table-hover align-middle shadow-sm">
            <thead class="table-success text-center">
                <tr>
                    <th>Mã Đơn</th>
                    <th>Ngày mua</th>
                    <th>Mã Nhà cung cấp</th>
                    <th>Tên Nhà cung cấp</th>
                </tr>
            </thead>
            <tbody id="tableBody">
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr class="clickable-row" data-href="@Url.Action("Details", "DonMuaHang", new { id = item.MaDMH })">

                            <td class="text-center">@item.MaDMH</td>
                            <td class="text-center">@item.NgayMH.ToString("dd/MM/yyyy")</td>
                            <td class="text-center">@item.MaNCC</td>
                            <td class="text-center">@item.TenNCC</td>

                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-muted fst-italic">Không có đơn hàng nào.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
            // debounce function
            function debounce(fn, delay) {
                let timer = null;
                return function() {
                    const context = this, args = arguments;
                    clearTimeout(timer);
                    timer = setTimeout(() => fn.apply(context, args), delay);
                };
            }

        // khi thay đổi  -> submit form
        $("#searchBox, #monthSelect, #yearSelect").on("change", debounce(function(){
            $("#Form").submit();
        }, 400));

        // clear 
        $("#btnClear").on("click", function(){
            $("#searchBox").val("");
            $("#monthSelect").val("");
            $("#yearSelect").val("");
            $("#Form").submit();
        });
    </script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            document.querySelectorAll(".clickable-row").forEach(row => {
                row.addEventListener("click", function () {
                    window.location = this.dataset.href;
                });
            });
        });
    </script>
}