@model IEnumerable<QuanLyBanHang.Models.DonMuaHang>

@{
    ViewBag.Title = "Quản lý Đơn mua hàng";
    int totalPages = ViewBag.TotalPages;
    int currentPage = ViewBag.PageNumber;
    int pageWindow = 5; // số trang xung quanh current
    int startPage = Math.Max(1, currentPage - pageWindow);
    int endPage = Math.Min(totalPages, currentPage + pageWindow);
}

<style>
    /* Search box đẹp như Đơn bán hàng */
    .search-wrapper {
        position: relative;
        width: 100%;
        max-width: 400px;
    }

        .search-wrapper i {
            position: absolute;
            left: 12px;
            top: 50%;
            transform: translateY(-50%);
            color: #0d6efd;
            font-size: 15px;
            pointer-events: none;
        }

        .search-wrapper input {
            padding-left: 38px !important;
            border-radius: 8px;
        }

            .search-wrapper input:focus {
                box-shadow: 0 0 0 3px rgba(13,110,253,0.25);
                border-color: #0d6efd;
            }
</style>


<div class="container">
    <h4 class="mb-5 text-success">
        <i class="fa-solid fa-file-invoice pe-2"></i> Danh sách Đơn mua hàng
    </h4>

    <!-- FORM LỌC -->
    <form id="filterForm" method="get"
          class="d-flex flex-wrap align-items-center justify-content-between mb-4 gap-3">

        <!-- SEARCH BOX -->
        <div class="search-wrapper flex-grow-1">
            <i class="fa fa-search"></i>
            <input id="searchBox" type="text" name="search" value="@ViewBag.Search"
                   class="form-control bg-light"
                   placeholder="Tìm đơn hàng, nhà cung cấp, ngày mua...">
        </div>

        <!-- FILTER GROUP -->
        <div class="d-flex flex-wrap align-items-center gap-2">

            <!-- THÁNG -->
            <select name="month" id="monthSelect" class="form-select" style="width: 130px;">
                <option value="">-- Tháng --</option>
                @for (int i = 1; i <= 12; i++)
                {
                    @Html.Raw($"<option value='{i}' {(ViewBag.Month == i ? "selected" : "")}>Tháng {i}</option>")
                }
            </select>

            <!-- NĂM -->
            <select name="year" id="yearSelect" class="form-select" style="width: 130px;">
                <option value="">-- Năm --</option>
                @for (int y = DateTime.Now.Year; y >= DateTime.Now.Year - 10; y--)
                {
                    @Html.Raw($"<option value='{y}' {(ViewBag.Year == y ? "selected" : "")}>{y}</option>")
                }
            </select>

            <button type="submit" class="btn btn-primary">
                <i class="fa fa-filter"></i> Lọc
            </button>

            <button type="button" id="btnClearFilter" class="btn btn-secondary">
                <i class="fa-solid fa-rotate-left"></i> Xóa
            </button>

            <a href="@Url.Action("Create", "DonMuaHang")" class="btn btn-success">
                <i class="fa-solid fa-circle-plus"></i> Thêm
            </a>
        </div>

        <!-- Hidden inputs giữ state -->
        <input type="hidden" name="pageNumber" id="pageNumberInput" value="@currentPage" />
        <input type="hidden" name="pageSize" id="pageSizeInput" value="@ViewBag.PageSize" />
    </form>


    <!-- TABLE -->
    <div id="tableContainer">
        <table class="table table-bordered table-hover align-middle text-center shadow-sm">
            <thead class="table-primary">
                <tr>
                    <th>Mã Đơn</th>
                    <th>Ngày mua</th>
                    <th>Mã Nhà cung cấp</th>
                    <th>Tên Nhà cung cấp</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody id="tableBody">
                @await Html.PartialAsync("DonMuaHangTable", Model)
            </tbody>
        </table>
    </div>

    <!-- Pagination + PageSize -->
    <div class="d-flex justify-content-between align-items-center mt-2">
        <!-- PageSize bên trái -->
        <div class="d-flex align-items-center gap-2">
            <label for="pageSizeSelect">Hiển thị:</label>
            <select id="pageSizeSelect" class="form-select" style="width:120px;">
                @foreach (int size in new int[] { 5, 10, 20, 50 })
                {
                    @Html.Raw($"<option value='{size}' {(ViewBag.PageSize == size ? "selected" : "")}>{size} /page</option>")
                }
            </select>
        </div>

        <!-- Pagination numbers bên phải -->
        <nav>
            <ul class="pagination mb-0">
                @if (currentPage > 1)
                {
                    <li class="page-item"><a class="page-link" href="#" onclick="changePage(1); return false;">&laquo;</a></li>
                }

                @if (currentPage - pageWindow > 1)
                {
                    <li class="page-item"><a class="page-link" href="#" onclick="changePage(1); return false;">1</a></li>
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                }

                @for (int i = startPage; i <= endPage; i++)
                {
                    <li class="page-item @(currentPage == i ? "active bg-success" : "")">
                        <a class="page-link @(currentPage == i ? "text-white" : "")" href="#" onclick="changePage(@i); return false;">@i</a>
                    </li>
                }

                @if (currentPage + pageWindow < totalPages)
                {
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                    <li class="page-item"><a class="page-link" href="#" onclick="changePage(@totalPages); return false;">@totalPages</a></li>
                }

                @if (currentPage < totalPages)
                {
                    <li class="page-item"><a class="page-link" href="#" onclick="changePage(@totalPages); return false;">&raquo;</a></li>
                }
            </ul>
        </nav>
    </div>
</div>

@section Scripts {
    <script>
            // debounce function
            function debounce(fn, delay) {
                let timer = null;
                return function() {
                    const context = this, args = arguments;
                    clearTimeout(timer);
                    timer = setTimeout(() => fn.apply(context, args), delay);
                };
            }

        // khi thay đổi filter -> submit form
        $("#searchBox, #monthSelect, #yearSelect").on("change keyup", debounce(function(){
            $("#pageNumberInput").val(1);
            $("#filterForm").submit();
        }, 400));

        // pageSize change
        $("#pageSizeSelect").on("change", function(){
            $("#pageSizeInput").val($(this).val());
            $("#pageNumberInput").val(1);
            $("#filterForm").submit();
        });

        // pagination
        function changePage(page){
            $("#pageNumberInput").val(page);
            $("#filterForm").submit();
        }

        // clear filter
        $("#btnClearFilter").on("click", function(){
            $("#searchBox").val("");
            $("#monthSelect").val("");
            $("#yearSelect").val("");
            $("#pageSizeInput").val(10);
            $("#pageNumberInput").val(1);
            $("#filterForm").submit();
        });
    </script>
}