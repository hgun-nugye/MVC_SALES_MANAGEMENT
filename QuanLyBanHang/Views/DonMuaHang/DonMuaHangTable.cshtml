@model IEnumerable<QuanLyBanHang.Models.DonMuaHang>

@if (Model != null && Model.Any())
{
    foreach (var item in Model)
    {
        <tr>
            <td>@item.MaDMH</td>
            <td>@item.NgayMH.ToString("dd/MM/yyyy")</td>
            <td>@item.MaNCC</td>
            <td>@item.TenNCC</td>
            <td>
                <a class="btn btn-info btn-sm text-white" href="@Url.Action("Details", "DonMuaHang", new { id = item.MaDMH })">
                    <i class="fa-solid fa-eye"></i> Chi tiết
                </a>
                <a class="btn btn-warning btn-sm text-white" href="@Url.Action("Edit", "DonMuaHang", new { id = item.MaDMH })">
                    <i class="fa-solid fa-pen-to-square"></i> Sửa
                </a>
                <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", "DonMuaHang", new { id = item.MaDMH })">
                    <i class="fa-solid fa-trash"></i> Xóa
                </a>
            </td>
        </tr>
    }
}
else
{
    <tr>
        <td colspan="5" class="text-muted fst-italic">Không có đơn hàng nào.</td>
    </tr>
}
