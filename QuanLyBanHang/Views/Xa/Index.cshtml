@model IEnumerable<QuanLyBanHang.Models.XaDTO>

@{
    ViewBag.Title = "Quản lý Xã";
}

<style>
    .search-wrapper {
        position: relative;
        width: 100%;
        max-width: 400px;
    }

        .search-wrapper input {
            padding-left: 38px !important;
            border-radius: 8px;
            background: #f8f9fa;
        }

        .search-wrapper i {
            position: absolute;
            left: 12px;
            top: 50%;
            transform: translateY(-50%);
            pointer-events: none;
        }

    .table {
        overflow-x: auto;
        white-space: nowrap;
        width: 100%;
    }

    .table-hover tbody tr:hover {
        background-color: #f5faff;
        transition: 0.2s;
    }
</style>

<div class="container">
   
    <div class="page-header d-flex justify-content-between align-items-center">
        <h4 class="mb-0 fw-bold">
            <i class="fa-solid fa-map-pin me-2"></i>
            Quản lý Xã / Phường
        </h4>
        <div class="d-flex gap-2">
            <a href="@Url.Action("Index", "Tinh")" class="btn btn-outline-light fw-bold px-4">
                <i class="fa-solid fa-map-location-dot me-2"></i> Tỉnh / Thành
            </a>
            <a href="@Url.Action("Create", "Xa")" class="btn btn-light text-success fw-bold px-4">
                <i class="fa-solid fa-plus-circle me-2"></i> Thêm
            </a>
        </div>
    </div>

    <!-- FORM LỌC -->
    <div class="filter-card">
        <form id="Form" method="get" class="row g-3 align-items-end">
            <div class="col-lg-5">
                <label class="form-label small fw-bold text-muted text-uppercase">Tìm kiếm</label>
                <div class="search-input-group">
                    <i class="fa fa-search"></i>
                    <input id="searchBox" type="text" name="search" class="form-control" placeholder="Tìm tên, mã xã...">
                </div>
            </div>
            <div class="col-lg-5">
                <label class="form-label small fw-bold text-muted text-uppercase">Tỉnh / Thành phố</label>
                 <select asp-items="ViewBag.TinhList" name="maTinh" class="form-select" id="maTinhSelect">
                    <option value="">-- Tất cả --</option>
                </select>
            </div>

            <div class="col-lg-2 d-flex gap-2">
                <button type="button" id="btnClear" class="btn btn-outline-secondary btn-clear">
                    <i class="fa-solid fa-rotate-left"></i>
                </button>
            </div>
        </form>
    </div>

   <div class="table">
        <table class="table table-bordered table-hover align-middle text-center shadow-sm">
            <thead class="table-success">
                <tr>
                    <th class="w-15">Mã Xã</th>
                    <th class="w-25">Tên Xã</th>
                    <th class="w-15">Mã Tỉnh</th>
                    <th class="w-25">Tên Tỉnh</th>
                </tr>
            </thead>
            <tbody class="text-start">
                @foreach (var item in Model)
                {
                    <tr class="clickable-row"
                        data-href="@Url.Action("Details", "Xa", new { id = item.MaXa })"
                        data-tenxa="@item.TenXa"
                        data-maxa="@item.MaXa"
                        data-matinh="@item.MaTinh"
                        data-tentinh="@item.TenTinh">


                        <td class=" text-center">@item.MaXa</td>
                        <td>@item.TenXa</td>
                        <td class=" text-center">@item.MaTinh</td>
                        <td>@item.TenTinh</td>
                    </tr>
                }
            </tbody>
        </table>
   </div>
</div>

@section Scripts {
    <script>
        // --- Hàm lọc bảng ---
        function filterTable() {
            let search = document.getElementById("searchBox").value.toLowerCase().trim();
            let tinh = document.getElementById("maTinhSelect").value;

            document.querySelectorAll("tbody tr").forEach(row => {
                let tenXa   = row.dataset.tenxa.toLowerCase();
                let maXa    = row.dataset.maxa.toLowerCase();
                let maTinh  = row.dataset.matinh;
                let tenTinh = row.dataset.tentinh.toLowerCase();

                let matchSearch =
                    tenXa.includes(search) ||
                    maXa.includes(search) ||
                    tenTinh.includes(search) ||
                    maTinh.includes(search);

                let matchTinh =
                    tinh === "" || maTinh === tinh;

                row.style.display = (matchSearch && matchTinh) ? "" : "none";
            });
        }

        // --- Sự kiện ---
        document.getElementById("searchBox").addEventListener("input", filterTable);
        document.getElementById("maTinhSelect").addEventListener("change", filterTable);

        // --- Nút reset ---
        document.getElementById("btnClear").addEventListener("click", function () {
            document.getElementById("searchBox").value = "";
            document.getElementById("maTinhSelect").value = "";
            filterTable();
        });

        // clickable row giữ nguyên
        document.addEventListener("DOMContentLoaded", function () {
            document.querySelectorAll(".clickable-row").forEach(row => {
                row.addEventListener("click", function () {
                    window.location = this.dataset.href;
                });
            });
        });
    </script>
}
