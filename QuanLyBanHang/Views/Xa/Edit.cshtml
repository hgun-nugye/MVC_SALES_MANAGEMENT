@model QuanLyBanHang.Models.Xa
@{
    ViewBag.Title = "Sửa Xã";
}

<div class=" container">
    <h4 class="text-success mb-3">
        Sửa Thông Tin Xã
    </h4>

    <form asp-action="Edit" method="post" class="border p-4 rounded shadow-sm bg-light">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group mb-3">
            <label asp-for="MaXa" class="form-label"></label>
            <input asp-for="MaXa" class="form-control" readonly />
        </div>
        <div class="form-group mb-3">
            <label asp-for="TenXa" class="form-label"></label>
            <input asp-for="TenXa" class="form-control" />
            <span asp-validation-for="TenXa" class="text-danger"></span>
        </div>
      
        <div class="form-group mb-3">
            <label asp-for="MaTinh" class="form-label"></label>
            <select asp-for="MaTinh" class="form-control" asp-items="@ViewBag.MaTinhList">
                <option value="">@Model.TenTinh</option>
            </select>
            <span asp-validation-for="MaTinh" class="text-danger"></span>
        </div>

        <div class="mt-4 d-flex gap-2">
            <button type="submit" class="btn btn-warning text-white">
                <i class="fa-solid fa-save"></i> Cập nhật
            </button>
            <a asp-action="Details" asp-route-id="@Model.MaXa" class="btn btn-secondary">
                <i class="fa-solid fa-arrow-left"></i> Quay lại
            </a>
        </div>
    </form>

   
</div>
