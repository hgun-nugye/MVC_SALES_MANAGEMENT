@model QuanLyBanHang.Models.PhanQuyen

@{
    ViewBag.Title = "Xóa Phân quyền";
}

<div class="container">
    <h4 class="text-danger mb-3">
        Xóa Phân quyền
    </h4>

    <div class="alert alert-warning shadow-sm">
        <i class="fa-solid fa-triangle-exclamation"></i>
        Bạn có chắc muốn xóa phân quyền <strong>@(Model.VaiTro?.TenVT ?? Model.MaVT)</strong> của nhân viên <strong>@(Model.NhanVien?.TenNV ?? Model.MaNV)</strong> không?
    </div>

    <div class="border p-4 rounded shadow-sm bg-light">
        <p><strong>@Html.DisplayNameFor(m => m.MaVT):</strong> @Model.MaVT</p>
        <p><strong>Tên vai trò:</strong> @(Model.VaiTro?.TenVT ?? "")</p>
        <p><strong>@Html.DisplayNameFor(m => m.MaNV):</strong> @Model.MaNV</p>
        <p><strong>Tên nhân viên:</strong> @(Model.NhanVien?.TenNV ?? "")</p>
    </div>

    <form id="deleteForm" asp-action="Delete" method="post" class="mt-4">
        <input type="hidden" asp-for="MaVT" />
        <input type="hidden" asp-for="MaNV" />
        <button type="button" class="btn btn-danger" onclick="confirmDelete()">
            <i class="fa-solid fa-trash-can me-2"></i> Xóa
        </button>
        <a asp-action="Details" asp-route-maVT="@Model.MaVT" asp-route-maNV="@Model.MaNV" class="btn btn-secondary">
            <i class="fa-solid fa-arrow-left"></i> Quay lại
        </a>
    </form>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function confirmDelete() {
            Swal.fire({
                title: 'Xác nhận xóa?',
                text: 'Bạn có chắc chắn muốn xóa phân quyền này?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Xóa',
                cancelButtonText: 'Hủy',
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6'
            }).then((result) => {
                if (result.isConfirmed) {
                    document.getElementById('deleteForm').submit();
                }
            });
        }
    </script>
}

