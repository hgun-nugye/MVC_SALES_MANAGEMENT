@model QuanLyBanHang.Models.PhanQuyen
@{
    ViewBag.Title = "Chi tiết Phân quyền";
}

<div class="container">
    <h4 class="text-success mb-3">
        Chi tiết Phân quyền
    </h4>

    <div class="border p-4 rounded shadow-sm bg-light">
        <p><strong>@Html.DisplayNameFor(m => m.MaVT):</strong> @Model.MaVT</p>
        <p><strong>Tên vai trò:</strong> @(Model.VaiTro?.TenVT ?? "")</p>
        <p><strong>@Html.DisplayNameFor(m => m.MaNV):</strong> @Model.MaNV</p>
        <p><strong>Tên nhân viên:</strong> @(Model.NhanVien?.TenNV ?? "")</p>
    </div>

    <div class="mt-4">
        <a class="btn btn-warning text-white me-2" href="@Url.Action("Edit", "PhanQuyen", new { maVT = Model.MaVT, maNV = Model.MaNV })">
            <i class="fa-solid fa-pen-to-square"></i> Sửa
        </a>
        <a class="btn btn-danger me-2 text-white" href="@Url.Action("Delete", "PhanQuyen", new { maVT = Model.MaVT, maNV = Model.MaNV })">
            <i class="fa-solid fa-trash"></i> Xóa
        </a>
        <button type="button" onclick="history.back()" class="btn btn-secondary">
            <i class="fa-solid fa-arrow-left"></i> Quay lại
        </button>
    </div>
</div>

