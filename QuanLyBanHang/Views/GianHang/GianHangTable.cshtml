@model IEnumerable<QuanLyBanHang.Models.GianHang>   

@if (Model != null && Model.Any())
{
    foreach (var item in Model)
    {
        <tr>
            <td>@item.MaGH</td>
            <td>@item.TenGH</td>
            <td>@item.MoTaGH</td>
            <td>@item.NgayTao.ToString("dd/MM/yyyy")</td>
            <td>@item.DienThoaiGH</td>
            <td>@item.EmailGH</td>
            <td>@item.DiaChiGH</td>
            <td>
                <a class="btn btn-info btn-sm text-white" href="@Url.Action("Details", "GianHang", new { id = item.MaGH })">
                    <i class="fa-solid fa-eye"></i> Chi tiết
                </a>
                <a class="btn btn-warning btn-sm text-white" href="@Url.Action("Edit", "GianHang", new { id = item.MaGH })">
                    <i class="fa-solid fa-pen-to-square"></i> Sửa
                </a>
                <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", "GianHang", new { id = item.MaGH })">
                    <i class="fa-solid fa-trash"></i> Xóa
                </a>
            </td>
        </tr>
    }
}
else
{
    <tr>
        <td colspan="8" class="text-center text-muted fst-italic">Không có gian hàng nào.</td>
    </tr>
}
