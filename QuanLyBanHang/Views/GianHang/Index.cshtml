@model IEnumerable<QuanLyBanHang.Models.GianHang>
@{
    ViewBag.Title = "Quản lý Gian Hàng";
    int totalPages = ViewBag.TotalPages;
    int currentPage = ViewBag.PageNumber;
    int pageWindow = 5; // số trang xung quanh current
    int startPage = Math.Max(1, currentPage - pageWindow);
    int endPage = Math.Min(totalPages, currentPage + pageWindow);
}
<style>
    .search-wrapper {
        position: relative;
        width: 100%;
        max-width: 400px;
    }

        .search-wrapper i {
            position: absolute;
            left: 12px;
            top: 50%;
            transform: translateY(-50%);
            color: #0d6efd;
            pointer-events: none;
        }

        .search-wrapper input {
            padding-left: 38px !important;
            border-radius: 8px;
            background: #f8f9fa;
        }

            .search-wrapper input:focus {
                border-color: #0d6efd;
                box-shadow: 0 0 0 3px rgba(13,110,253,0.25);
            }

    .table {
        overflow-x: auto;
        white-space: nowrap;
        width: 100%;
    }    

    .table-hover tbody tr:hover {
        background-color: #f5faff;
        transition: 0.2s;
    }
</style>

<div class="container">
    <h4 class="mb-4 text-success">
        <i class="fa-solid fa-truck"></i> Danh sách Gian hàng
    </h4>

    <!-- Filter Form -->
    <form id="filterForm" method="get" class="d-flex flex-wrap align-items-center justify-content-between mb-4 gap-3">
        <div class="search-wrapper flex-grow-1">
            <i class="fa fa-search"></i>
            <input id="searchBox" type="text" name="search" value="@ViewBag.Search" class="form-control" placeholder="Tìm tên, mã GH, email...">
        </div>

        <div class="d-flex flex-wrap align-items-center gap-2">
                <!-- FILTER TỈNH -->
                <div class="d-flex align-items-center gap-2">
                    <label class="w-100 text-end opacity-50">Tỉnh/Thành phố</label>
                    <select id="provinceFilter" name="province" class="form-select">
                        <option value="">-- Tất cả --</option>
                    </select>
                </div>

            <button type="button" id="btnClearFilter" class="btn btn-secondary"><i class="fa-solid fa-rotate-left"></i> Xóa</button>
            <a href="@Url.Action("Create","GianHang")" class="btn btn-success"><i class="fa-solid fa-circle-plus"></i> Thêm</a>
        </div>

        <!-- Hidden inputs giữ state -->
        <input type="hidden" name="pageNumber" id="pageNumberInput" value="@currentPage" />
        <input type="hidden" name="pageSize" id="pageSizeInput" value="@ViewBag.PageSize" />
    </form>

    <!-- Table -->
    <div class="table">
        <table class="table table-bordered table-hover align-middle text-center shadow-sm w-100">
            <thead class="table-success">
                <tr>
                    <th>Mã GH</th>
                    <th>Tên GH</th>
                    <th>Mô tả</th>
                    <th>Ngày tạo</th>
                    <th>Điện thoại</th>
                    <th>Email</th>
                    <th>Địa chỉ</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody id="tableBody">
                @await Html.PartialAsync("GianHangTable", Model)
            </tbody>
        </table>
    </div>

    <!-- Pagination + PageSize -->
    <div class="d-flex justify-content-between align-items-center mt-2">
        <!-- PageSize bên trái -->
        <div class="d-flex align-items-center gap-2">
            <label for="pageSizeSelect">Hiển thị:</label>
            <select id="pageSizeSelect" class="form-select" style="width:120px;">
                @foreach(int size in new int[]{5,10,20,50})
                {
                    @Html.Raw($"<option value='{size}' {(ViewBag.PageSize == size ? "selected" : "")}>{size} /page</option>")
                }
            </select>
        </div>

        <!-- Pagination numbers bên phải -->
        <nav>
            <ul class="pagination mb-0">
                @if(currentPage>1){
                    <li class="page-item"><a class="page-link" href="#" onclick="changePage(1); return false;">&laquo;</a></li>
                }

                @if(currentPage - pageWindow > 1){
                    <li class="page-item"><a class="page-link" href="#" onclick="changePage(1); return false;">1</a></li>
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                }

                @for(int i=startPage;i<=endPage;i++){
                    <li class="page-item @(currentPage==i?"active bg-success":"")">
                        <a class="page-link @(currentPage==i?"text-white":"")" href="#" onclick="changePage(@i); return false;">@i</a>
                    </li>
                }

                @if(currentPage + pageWindow < totalPages){
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                    <li class="page-item"><a class="page-link" href="#" onclick="changePage(@totalPages); return false;">@totalPages</a></li>
                }

                @if(currentPage<totalPages){
                    <li class="page-item"><a class="page-link" href="#" onclick="changePage(@totalPages); return false;">&raquo;</a></li>
                }
            </ul>
        </nav>
    </div>
</div>

@section Scripts {
<script>
            // debounce function
        function debounce(fn, delay) {
            let timer = null;
            return function() {
                const context = this, args = arguments;
                clearTimeout(timer);
                timer = setTimeout(() => fn.apply(context, args), delay);
            };
        }

    // khi thay đổi filter -> submit form
    $("#searchBox").on("change keyup", debounce(function(){
        $("#pageNumberInput").val(1);
        $("#filterForm").submit();
    }, 400));

         // province vẫn submit ngay khi chọn
            $("#provinceFilter").on("change", function () {
                $("#pageNumberInput").val(1);
                $("#filterForm").submit();
            });

    // pageSize change
    $("#pageSizeSelect").on("change", function(){
        $("#pageSizeInput").val($(this).val());
        $("#pageNumberInput").val(1);
        $("#filterForm").submit();
    });

    // pagination
    function changePage(page){
        $("#pageNumberInput").val(page);
        $("#filterForm").submit();
    }

    // clear filter
    $("#btnClearFilter").on("click", function(){
        $("#searchBox").val("");
        $("#provinceFilter").val("");
        $("#pageSizeInput").val(10);
        $("#pageNumberInput").val(1);
        $("#filterForm").submit();
    });

        // Load danh sách tỉnh từ API khi load trang
            $(document).ready(function () {
                $.getJSON("/Address/LoadProvinces", function (data) {
                    data.forEach(p => {
                        $("#provinceFilter").append(
                            `<option value="${p.name}">${p.name}</option>`
                        );
                    });

                    // Giữ selected province khi reload
                var selected = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(ViewBag.SelectedProvince ?? ""));
                if (selected) {
                    $("#provinceFilter").val(selected);
                }
                });
            });
</script>
}
