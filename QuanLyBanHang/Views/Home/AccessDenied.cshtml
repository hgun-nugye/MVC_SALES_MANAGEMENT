@{
    ViewData["Title"] = "Truy cập bị từ chối";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <div class="card shadow">
                <div class="card-body p-5">
                    <i class="fas fa-ban text-danger" style="font-size: 72px;"></i>
                    <h2 class="mt-4 text-danger">Truy cập bị từ chối</h2>
                    <p class="text-muted mt-3">
                        @ViewBag.Message
                    </p>
                    <p class="text-muted">
                        Bạn cần đăng nhập với tài khoản có quyền thích hợp để truy cập trang này.
                    </p>
                    <div class="mt-4">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary me-2">
                            <i class="fas fa-home"></i> Về trang chủ
                        </a>
                        <a href="@Url.Action("Logout", "Home")" class="btn btn-secondary">
                            <i class="fas fa-sign-out-alt"></i> Đăng xuất
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
