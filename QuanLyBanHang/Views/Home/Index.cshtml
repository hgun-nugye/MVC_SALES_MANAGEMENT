@model List<QuanLyBanHang.Models.SanPhamDto>
@{
    ViewData["Title"] = "Trang chủ - Quản Lý Bán Hàng";
}

<style>   
    .hero-section {
        color: white;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)), url('/images/home_fsale_image.webp');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed; 
        padding: 0; 
        margin-top: 0; 
    }

    .hero-section h1 {
        font-weight: 700;
        font-size: 2.5rem;
    }

    .hero-section p {
        font-size: 1.2rem;
        opacity: 0.9;
    }

    .products-section {
        padding: 2rem 0;
    }

    .section-title {
        text-align: center;
        margin-bottom: 3rem;
    }

    .section-title h2 {
        color: #198754;
        font-weight: 700;
        margin-bottom: 0.5rem;
        font-size: 36px;

    }

    .product-card {
        transition: transform 0.3s, box-shadow 0.3s;
        border: none;
        border-radius: 12px;
        overflow: hidden;
        height: 100%;
        box-shadow: 0 2px 8px rgba(0,0,0,.1);
    }

    .product-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 16px rgba(0,0,0,.15) !important;
    }

    .product-image {
        height: 250px;
        object-fit: cover;
        width: 100%;
        background: #f8f9fa;
    }

    .product-body {
        padding: 1.25rem;
    }

    .product-title {
        font-weight: 600;
        color: #212529;
        margin-bottom: 0.75rem;
        font-size: 1.1rem;
        min-height: 3rem;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .product-description {
        color: #6c757d;
        font-size: 0.9rem;
        margin-bottom: 1rem;
        min-height: 3rem;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .price {
        color: #198754;
        font-weight: bold;
        font-size: 1.5rem;
        margin-bottom: 1rem;
    }

    .btn-view-detail {
        background-color: #198754;
        color: white;
        border: none;
        border-radius: 8px;
        padding: 0.5rem 1.5rem;
        font-weight: 600;
        transition: all 0.3s;
        width: 100%;
    }

    .btn-view-detail:hover {
        background-color: #157347;
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(25, 135, 84, 0.3);
    }

    .no-products {
        text-align: center;
        padding: 4rem 0;
        color: #6c757d;
    }

    .no-products i {
        font-size: 4rem;
        margin-bottom: 1rem;
        opacity: 0.5;
    }
</style>

<div class="hero-section">
    <div class="container">       
    </div>
</div>

<div class="container products-section">
    <div class="section-title">
        <h2>Sản phẩm nổi bật</h2>
        <p class="text-muted">Danh sách các sản phẩm đang có sẵn</p>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row g-4">
            @foreach (var product in Model)
            {
                <div class="col-md-4 col-lg-3">
                    <div class="card product-card">
                        <img src="@(string.IsNullOrEmpty(product.AnhMH) ? Url.Content("~/images/default-product.png") : Url.Content($"~/images/products/{product.AnhMH}"))" 
                             class="card-img-top product-image" 
                             alt="@product.TenSP"
                              />
                        <div class="card-body product-body">
                            <h5 class="card-title product-title">@product.TenSP</h5>
                            <p class="card-text product-description">@product.MoTaSP</p>
                            <div class="price">
                                @if (product.GiaBan.HasValue)
                                {
                                    <span>@product.GiaBan.Value.ToString("N0") đ</span>
                                }
                                else
                                {
                                    <span>Liên hệ</span>
                                }
                            </div>
                            <div class="d-flex justify-content-between gap-2">
                                <form asp-action="AddToCart" asp-controller="Cart" method="post" class="mt-2">
                                <input type="hidden" name="maSP" value="@product.MaSP" />
                                <button type="submit" class="btn btn-outline-success w-100">
                                    <i class="fa-solid fa-cart-plus me-2"></i>
                                </button>
                                </form>
                                <a href="@Url.Action("Details", "SanPham", new { id = product.MaSP })" class="btn btn-success btn-view-detail mt-2">
                                    <i class="fa-solid fa-eye me-2"></i>Xem chi tiết
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="no-products">
            <i class="fa-solid fa-box-open"></i>
            <h4>Chưa có sản phẩm nào</h4>
            <p>Vui lòng quay lại sau.</p>
        </div>
    }
</div>

