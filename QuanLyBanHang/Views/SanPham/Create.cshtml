@model QuanLyBanHang.Models.SanPham

@{
    ViewBag.Title = "Thêm Sản phẩm mới";
}

<style>
    .page-header {
        background: linear-gradient(135deg, #198754 0%, #20c997 100%);
        color: white;
        padding: 1.5rem 2rem;
        border-radius: 12px;
        margin-bottom: 2rem;
        box-shadow: 0 4px 12px rgba(25, 135, 84, 0.3);
    }

    .form-section {
        background: white;
        border-radius: 16px;
        padding: 2rem;
        margin-bottom: 2rem;
        box-shadow: 0 2px 15px rgba(0, 0, 0, 0.05);
        border: 1px solid #f0f4f2;
    }

    .section-title {
        color: #198754;
        font-weight: 700;
        font-size: 1.1rem;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        border-bottom: 2px solid #f1f8f4;
        padding-bottom: 0.5rem;
    }

    .form-label {
        font-weight: 700;
        color: #495057;
        margin-bottom: 0.5rem;
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .form-control, .form-select {
        border-radius: 12px;
        border: 1.5px solid #edf2ef;
        padding: 0.75rem 1rem;
        transition: all 0.3s;
    }

    .form-control:focus, .form-select:focus {
        border-color: #198754;
        box-shadow: 0 0 0 0.25rem rgba(25, 135, 84, 0.1);
    }

    .preview-box {
        border: 2px dashed #edf2ef;
        border-radius: 16px;
        padding: 1.5rem;
        text-align: center;
        background: #fdfdfd;
    }

    .img-preview {
        max-width: 100%;
        max-height: 250px;
        border-radius: 12px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.08);
    }

    .required-badge::after {
        content: "*";
        color: #dc3545;
        margin-left: 4px;
    }

    .sticky-sidebar {
        position: sticky;
        top: 2rem;
    }
</style>

<div class="container py-4">
    <div class="page-header d-flex justify-content-between align-items-center">
        <h4 class="mb-0">
            <i class="fa-solid fa-circle-plus me-2"></i>
            Thêm sản phẩm mới vào hệ thống
        </h4>
        <i class="fa-solid fa-box-open fa-2x opacity-25"></i>
    </div>

    @using (Html.BeginForm("Create", "SanPham", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

        <div class="row">
            <div class="col-lg-8">
                <!-- Thông tin chính -->
                <div class="form-section">
                    <div class="section-title">
                        <i class="fa-solid fa-circle-info"></i>
                        Thông tin cơ bản
                    </div>
                    <div class="row g-3">
                        <div class="col-12">
                            <label asp-for="TenSP" class="form-label required-badge">Tên sản phẩm</label>
                            @Html.TextBoxFor(m => m.TenSP, new { @class = "form-control", placeholder = "Ví dụ: Toner Saffron chiết xuất nhụy hoa nghệ tây..." })
                            @Html.ValidationMessageFor(m => m.TenSP, "", new { @class = "text-danger small" })
                        </div>
                        <div class="col-md-6">
                            <label asp-for="GiaBan" class="form-label required-badge">Giá niêm yết (VNĐ)</label>
                            @Html.TextBoxFor(m => m.GiaBan, new { @class = "form-control", type = "number", placeholder = "0" })
                            @Html.ValidationMessageFor(m => m.GiaBan, "", new { @class = "text-danger small" })
                        </div>
                        <div class="col-md-6">
                            <label asp-for="TrongLuong" class="form-label">Trọng lượng (gram)</label>
                            @Html.TextBoxFor(m => m.TrongLuong, new { @class = "form-control", type = "number", step="0.01", placeholder = "0.00" })
                            @Html.ValidationMessageFor(m => m.TrongLuong, "", new { @class = "text-danger small" })
                        </div>
                        <div class="col-12">
                            <label asp-for="MoTaSP" class="form-label">Mô tả ngắn gọn</label>
                            @Html.TextAreaFor(m => m.MoTaSP, new { @class = "form-control", rows = "5", placeholder = "Giới thiệu nhanh về ưu điểm sản phẩm..." })
                            @Html.ValidationMessageFor(m => m.MoTaSP, "", new { @class = "text-danger small" })
                        </div>
                    </div>
                </div>

                <!-- Phân loại -->
                <div class="form-section">
                    <div class="section-title">
                        <i class="fa-solid fa-layer-group"></i>
                        Phân loại & Thương hiệu
                    </div>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label required-badge">Loại sản phẩm</label>
                            @Html.DropDownListFor(model => model.MaLoai, (SelectList)ViewBag.LoaiSP, "-- Chọn loại --", new { @class = "form-select" })
                            @Html.ValidationMessageFor(m => m.MaLoai, "", new { @class = "text-danger small" })
                        </div>
                        <div class="col-md-6">
                            <label class="form-label required-badge">Thương hiệu</label>
                            @Html.DropDownListFor(model => model.MaHangSX, (SelectList)ViewBag.MaHangSX, "-- Chọn hãng --", new { @class = "form-select" })
                            @Html.ValidationMessageFor(m => m.MaHangSX, "", new { @class = "text-danger small" })
                        </div>
                        @* <div class="col-md-4">
                            <label class="form-label required-badge">Trạng thái kho</label>
                            @Html.DropDownListFor(m => m.MaTT, (SelectList)ViewBag.MaTT, "-- Chọn trạng thái --", new { @class = "form-select" })
                        </div> *@
                        <input type="hidden" asp-for="MaTT" value="TT1" />

                    </div>
                </div>

                <!-- Chi tiết chi tiết -->
                <div class="form-section">
                    <div class="section-title">
                        <i class="fa-solid fa-microscope"></i>
                        Chi tiết sản phẩm
                    </div>
                    <div class="row g-3">
                        <div class="col-md-12">
                            <label class="form-label">Thành phần chi tiết</label>
                            @Html.TextAreaFor(m => m.ThanhPhan, new { @class = "form-control", rows = "3" })
                        </div>
                        <div class="col-md-12">
                            <label class="form-label">Công dụng</label>
                            @Html.TextAreaFor(m => m.CongDung, new { @class = "form-control", rows = "3" })
                        </div>
                        <div class="col-md-12">
                            <label class="form-label">Đối tượng sử dụng</label>
                            @Html.TextAreaFor(m => m.DoiTuongSuDung, new { @class = "form-control", rows = "2" })
                        </div>
                        <div class="col-md-12">
                            <label class="form-label">Hướng dẫn sử dụng</label>
                            @Html.TextAreaFor(m => m.HDSD, new { @class = "form-control", rows = "3" })
                        </div>
                        <div class="col-md-12">
                            <label class="form-label">Hướng dẫn bảo quản</label>
                            @Html.TextAreaFor(m => m.HDBaoQuan, new { @class = "form-control", rows = "2" })
                        </div>
                       
                    </div>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="col-lg-4">
                <div class="sticky-sidebar">
                    <div class="form-section shadow-sm">
                        <div class="section-title">
                            <i class="fa-solid fa-image"></i>
                            Hình ảnh đại diện
                        </div>
                        <div class="preview-box mb-3 text-center">
                            <img id="imgPreview" src="@Url.Content("~/images/default-product.png")" 
                                 class="img-preview mb-3 d-none" alt="Preview">
                            <div id="placeholderPreview" class="py-5">
                                <i class="fa-solid fa-cloud-arrow-up fa-3x text-muted opacity-25 mb-2"></i>
                                <p class="text-muted small">Ảnh tải lên sẽ hiển thị ở đây</p>
                            </div>
                            <input type="file" name="AnhFile" id="AnhFile" class="form-control" accept="image/*">
                            <p class="small text-muted mt-2 mb-0">Hỗ trợ: JPG, PNG, WEBP (Tối đa 5MB)</p>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success fw-bold py-3" style="border-radius:12px;">
                                <i class="fa-solid fa-check-circle me-2"></i> Tạo sản phẩm mới
                            </button>
                            <a href="@Url.Action("Index", "SanPham")" class="btn btn-outline-secondary py-3" style="border-radius:12px;">
                                <i class="fa-solid fa-xmark me-2"></i> Hủy bỏ
                            </a>
                        </div>
                    </div>
                    
                    <div class="alert alert-info border-0 shadow-sm" style="border-radius:12px;">
                        <i class="fa-solid fa-lightbulb me-2"></i>
                        Mẹo: Tên sản phẩm nên chứa các từ khóa chính để khách hàng dễ dàng tìm kiếm.
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(function () {
            $('#AnhFile').change(function(){
                const file = this.files[0];
                if (file){
                    let reader = new FileReader();
                    reader.onload = function(event){
                        $('#imgPreview').attr('src', event.target.result).removeClass('d-none');
                        $('#placeholderPreview').addClass('d-none');
                    }
                    reader.readAsDataURL(file);
                }
            });
        });
    </script>
}