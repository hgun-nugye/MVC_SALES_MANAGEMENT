@model QuanLyBanHang.Models.SanPhamDto

@{
    ViewBag.Title = "Chỉnh sửa Sản phẩm";
}

<style>
    .page-header {
        background: linear-gradient(135deg, #ffc107 0%, #ff9800 100%);
        color: white;
        padding: 1.5rem 2rem;
        border-radius: 12px;
        margin-bottom: 2rem;
        box-shadow: 0 4px 12px rgba(255, 193, 7, 0.3);
    }

    .form-section {
        background: white;
        border-radius: 16px;
        padding: 2rem;
        margin-bottom: 2rem;
        box-shadow: 0 2px 15px rgba(0, 0, 0, 0.05);
        border: 1px solid #f0f4f2;
    }

    .section-title {
        color: #ff9800;
        font-weight: 700;
        font-size: 1.1rem;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        border-bottom: 2px solid #fff5e6;
        padding-bottom: 0.5rem;
    }

    .form-label {
        font-weight: 700;
        color: #495057;
        margin-bottom: 0.5rem;
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .form-control, .form-select {
        border-radius: 12px;
        border: 1.5px solid #edf2ef;
        padding: 0.75rem 1rem;
        transition: all 0.3s;
    }

    .form-control:focus, .form-select:focus {
        border-color: #ff9800;
        box-shadow: 0 0 0 0.25rem rgba(255, 152, 0, 0.1);
    }

    .preview-box {
        border: 2px dashed #edf2ef;
        border-radius: 16px;
        padding: 1.5rem;
        text-align: center;
        background: #fdfdfd;
        position: relative;
    }

    .img-preview {
        max-width: 100%;
        max-height: 250px;
        border-radius: 12px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.08);
    }

    .required-badge::after {
        content: "*";
        color: #dc3545;
        margin-left: 4px;
    }
</style>

<div class="container py-4">
    <div class="page-header d-flex justify-content-between align-items-center">
        <h4 class="mb-0">
            <i class="fa-solid fa-pen-to-square me-2"></i>
            Chỉnh sửa thông tin sản phẩm
        </h4>
        <span class="badge bg-white text-warning fw-bold px-3 py-2" style="border-radius:8px;">ID: @Model.MaSP</span>
    </div>

    @using (Html.BeginForm("Edit", "SanPham", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
        @Html.HiddenFor(m => m.MaSP)
        @Html.HiddenFor(m => m.AnhMH)

        <div class="row">
            <div class="col-lg-8">
                <!-- Thông tin chính -->
                <div class="form-section">
                    <div class="section-title">
                        <i class="fa-solid fa-circle-info"></i>
                        Thông tin cơ bản
                    </div>
                    <div class="row g-3">
                        <div class="col-12">
                            <label asp-for="TenSP" class="form-label required-badge">Tên sản phẩm</label>
                            @Html.TextBoxFor(m => m.TenSP, new { @class = "form-control", placeholder = "Nhập tên sản phẩm..." })
                            @Html.ValidationMessageFor(m => m.TenSP, "", new { @class = "text-danger small" })
                        </div>
                        <div class="col-md-6">
                            <label asp-for="GiaBan" class="form-label required-badge">Giá bán (VNĐ)</label>
                            @Html.TextBoxFor(m => m.GiaBan, new { @class = "form-control", type = "number" })
                        </div>
                        <div class="col-md-6">
                            <label asp-for="TrongLuong" class="form-label">Trọng lượng (gram)</label>
                            @Html.TextBoxFor(m => m.TrongLuong, new { @class = "form-control", type = "number" })
                        </div>
                        <div class="col-12">
                            <label asp-for="MoTaSP" class="form-label">Mô tả tóm tắt</label>
                            @Html.TextAreaFor(m => m.MoTaSP, new { @class = "form-control", rows = "5" })
                        </div>                        
                    </div>
                </div>

                <!-- Phân loại -->
                <div class="form-section">
                    <div class="section-title">
                        <i class="fa-solid fa-boxes-stacked"></i>
                        Phân loại & Thương hiệu
                    </div>
                    <div class="row g-3">
                        <div class="col-md-4">
                            <label class="form-label">Loại hàng</label>
                            @Html.DropDownListFor(m => m.MaLoai, (SelectList)ViewBag.LoaiSP, new { @class = "form-select" })
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Hãng sản xuất</label>
                            @Html.DropDownListFor(m => m.MaHangSX, (SelectList)ViewBag.MaHangSX, new { @class = "form-select" })
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Trạng thái kho</label>
                            @Html.DropDownListFor(m => m.MaTT, (SelectList)ViewBag.MaTT, new { @class = "form-select" })
                        </div>
                    </div>
                </div>

                <!-- Chi tiết chi tiết -->
                <div class="form-section">
                    <div class="section-title">
                        <i class="fa-solid fa-list-check"></i>
                        Chi tiết thành phần & Hướng dẫn
                    </div>
                    <div class="row g-3">
                        <div class="col-md-12">
                            <label class="form-label">Thành phần</label>
                            @Html.TextAreaFor(m => m.ThanhPhan, new { @class = "form-control", rows = "3" })
                        </div>
                        <div class="col-md-12">
                            <label class="form-label">Công dụng</label>
                            @Html.TextAreaFor(m => m.CongDung, new { @class = "form-control", rows = "3" })
                        </div>
                        <div class="col-md-12">
                            <label class="form-label">Đối tượng sử dụng</label>
                            @Html.TextAreaFor(m => m.DoiTuongSuDung, new { @class = "form-control", rows = "3" })
                        </div>
                        <div class="col-md-12">
                            <label class="form-label">Hướng dẫn sử dụng</label>
                            @Html.TextAreaFor(m => m.HDSD, new { @class = "form-control", rows = "3" })
                        </div>
                        <div class="col-md-12">
                            <label class="form-label">Hướng dẫn bảo quản</label>
                            @Html.TextAreaFor(m => m.HDBaoQuan, new { @class = "form-control", rows = "3" })
                        </div>
                       
                    </div>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="col-lg-4">
                <div class="form-section sticky-top" style="top: 2rem; z-index: 10;">
                    <div class="section-title">
                        <i class="fa-solid fa-image"></i>
                        Hình ảnh sản phẩm
                    </div>
                    <div class="preview-box mb-3">
                        <img id="imgPreview" src="@(string.IsNullOrEmpty(Model.AnhMH) ? Url.Content("~/images/default-product.png") : Url.Content("~/images/products/" + Model.AnhMH))" 
                             class="img-preview mb-3" alt="Preview">
                        <input type="file" name="AnhFile" id="AnhFile" class="form-control" accept="image/*">
                        <p class="small text-muted mt-2 mb-0">Hỗ trợ định dạng: JPG, PNG, WEBP (Tối đa 5MB)</p>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-warning text-white fw-bold py-3" style="border-radius:12px;">
                            <i class="fa-solid fa-save me-2"></i> Lưu thay đổi
                        </button>
                        <a href="@Url.Action("Details", "SanPham", new { id = Model.MaSP })" class="btn btn-outline-secondary py-3 fw-bold" style="border-radius:12px;">
                            Hủy bỏ
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(function () {
            $('#AnhFile').change(function(){
                const file = this.files[0];
                if (file){
                    let reader = new FileReader();
                    reader.onload = function(event){
                        $('#imgPreview').attr('src', event.target.result);
                    }
                    reader.readAsDataURL(file);
                }
            });
        });
    </script>
}
