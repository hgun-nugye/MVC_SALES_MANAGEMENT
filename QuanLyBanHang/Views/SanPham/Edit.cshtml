@model QuanLyBanHang.Models.SanPham

@{
    ViewBag.Title = "Sửa Sản phẩm";
}

<div class="container">
    <h4 class="text-warning mb-4">
        <i class="fa-solid fa-pen-to-square"></i> Sửa Thông Tin Sản phẩm
    </h4>

    <!-- ======== Thông báo TempData ======== -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fa-solid fa-circle-check"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fa-solid fa-triangle-exclamation"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- ======== Form sửa sản phẩm ======== -->
    <form asp-action="Edit" method="post" enctype="multipart/form-data" class="border p-4 rounded shadow-sm bg-light">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="MaSP" />

        <div class="row g-3">
            <!-- Mã sản phẩm -->
            <div class="col-md-3">
                <label class="form-label">Mã SP</label>
                <input asp-for="MaSP" class="form-control" readonly />
            </div>

            <!-- Tên sản phẩm -->
            <div class="col-md-9">
                <label class="form-label">Tên SP</label>
                <input asp-for="TenSP" class="form-control" />
                <span asp-validation-for="TenSP" class="text-danger"></span>
            </div>

            <!-- Đơn giá -->
            <div class="col-md-3">
                <label class="form-label">Đơn giá</label>
                <input asp-for="DonGia" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="DonGia" class="text-danger"></span>
            </div>

            <!-- Giá bán -->
            <div class="col-md-3">
                <label class="form-label">Giá bán</label>
                <input asp-for="GiaBan" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="GiaBan" class="text-danger"></span>
            </div>

            <!-- Số lượng tồn -->
            <div class="col-md-3">
                <label class="form-label">Số lượng tồn</label>
                <input asp-for="SoLuongTon" class="form-control" type="number" />
                <span asp-validation-for="SoLuongTon" class="text-danger"></span>
            </div>

            <!-- Trạng thái -->
            <div class="col-md-3">
                <label class="form-label">Trạng thái</label>
                <select asp-for="TrangThai" asp-items="ViewBag.TrangThai" class="form-select"></select>
                <span asp-validation-for="TrangThai" class="text-danger"></span>
            </div>

            <!-- Mô tả -->
            <div class="col-12">
                <label class="form-label">Mô tả</label>
                <textarea asp-for="MoTaSP" class="form-control" rows="3"></textarea>
                <span asp-validation-for="MoTaSP" class="text-danger"></span>
            </div>

            <!-- Ảnh minh họa + Chọn ảnh mới -->
            <div class="col-md-6">
                @if (!string.IsNullOrEmpty(Model?.AnhMH))
                {
                    <div class="mb-2">
                        <strong>Ảnh hiện tại:</strong><br />
                        <a href="@Model.AnhMH" target="_blank" rel="noopener noreferrer">
                            <img src="@Model.AnhMH" alt="Ảnh sản phẩm" class="rounded border" style="max-width: 250px; height:auto;" />
                        </a>
                    </div>
                }
                <label class="form-label">Chọn ảnh mới:</label>
                <input type="file" name="AnhFile" class="form-control" accept="image/*" />
            </div>

            <!-- Loại sản phẩm -->
            <div class="col-md-6">
                <label class="form-label">Loại sản phẩm</label>
                <select asp-for="MaLoai" asp-items="ViewBag.LoaiSP" class="form-select"></select>
                <span asp-validation-for="MaLoai" class="text-danger"></span>
            </div>

            <!-- Nhà cung cấp -->
            <div class="col-md-6">
                <label class="form-label">Nhà cung cấp</label>
                <select asp-for="MaNCC" asp-items="ViewBag.NhaCC" class="form-select"></select>
                <span asp-validation-for="MaNCC" class="text-danger"></span>
            </div>           
                     
            <!-- Gian hàng -->
            <div class="col-md-6">
                <label class="form-label">Gian hàng</label>
                <select asp-for="MaGH" asp-items="ViewBag.GianHang" class="form-select"></select>
                <span asp-validation-for="MaGH" class="text-danger"></span>
            </div>
        </div>

        <div class="mt-4 d-flex gap-2">
            <button type="submit" class="btn btn-warning text-white">
                <i class="fa-solid fa-save"></i> Cập nhật
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fa-solid fa-arrow-left"></i> Quay lại
            </a>
        </div>
    </form>
</div>
