@model QuanLyBanHang.Models.SanPhamDto

@{
    ViewBag.Title = "Sửa Sản phẩm";
}

<div class="container">
    <h4 class="text-success mb-4">
        Sửa Thông Tin Sản phẩm
    </h4>

    <!-- == Form sửa sản phẩm == -->
    <form asp-action="Edit" method="post" enctype="multipart/form-data" class="">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <input type="hidden" asp-for="MaSP" />
        <input type="hidden" asp-for="AnhMH" />

        <div class="row g-3 border rounded shadow-sm bg-light p-4">
            <!-- Mã sản phẩm -->
            <div class="col-md-3">
                <label class="form-label fw-bold">Mã SP</label>
                <input asp-for="MaSP" class="form-control" readonly />
            </div>

            <!-- Tên sản phẩm -->
            <div class="col-md-6">
                <label class="form-label fw-bold">Tên SP</label>
                <input asp-for="TenSP" class="form-control" />
                <span asp-validation-for="TenSP" class="text-danger"></span>
            </div>

            <!-- Trạng thái -->
            <div class="col-md-3">
                <label class="form-label fw-bold">Trạng thái</label>
                <select asp-for="TrangThai" asp-items="ViewBag.TrangThai" class="form-select"></select>
                <span asp-validation-for="TrangThai" class="text-danger"></span>
            </div>

            <!-- Đơn giá -->
            <div class="col-md-3">
                <label class="form-label fw-bold">Đơn giá</label>
                <input asp-for="DonGia" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="DonGia" class="text-danger"></span>
            </div>

            <!-- Giá bán -->
            <div class="col-md-3">
                <label class="form-label fw-bold">Giá bán</label>
                <input asp-for="GiaBan" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="GiaBan" class="text-danger"></span>
            </div>

            <!-- Số lượng tồn -->
            <div class="col-md-3">
                <label class="form-label fw-bold">Số lượng tồn</label>
                <input asp-for="SoLuongTon" class="form-control" type="number" />
                <span asp-validation-for="SoLuongTon" class="text-danger"></span>
            </div>

            <!-- Xuất xứ -->
            <div class="col-md-3">
                <label class="form-label fw-bold">Xuất xứ</label>
                <input asp-for="XuatXu" class="form-control" />
                <span asp-validation-for="XuatXu" class="text-danger"></span>
            </div>

            <!-- Mô tả -->
            <div class="col-12">
                <label class="form-label fw-bold">Mô tả</label>
                <textarea asp-for="MoTaSP" class="form-control" rows="3"></textarea>
                <span asp-validation-for="MoTaSP" class="text-danger"></span>
            </div>

            <!-- HDSD -->
            <div class="col-12">
                <label class="form-label fw-bold">HDSD</label>
                <textarea asp-for="HDSD" class="form-control" rows="3"></textarea>
                <span asp-validation-for="HDSD" class="text-danger"></span>
            </div>

            <div class="row mt-4">

                <!-- Cột 1: 3 thông tin -->
                <div class="col-md-6">
                    <!-- Thành phần -->
                    <div class="mb-3">
                        <label class="form-label fw-bold">Thành phần</label>
                        <input asp-for="ThanhPhan" class="form-control" />
                        <span asp-validation-for="ThanhPhan" class="text-danger"></span>
                    </div>

                    <!-- Công dụng -->
                    <div class="mb-3">
                        <label class="form-label fw-bold">Công dụng</label>
                        <input asp-for="CongDung" class="form-control" />
                        <span asp-validation-for="CongDung" class="text-danger"></span>
                    </div>

                    <!-- Bảo quản -->
                    <div class="mb-3">
                        <label class="form-label fw-bold">Bảo quản</label>
                        <input asp-for="BaoQuan" class="form-control" />
                        <span asp-validation-for="BaoQuan" class="text-danger"></span>
                    </div>
                </div>

                <!-- Cột 2: 3 dropdown -->
                <div class="col-md-6">                   
                    <!-- Hãng -->
                    <div class="mb-3">
                        <label asp-for="MaHang" class="form-label fw-bold"></label>
                        <select asp-for="MaHang" asp-items="ViewBag.MaHang" class="form-select">
                            <option value="">-- Chọn hãng --</option>
                        </select>
                        <span asp-validation-for="MaHang" class="text-danger"></span>
                    </div>

                    <!-- Loại sản phẩm -->
                    <div class="mb-3">
                        <label class="form-label fw-bold">Loại sản phẩm</label>
                        <select asp-for="MaLoai" asp-items="ViewBag.LoaiSP" class="form-select"></select>
                        <span asp-validation-for="MaLoai" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
            <div class="col-12">
                @if (!string.IsNullOrEmpty(Model?.AnhMH))
                {
                    <div class="mb-3">
                        <strong>Ảnh hiện tại:</strong><br />
                        <img src="@Url.Content("~/images/" + Model.AnhMH)" alt="@Model.TenSP" style="max-width:100px; height:auto; border-radius:8px;" />
                    </div>
                }

                <div class="mb-3">
                    <label class="form-label">Chọn ảnh mới:</label>
                    <input type="file" name="AnhFile" class="form-control" accept="image/*" />
                </div>
            </div>

        </div>

        <div class="mt-4 d-flex gap-2">
            <button type="submit" class="btn btn-warning text-white">
                <i class="fa-solid fa-save text-white"></i> Cập nhật
            </button>
            <a asp-action="Details" asp-route-id="@Model.MaSP" class="btn btn-secondary">
                <i class="fa-solid fa-arrow-left"></i> Quay lại
            </a>
        </div>
    </form>
</div>
