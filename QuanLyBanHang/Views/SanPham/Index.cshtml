@model IEnumerable<QuanLyBanHang.Models.SanPhamDto>

@{
    ViewBag.Title = "Quản lý Sản phẩm";
}
<style>
    .search-wrapper {
        position: relative;
        width: 100%;
        max-width: 400px;
    }
    
        .search-wrapper input {
            padding-left: 38px !important;
            border-radius: 8px;
            background: #f8f9fa;
        }

        .search-wrapper i {
            position: absolute;
            left: 12px;
            top: 50%;
            transform: translateY(-50%);
            pointer-events: none;
        }

    .table {
        overflow-x: auto;
        white-space: nowrap;
        width: 100%;
    }

    .table-hover tbody tr:hover {
        background-color: #f5faff;
        transition: 0.2s;
    }
</style>


<div class="container">
    <h4 class="mb-3 text-success">
        Danh sách Sản phẩm
    </h4>

    <!--  Form -->
    <form id="Form" method="get" class="d-flex flex-wrap align-items-center justify-content-between mb-4 gap-3">
        <div class="search-wrapper flex-grow-1">
            <i class="fa fa-search"></i>
            <input id="searchBox" type="text" name="search" value="@ViewBag.Search" class="form-control" placeholder="Tìm tên, mã sản phẩm...">
        </div>

        <div class="d-flex flex-wrap align-items-center gap-2">
            <div class="d-flex align-items-center gap-2">   
                @Html.DropDownList(
                "status",
                                (SelectList)ViewBag.TrangThai,
                                "-- Status --",
                                new { @class = "form-select", style = "width:150px;", id = "statusSelect" }
                                )

                @Html.DropDownList(
                                "type",
                                (SelectList)ViewBag.LoaiSP,
                                "-- Type --",
                                new { @class = "form-select", style = "width:130px;", id = "typeSelect" }
                                )

            </div>            

            <button type="button" id="btnClear" class="btn btn-secondary"><i class="fa-solid fa-rotate-left"></i>Reset</button>
            <a href="@Url.Action("Create", "SanPham")" class="btn btn-success"><i class="fa-solid fa-circle-plus"></i> Add</a>
        </div>
    </form>


   <div class="table">
        <table class="table table-hover align-middle text-center shadow-sm">
            <thead class="table-success">
                <tr>
                    <th>Ảnh</th>
                    <th>Tên SP</th>
                    <th>Đơn giá</th>
                    <th>Giá bán</th>
                    <th>Mô tả</th>
                    <th>Gian hàng</th>
                    <th>Số lượng tồn</th>
                </tr>
            </thead>
            <tbody class="text-start">
                @if (Model != null && Model.Any())
                {
                    @foreach (var sp in Model)
                    {
                        <tr class="clickable-row" data-href="@Url.Action("Details", "SanPham", new { id = sp.MaSP })">
                            <td>
                                <img src="@Url.Content(sp.AnhMH)" alt="@sp.TenSP" width="60" height="60" style="object-fit:cover; border-radius:5px;">
                            </td>
                            <td>@sp.TenSP</td>
                            <td>@String.Format("{0:N0}", sp.DonGia)</td>
                            <td>@String.Format("{0:N0}", sp.GiaBan)</td>
                            <td>
                                @{
                                    var moTa = sp.MoTaSP ?? "";
                                    var moTaHienThi = moTa.Length > 50 ? moTa.Substring(0, 50) + "..." : moTa;
                                }
                                @moTaHienThi
                            </td>

                            <td>@sp.TenGH</td>
                            <td class="text-center">@sp.SoLuongTon</td>

                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8" class="text-center text-muted fst-italic">Không có sản phẩm nào.</td>
                    </tr>
                }

            </tbody>
        </table>
   </div>
</div>

@section Scripts {
    <script>
                // debounce function
            function debounce(fn, delay) {
                let timer = null;
                return function() {
                    const context = this, args = arguments;
                    clearTimeout(timer);
                    timer = setTimeout(() => fn.apply(context, args), delay);
                };
            }

        // khi thay đổi  -> submit form
               $("#searchBox").on("change", debounce(function(){
            $("#Form").submit();
        }, 400));

        $("#statusSelect, #typeSelect").on("change", function(){
            $("#Form").submit();
        });

        // clear 
        $("#btnClear").on("click", function(){
            $("#searchBox").val("");
            $("#statusSelect").val("");
            $("#typeSelect").val("");
            $("#Form").submit();
        });
</script>
    <script>

        // clickable row
        document.addEventListener("DOMContentLoaded", function () {
            document.querySelectorAll(".clickable-row").forEach(row => {
                row.addEventListener("click", function () {
                    window.location = this.dataset.href;
                });
            });
        });
    </script>
}


