@model QuanLyBanHang.Models.SanPhamDto

@{
    ViewBag.Title = "Xóa Sản phẩm";
}

<div class="container">
    <h4 class="text-danger mb-3">Xóa Sản phẩm</h4>

    <div class="alert alert-warning shadow-sm">
        Bạn có chắc muốn xóa sản phẩm <strong>@Model.TenSP</strong> không?
    </div>

    <div class="shadow-sm">
        <div class="row">
            <!-- Ảnh minh họa -->
            <div class="col-md-5 text-center mt-4">
                <img src="@Url.Content("~/images/" + Model.AnhMH)"
                     alt="@Model.TenSP"
                     class="img-fluid rounded border mt-4"
                     style="max-height: 400px; object-fit: contain;" />
            </div>

            <!-- Thông tin sản phẩm -->
            <div class="col-md-7">
                <div class="p-3">
                    <h4 class="text-success mb-3">@Model.TenSP</h4>
                    <p><strong>Mã sản phẩm:</strong> @Model.MaSP</p>
                    <p><strong>Mô tả:</strong> @Model.MoTaSP</p>
                    <p><strong>Thành phần:</strong> @Model.ThanhPhan</p>
                    <p><strong>Công dụng:</strong> @Model.CongDung</p>
                    <p><strong>Hướng dẫn sử dụng:</strong> @Model.HDSD</p>
                    <p><strong>Bảo quản:</strong> @Model.BaoQuan</p>

                    <div class="row mt-3">
                        <p class="col-md-6"><strong>Đơn giá:</strong> @string.Format("{0:N0} đ", Model.DonGia)</p>
                        <p class="col-md-6"><strong>Giá bán:</strong> @string.Format("{0:N0} đ", Model.GiaBan)</p>
                        <p class="col-md-6"><strong>Số lượng tồn:</strong> @Model.SoLuongTon</p>
                        <p class="col-md-6"><strong>Trạng thái:</strong> @Model.TrangThai</p>
                        <p class="col-md-6"><strong>Loại sản phẩm:</strong> @Model.TenLoai</p>
                        <p class="col-md-6"><strong>Nhà cung cấp:</strong> @Model.TenNCC</p>
                        <p class="col-md-6"><strong>Gian hàng:</strong> @Model.TenGH</p>
                        <p class="col-md-6"><strong>Xuất xứ:</strong> @Model.XuatXu </p>

                    </div>


                </div>
            </div>
        </div>
    </div>

    <form id="deleteForm" asp-action="Delete" method="post">
        @Html.AntiForgeryToken()

        <!-- Các field ẩn cần gửi lên controller -->
        <input type="hidden" asp-for="MaSP" />

        <div class="d-flex gap-2 mt-4">
            <button type="button" class="btn btn-danger" onclick="confirmDelete()">
                <i class="fa-solid fa-trash-can me-2"></i> Xóa
            </button>
            <a asp-action="Details" asp-route-id="@Model.MaSP" class="btn btn-secondary">Quay lại</a>
        </div>
    </form>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function confirmDelete() {
            Swal.fire({
                title: 'Xác nhận xóa?',
                text: 'Bạn có chắc chắn muốn xóa sản phẩm này?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Xóa',
                cancelButtonText: 'Hủy',
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6'
            }).then((result) => {
                if (result.isConfirmed) {
                    document.getElementById('deleteForm').submit();
                }
            });
        }
    </script>
}
