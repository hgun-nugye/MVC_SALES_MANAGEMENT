@model QuanLyBanHang.Models.SanPhamDto

@{
    ViewBag.Title = "Xóa Sản phẩm";
}

<div class="container">
    <h4 class="text-danger mb-3">Xóa Sản phẩm</h4>

    <div class="alert alert-warning shadow-sm">
        Bạn có chắc muốn xóa sản phẩm <strong>@Model.TenSP</strong> không?
    </div>

    <div class="shadow-sm">
        <div class="row">
            <!-- Ảnh minh họa -->
            <div class="col-md-5 text-center">
                <img src="@Url.Content(Model.AnhMH)"
                     alt="@Model.TenSP"
                     class="img-fluid rounded border"
                     style="max-height: 400px; object-fit: contain;" />
            </div>

            <!-- Thông tin sản phẩm -->
            <div class="col-md-7">
                <div class="p-3">
                    <h4 class="text-primary mb-3">@Model.TenSP</h4>
                    <p><strong>Mã sản phẩm:</strong> @Model.MaSP</p>
                    <p><strong>Mô tả:</strong> @Model.MoTaSP</p>

                    <div class="row mt-3">
                        <div class="col-md-6 mb-2"><strong>Đơn giá:</strong> @string.Format("{0:N0} đ", Model.DonGia)</div>
                        <div class="col-md-6 mb-2"><strong>Giá bán:</strong> @string.Format("{0:N0} đ", Model.GiaBan)</div>
                        <div class="col-md-6 mb-2"><strong>Số lượng tồn:</strong> @Model.SoLuongTon</div>
                        <div class="col-md-6 mb-2"><strong>Trạng thái:</strong> @Model.TrangThai</div>
                        <div class="col-md-6 mb-2"><strong>Loại sản phẩm:</strong> @Model.TenLoai</div>
                        <div class="col-md-6 mb-2"><strong>Nhà cung cấp:</strong> @Model.TenNCC</div>
                        <div class="col-md-12 mb-2"><strong>Gian hàng:</strong> @Model.TenGH</div>
                    </div>


                </div>
            </div>
        </div>
    </div>

    <form id="deleteForm" asp-action="Delete" method="post">
        @Html.AntiForgeryToken()

        <!-- Các field ẩn cần gửi lên controller -->
        <input type="hidden" asp-for="MaSP" />

        <div class="d-flex gap-2 mt-4">
            <button type="button" class="btn btn-danger" onclick="confirmDelete()">
                <i class="fa-solid fa-trash-can"></i> Xóa
            </button>
            <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
        </div>
    </form>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function confirmDelete() {
            Swal.fire({
                title: 'Xác nhận xóa?',
                text: 'Bạn có chắc chắn muốn xóa sản phẩm này?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Xóa',
                cancelButtonText: 'Hủy',
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6'
            }).then((result) => {
                if (result.isConfirmed) {
                    document.getElementById('deleteForm').submit();
                }
            });
        }
    </script>
}
