@model QuanLyBanHang.Models.SanPham

@{
    ViewBag.Title = "Chi tiết Sản phẩm";
}

<div class="container mb-4">
    <h4 class="text-info mb-3">
        Chi tiết Sản phẩm
    </h4>

    <div class="card shadow-sm border-info">
        <div class="card-body">
            <p><strong>Mã Sản phẩm:</strong> @Model.MaSP</p>
            <p><strong>Tên Sản phẩm:</strong> @Model.TenSP</p>
            <p><strong>Đơn giá:</strong> @string.Format("{0:N0} đ", Model.DonGia)</p>
            <p><strong>Giá bán:</strong> @string.Format("{0:N0} đ", Model.GiaBan)</p>
            <p><strong>Số lượng tồn:</strong> @Model.SoLuongTon</p>
            <p><strong>Trạng thái:</strong> @Model.TrangThai</p>
            <p><strong>Mô tả:</strong> @Model.MoTaSP</p>
            <p><strong>Loại sản phẩm:</strong> @Model.TenLoai</p>
            <p><strong>Nhà cung cấp:</strong> @Model.TenNCC</p>
            <p><strong>Gian hàng:</strong> @Model.TenGH</p>

            @if (!string.IsNullOrEmpty(Model.AnhMH))
            {
                <div class="mt-3">
                    <strong>Ảnh minh họa:</strong><br />
                    <a href="@Model.AnhMH" target="_blank">
                        <img src="@Url.Content("~/images/" + Model.AnhMH)" alt="@Model.TenSP" class="rounded border mt-2" style="max-width: 250px; height:auto;" />
                                               
                    </a>
                </div>
            }
        </div>
    </div>

    <div class="my-3">
        <a class="btn btn-warning text-white" href="@Url.Action("Edit", "SanPham", new { id = Model.MaSP })">
            <i class="fa-solid fa-pen-to-square"></i> Sửa
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            Quay lại
        </a>
    </div>
</div>
