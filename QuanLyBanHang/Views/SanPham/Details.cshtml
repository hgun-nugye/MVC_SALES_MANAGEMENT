@model QuanLyBanHang.Models.SanPhamDto

@{
    ViewBag.Title = Model.TenSP + " - Chi tiết Sản phẩm";
}

<style>
    .page-container {
        padding: 2rem 0;
        background-color: #fcfdfd;
    }

    .detail-container {
        background: white;
        border-radius: 24px;
        box-shadow: 0 15px 40px rgba(0,0,0,0.05);
        overflow: hidden;
        border: 1px solid #f1f5f3;
    }

    .image-showcase {
        padding: 3rem;
        background: #fdfdfd;
        display: flex;
        align-items: center;
        justify-content: center;
        border-right: 1px solid #f1f5f3;
    }

    .product-main-img {
        max-width: 100%;
        height: auto;
        max-height: 500px;
        border-radius: 16px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.08);
        transition: transform 0.3s ease;
    }

    .product-main-img:hover {
        transform: scale(1.02);
    }

    /* Product Content Section */
    .content-showcase {
        padding: 3rem;
    }

    .brand-badge {
        background: #e8f5e9;
        color: #198754;
        padding: 0.5rem 1.25rem;
        border-radius: 50px;
        font-weight: 700;
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        margin-bottom: 1rem;
        display: inline-block;
    }

    .product-title {
        font-size: 2.25rem;
        font-weight: 800;
        color: #2c3e50;
        margin-bottom: 1rem;
        line-height: 1.2;
    }

    .price-container {
        background: #f8fbf9;
        padding: 1.5rem;
        border-radius: 16px;
        margin-bottom: 2rem;
        border: 1px dashed #198754;
    }

    .main-price {
        font-size: 2.5rem;
        font-weight: 900;
        color: #198754;
        margin: 0;
    }

    .stock-status {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin-top: 0.5rem;
        font-weight: 600;
    }

    .info-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1.5rem;
        margin-bottom: 2.5rem;
        border-top: 1px solid #f1f5f3;
        padding-top: 2rem;
    }

    .info-item {
        display: flex;
        flex-direction: column;
    }

    .info-label {
        font-size: 0.75rem;
        text-transform: uppercase;
        font-weight: 700;
        color: #99aab5;
        margin-bottom: 0.25rem;
    }

    .info-value {
        font-size: 1.05rem;
        font-weight: 600;
        color: #2c3e50;
    }

    .description-sect {
        margin-top: 2.5rem;
    }

    .nav-tabs {
        border: none;
        gap: 1rem;
        margin-bottom: 1.5rem;
    }

    .nav-tabs .nav-link {
        border: none;
        background: #f8fbf9;
        color: #666;
        padding: 0.75rem 1.5rem;
        border-radius: 12px;
        font-weight: 700;
        transition: all 0.3s;
    }

    .nav-tabs .nav-link.active {
        background: #198754;
        color: white;
        box-shadow: 0 4px 12px rgba(25, 135, 84, 0.2);
    }

    .tab-pane {
        color: #555;
        line-height: 1.5;
        font-size: 0.95rem;
        white-space: pre-line;
    }

    .action-bar {
        background: white;
        padding: 1.5rem 2.5rem;
        border-radius: 20px;
        box-shadow: 0 -5px 25px rgba(0,0,0,0.03);
        margin-top: 2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .btn-buy {
        background: #198754;
        color: white;
        padding: 1rem 3rem;
        border-radius: 16px;
        font-weight: 800;
        font-size: 1.1rem;
        border: none;
        transition: all 0.3s;
        box-shadow: 0 8px 20px rgba(25, 135, 84, 0.3);
    }

    .btn-buy:hover {
        background: #157347;
        transform: translateY(-3px);
        box-shadow: 0 12px 25px rgba(25, 135, 84, 0.4);
        color: white;
    }
</style>

<div class="page-container container">
    <div class="container py-4">
        @{
            bool isCustomer = ViewBag.IsCustomer == true;
        }

        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")" class="text-success text-decoration-none fw-bold">Trang chủ</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "SanPham")" class="text-success text-decoration-none fw-bold">Sản phẩm</a></li>
                <li class="breadcrumb-item active" aria-current="page">@Model.TenSP</li>
            </ol>
        </nav>

        <div class="detail-container">
            <div class="row g-0">
                <!-- Image Side -->
                <div class="col-lg-5 image-showcase">
                    <img id="imgPreview" src="@(string.IsNullOrEmpty(Model.AnhMH) ? Url.Content("~/images/default-product.png") : Url.Content("~/images/products/" + Model.AnhMH))"
                         class="product-main-img" alt="Product">
                </div>

                <!-- Info Side -->
                <div class="col-lg-7 content-showcase">
                    <span class="brand-badge">@Model.TenHangSX</span>
                    <h1 class="product-title">@Model.TenSP</h1>
                    
                    @{
                        string stockClass = "text-success";
                        string stockIcon = "fa-circle-check";
                        string stockText = Model.SoLuongTon > 10 ? "Còn hàng - Có sẵn " + Model.SoLuongTon : (Model.SoLuongTon > 0 ? "Sắp hết hàng " + Model.SoLuongTon : "Tạm hết hàng");

                        if (Model.MaTT == "TT4" || Model.MaTT == "TT04" || Model.TenTT == "Ngưng bán")
                        {
                            stockClass = "text-secondary";
                            stockIcon = "fa-circle-stop";
                            stockText = "Ngưng kinh doanh";
                        }
                        else if (Model.SoLuongTon <= 0)
                        {
                            stockClass = "text-danger";
                            stockIcon = "fa-circle-xmark";
                        }
                    }
                    <div class="price-container">
                        <div class="main-price">@string.Format("{0:N0} đ", Model.GiaBan)</div>
                        <div class="stock-status @stockClass">
                            <i class="fa-solid @stockIcon"></i>
                            @stockText
                        </div>
                    </div>

                    <div class="info-grid">
                        <div class="info-item">
                            <span class="info-label">Mã định danh</span>
                            <span class="info-value">#@Model.MaSP</span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">Danh mục</span>
                            <span class="info-value">@Model.TenLoai</span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">Trọng lượng</span>
                            <span class="info-value">@(Model.TrongLuong?.ToString("N0") ?? "-") g</span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">Trạng thái</span>
                            <span class="info-value">@(Model.TenTT ?? "Tiêu chuẩn")</span>
                        </div>
                    </div>

                    <!-- Details Tabs -->
                    <div class="description-sect">
                        <ul class="nav nav-tabs" id="productTab" role="tablist">
                            <li class="nav-item" role="presentation">
                                <button class="nav-link active" id="info-tab" data-bs-toggle="tab" data-bs-target="#info" type="button" role="tab" aria-selected="true">Mô tả chung</button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link" id="usage-tab" data-bs-toggle="tab" data-bs-target="#usage" type="button" role="tab" aria-selected="false">Cách dùng</button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link" id="safety-tab" data-bs-toggle="tab" data-bs-target="#safety" type="button" role="tab" aria-selected="false">Bảo quản</button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link" id="target-tab" data-bs-toggle="tab" data-bs-target="#target" type="button" role="tab" aria-selected="false">Đối tượng </button>
                            </li>
                        </ul>
                        <div class="tab-content pt-2" id="productTabContent">
                            <div class="tab-pane fade show active" id="info" role="tabpanel">
                               @if (!string.IsNullOrEmpty(Model.MoTaSP))
                               {
                                    <div class="mb-2">
                                        <b class="text-dark d-block mb-1">Mô tả:</b>@Model.MoTaSP
                                    </div>
                               }
                               else
                               {
                                    <div class="mb-3 fst-italic">
                                        Chưa có thông tin mô tả chi tiết cho sản phẩm này.
                                    </div>
                               }
                              
                               @if(!string.IsNullOrEmpty(Model.ThanhPhan)) {
                                    <div class="mt-2">
                                        <b class="text-dark d-block mb-1">Thành phần:</b>@Model.ThanhPhan
                                    </div>
                                }
                            </div>
                            <div class="tab-pane fade" id="usage" role="tabpanel">
                                @if(!string.IsNullOrEmpty(Model.CongDung)) {
                                    <div class="mb-2">
                                        <b class="text-dark d-block mb-1">Công dụng chính:</b>@Model.CongDung
                                    </div>
                                }
                                @if (!string.IsNullOrEmpty(Model.HDSD))
                                {
                                    <div class="mb-2">
                                        <b class="text-dark d-block mb-1">Hướng dẫn sử dụng:</b>@Model.HDSD
                                    </div>
                                }
                                else
                                {
                                    <div class="mb-3 fst-italic">
                                        Vui lòng xem hướng dẫn chi tiết trên bao bì sản phẩm.
                                    </div>
                                }

                            </div>
                            <div class="tab-pane fade" id="safety" role="tabpanel">
                                @if (!string.IsNullOrEmpty(Model.HDBaoQuan))
                                {
                                    <div class="mb-2">
                                        <b class="text-dark d-block mb-1">Hướng dẫn bảo quản:</b>@Model.HDBaoQuan
                                    </div>
                                }
                                else
                                {
                                    <div class="mb-3 fst-italic">
                                        Bảo quản nơi khô ráo, thoáng mát, tránh ánh nắng trực tiếp từ mặt trời.
                                    </div>
                                }
                            </div>

                            <div class="tab-pane fade" id="target" role="tabpanel">
                                @if (!string.IsNullOrEmpty(Model.DoiTuongSuDung))
                                {
                                    <div class="mb-2">
                                        <b class="text-dark d-block mb-1">Đối tượng sử dụng:</b>@Model.DoiTuongSuDung
                                    </div>
                                }
                                else
                                {
                                    <div class="mb-3 fst-italic">
                                        Mọi đối tượng.
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Float Action Bar -->
        <div class="action-bar">
            <button type="button" onclick="goBack('@Url.Action("Index", "SanPham")')" class="btn btn-outline-secondary px-4 fw-bold" style="border-radius:12px;">
                <i class="fa-solid fa-arrow-left-long me-2"></i> Quay lại cửa hàng
            </button>
            
            <div class="d-flex gap-2">
                @{
                    var isLoggedIn = Context.Session.GetString("IsLoggedIn") == "true";
                }
                @if (isLoggedIn && !isCustomer)
                {
                    <a href="@Url.Action("Edit", "SanPham", new { id = Model.MaSP })" class="btn btn-warning text-white fw-bold px-4" style="border-radius:12px;">
                        <i class="fa-solid fa-pen-nib me-2"></i> Chỉnh sửa
                    </a>
                    <a href="@Url.Action("Delete", "SanPham", new { id = Model.MaSP })" class="btn btn-danger fw-bold px-4" style="border-radius:12px;">
                        <i class="fa-solid fa-trash-can me-2"></i> Xóa
                    </a>
                }
                else
                {
                    @if (Model.MaTT == "TT4" || Model.MaTT == "TT04" || Model.TenTT == "Ngưng bán")
                    {
                        <button class="btn btn-secondary px-5 py-3 fw-bold shadow-none" disabled style="border-radius: 16px; cursor: not-allowed; opacity: 0.7;">
                            <i class="fa-solid fa-ban me-2"></i> Sản phẩm ngưng bán
                        </button>
                    }
                    else if (Model.SoLuongTon <= 0)
                    {
                        <button class="btn btn-danger px-5 py-3 fw-bold shadow-none" disabled style="border-radius: 16px; cursor: not-allowed; opacity: 0.7;">
                            <i class="fa-solid fa-box-open me-2"></i> Tạm hết hàng
                        </button>
                    }
                    else
                    {
                        <form asp-controller="Cart" asp-action="AddToCart" method="post" class="d-flex align-items-center gap-3">
                            <input type="hidden" name="maSP" value="@Model.MaSP" />
                            
                            <div class="d-flex align-items-center bg-light p-1" style="border-radius: 12px; border: 1px solid #ddd;">
                                <button type="button" class="btn btn-sm px-3" onclick="updateDetailQty(-1, @Model.SoLuongTon)">-</button>
                                <input type="number" name="soLuong" id="detailQty" value="1" min="1" max="@Model.SoLuongTon" 
                                       class="form-control form-control-sm text-center border-0 bg-transparent fw-bold" 
                                       style="width: 60px; box-shadow: none;" onchange="validateDetailQty(@Model.SoLuongTon)" />
                                <button type="button" class="btn btn-sm px-3" onclick="updateDetailQty(1, @Model.SoLuongTon)">+</button>
                            </div>

                            <button type="submit" id="addCartBtn" class="btn btn-buy">
                                <i class="fa-solid fa-cart-shopping me-2"></i> Thêm vào giỏ hàng
                            </button>
                        </form>
                        <div id="qtyWarning" class="text-danger small mt-2 fw-bold" style="display:none;">
                            <i class="fa-solid fa-triangle-exclamation me-1"></i> Số lượng vượt quá tồn kho (Tối đa: @Model.SoLuongTon)
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>

<script>
    function updateDetailQty(delta, max) {
        const input = document.getElementById('detailQty');
        let val = parseInt(input.value) || 1;
        val += delta;
        if (val < 1) val = 1;
        if (val > max) {
            Swal.fire({
                icon: 'warning',
                title: 'Giới hạn tồn kho',
                text: 'Hiện chỉ còn ' + max + ' sản phẩm.',
                confirmButtonColor: '#198754'
            });
            val = max;
        }
        input.value = val;
        validateDetailQty(max);
    }

    function validateDetailQty(max) {
        const input = document.getElementById('detailQty');
        const btn = document.getElementById('addCartBtn');
        const warning = document.getElementById('qtyWarning');
        let val = parseInt(input.value) || 0;

        if (val > max) {
            warning.style.display = 'block';
            btn.disabled = true;
            btn.style.opacity = '0.5';
        } else {
            warning.style.display = 'none';
            btn.disabled = false;
            btn.style.opacity = '1';
        }
    }
</script>
