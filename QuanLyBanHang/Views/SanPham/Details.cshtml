@model QuanLyBanHang.Models.SanPhamDto

@{
    ViewBag.Title = "Chi tiết Sản phẩm";
}

<div class="container my-4">
    <h3 class="text-success mb-4">
        Chi tiết Sản phẩm
    </h3>

    <div class="shadow-sm">
        <div class="row">
            <!-- Ảnh minh họa -->
            <div class="col-md-5 text-center">
                        <img src="@Url.Content( Model.AnhMH)"
                             alt="@Model.TenSP"
                             class="img-fluid rounded border"
                             style="max-height: 400px; object-fit: contain;" />
            </div>

            <!-- Thông tin sản phẩm -->
            <div class="col-md-7">
                <div class="p-3">
                    <h4 class="text-primary mb-3">@Model.TenSP</h4>
                    <p><strong>Mã sản phẩm:</strong> @Model.MaSP</p>
                    <p><strong>Mô tả:</strong> @Model.MoTaSP</p>

                    <div class="row mt-3">
                        <div class="col-md-6 mb-2"><strong>Đơn giá:</strong> @string.Format("{0:N0} đ", Model.DonGia)</div>
                        <div class="col-md-6 mb-2"><strong>Giá bán:</strong> @string.Format("{0:N0} đ", Model.GiaBan)</div>
                        <div class="col-md-6 mb-2"><strong>Số lượng tồn:</strong> @Model.SoLuongTon</div>
                        <div class="col-md-6 mb-2"><strong>Trạng thái:</strong> @Model.TrangThai</div>
                        <div class="col-md-6 mb-2"><strong>Loại sản phẩm:</strong> @Model.TenLoai</div>
                        <div class="col-md-6 mb-2"><strong>Nhà cung cấp:</strong> @Model.TenNCC</div>
                        <div class="col-md-12 mb-2"><strong>Gian hàng:</strong> @Model.TenGH</div>
                    </div>

                    
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <a class="btn btn-warning me-2 text-white" href="@Url.Action("Edit", "SanPham", new { id = Model.MaSP })">
            <i class="fa-solid fa-pen-to-square text-white"></i> Sửa
        </a>

        <a class="btn btn-danger me-2 text-white" href="@Url.Action("Delete", "SanPham", new { id = Model.MaSP })">
            <i class="fa-solid fa-trash"></i> Xóa
        </a>

        <a class="btn btn-secondary" href="@Url.Action("Index", "SanPham")">
            <i class="fa-solid fa-arrow-left"></i> Quay lại
        </a>

    </div>
</div>
