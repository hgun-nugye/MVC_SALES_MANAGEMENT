@model IEnumerable<QuanLyBanHang.Models.VaiTro>
@{
    ViewBag.Title = "Quản lý Vai trò";
}

<style>
    .search-wrapper {
        position: relative;
        width: 100%;
        max-width: 400px;
    }

    .search-wrapper input {
        padding-left: 38px !important;
        border-radius: 8px;
        background: #f8f9fa;
    }

    .search-wrapper i {
        position: absolute;
        left: 12px;
        top: 50%;
        transform: translateY(-50%);
        pointer-events: none;
    }

    .table {
        overflow-x: auto;
        white-space: nowrap;
        width: 100%;
    }

    .table-hover tbody tr:hover {
        background-color: #f5faff;
        transition: 0.2s;
    }

    .clickable-row {
        cursor: pointer;
    }

    .clickable-row:hover {
        background-color: #f5faff !important;
    }
</style>

    <div class="page-header d-flex justify-content-between align-items-center">
    <h4 class="mb-0 fw-bold">
            <i class="fa-solid fa-user-shield me-2"></i>
            Quản lý Vai trò
        </h4>
        <div class="d-flex gap-2">
            <a asp-action="Index" asp-controller="PhanQuyen" class="btn btn-outline-light fw-bold px-4">
                <i class="fa-solid fa-user-lock me-2"></i> Phân quyền
            </a>
            <a href="@Url.Action("Create", "VaiTro")" class="btn btn-light text-success fw-bold px-4">
                <i class="fa-solid fa-plus-circle me-2"></i> Thêm
            </a>
        </div>
    </div>

    <!-- FORM LỌC -->
    <div class="filter-card">
        <form id="Form" method="get" class="row g-3 align-items-end">
            <div class="col-lg-11">
                <label class="form-label small fw-bold text-muted text-uppercase">Tìm kiếm</label>
                <div class="search-input-group">
                    <i class="fa fa-search"></i>
                    <input id="searchBox" type="text" name="search" value="@ViewBag.Search" class="form-control" placeholder="Tìm mã hoặc tên vai trò...">
                </div>
            </div>
            <div class="col-lg-1 d-flex gap-2">
                <button type="button" id="btnClear" class="btn btn-outline-secondary btn-clear">
                    <i class="fa-solid fa-rotate-left"></i>
                </button>
            </div>
        </form>
    </div>

    <table class="table table-hover align-middle text-center shadow-sm">
        <thead class="table-success">
            <tr>
                <th class="w-25">Mã vai trò</th>
                <th class="w-50">Tên vai trò</th>
            </tr>
        </thead>
        <tbody class="text-start">
        @if(Model!=null && Model.Any())
        {
            @foreach (var item in Model)
            {
                <tr class="clickable-row" data-href="@Url.Action("Details", "VaiTro", new { id = item.MaVT })">
                    <td class="text-center">@item.MaVT</td>
                    <td class="text-center">@item.TenVT</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="2" class="text-center text-muted fst-italic">Không có vai trò nào.</td>
            </tr>
        }
        </tbody>
    </table>
    <div class="d-flex justify-content-end">
        <a asp-action="Index" asp-controller="PhanQuyen" class="btn btn-secondary">
            <i class="fa-solid fa-arrow-left"></i> Quay lại
        </a>
    </div>
</div>

@section Scripts {
    <script>
        function debounce(fn, delay) {
            let timer = null;
            return function () {
                const context = this, args = arguments;
                clearTimeout(timer);
                timer = setTimeout(() => fn.apply(context, args), delay);
            };
        }

        $("#searchBox").on("change", debounce(function () {
            $("#Form").submit();
        }, 400));

        $("#btnClear").on("click", function () {
            $("#searchBox").val("");
            $("#Form").submit();
        });

        // Clickable row - xử lý click vào row để xem detail
        $(document).ready(function() {
            // Sử dụng event delegation để xử lý cả row được load sau
            $(document).off('click', '.clickable-row').on('click', '.clickable-row', function(e) {
                // Ngăn click vào các element con (button, link, input)
                if ($(e.target).is('a, button, input, select, textarea') || $(e.target).closest('a, button').length) {
                    return;
                }
                
                var href = $(this).data('href');
                if (href && href !== '#') {
                    // Sử dụng window.location.href thay vì window.location để đảm bảo navigate
                    window.location.href = href;
                }
            });
            
            // Thêm cursor pointer cho clickable row
            $('.clickable-row').css('cursor', 'pointer');
        });
    </script>
}

