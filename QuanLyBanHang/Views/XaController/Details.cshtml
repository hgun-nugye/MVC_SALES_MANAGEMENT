@model QuanLyBanHang.Models.Xa
@{
    ViewBag.Title = "Chi tiết Xã";
}

<div class="container">
    <h2 class="text-info mb-3">
        Chi tiết Xã
    </h2>

    <div class="card shadow-sm border-info">
        <div class="card-body">
            <p><strong>Mã Xã:</strong> @Model.MaXa</p>
            <p><strong>Xã:</strong> @Model.TenXa</p>
            <p><strong>Tỉnh:</strong> @Model.TenTinh</p>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.MaXa" class="btn btn-warning text-white">
            <i class="fa-solid fa-pen-to-square"></i> Sửa
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fa-solid fa-arrow-left"></i> Quay lại
        </a>
    </div>

</div>