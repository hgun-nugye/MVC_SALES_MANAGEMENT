@model QuanLyBanHang.Models.DonBanHang

@{
    ViewBag.Title = "Xóa Đơn bán hàng";
}

<div class="container border p-4 rounded shadow-sm bg-light">

    <h4 class="mb-3 text-danger">
        <i class="fa-solid fa-trash"></i> Xóa Đơn bán hàng
    </h4>

    <div class="alert alert-warning">
        <i class="fa-solid fa-triangle-exclamation"></i>
        Bạn có chắc muốn xóa đơn bán hàng <strong>@Model.MaDBH</strong> không?
    </div>

    <dl class="row">
        <dt class="col-sm-3">Ngày bán hàng</dt>
        <dd class="col-sm-9">@Model.NgayBH.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-3">Khách hàng</dt>
        <dd class="col-sm-9">@Model.TenKH</dd>
    </dl>
    <form id="deleteForm" asp-action="Delete" method="post" class="mt-4">
        <input type="hidden" asp-for="MaDBH" />
        <button type="button" class="btn btn-danger" onclick="confirmDelete()">
            <i class="fa-solid fa-trash-can"></i> Xóa
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fa-solid fa-arrow-left"></i> Quay lại
        </a>
    </form>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function confirmDelete() {
            Swal.fire({
                title: 'Xác nhận xóa?',
                text: 'Bạn có chắc chắn muốn xóa đơn bán hàng này?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Xóa',
                cancelButtonText: 'Hủy',
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6'
            }).then((result) => {
                if (result.isConfirmed) {
                    document.getElementById('deleteForm').submit();
                }
            });
        }
    </script>
}