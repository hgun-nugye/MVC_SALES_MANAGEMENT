@model QuanLyBanHang.Models.DonBanHang

@{
    ViewBag.Title = "Sửa Đơn bán hàng";
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}


<div class="container border p-4 rounded shadow-sm bg-light">

    <h4 class="mb-3 text-success">
        Sửa Đơn bán hàng
    </h4>

    <form asp-action="Edit" method="post">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <input type="hidden" asp-for="MaDBH" />

        <!-- THÔNG TIN ĐƠN -->
        <div class="mb-3">
            <label class="form-label fw-bold">Ngày Bán hàng </label>
            <input asp-for="NgayBH" type="date" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Khách hàng</label>
            <select asp-for="MaKH" asp-items="ViewBag.MaKH" class="form-select"></select>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold required-field">Địa chỉ đơn bán hàng</label>
            <input asp-for="DiaChiDBH" class="form-control" />
            <span asp-validation-for="DiaChiDBH" class="text-danger small"></span>
        </div>

        <div class="row g-4">
            <div class="col-md-6">
                <label class="form-label">
                    <i class="fa-solid fa-city"></i>
                    Tỉnh
                </label>
                <div class="input-group-icon">
                    <select id="MaTinh" name="maTinh" asp-items="@ViewBag.Tinh" class="form-select">
                        <option value="">@Model.TenTinh</option>
                    </select>
                </div>
            </div>

            <div class="col-md-6">
                <label asp-for="MaXa" class="form-label required-field">
                    <i class="fa-solid fa-map-location-dot"></i>
                    Xã
                </label>
                <div class="input-group-icon">
                    
                    <select id="MaXa" name="maXa" asp-for="MaXa" asp-items="@ViewBag.Xa" class="form-select">
                        <option value="">@Model.TenXa</option>
                    </select>
                </div>
                <span asp-validation-for="MaXa" class="text-danger small mt-1"></span>
            </div>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold required-field">Trạng thái đơn hàng</label>
            <select asp-for="MaTTBH" asp-items="ViewBag.MaTTBH" class="form-select">
                <option value="">-- Chọn trạng thái --</option>
            </select>
            <span asp-validation-for="MaTTBH" class="text-danger small"></span>
        </div>

        <hr />

        <!-- BẢNG CHI TIẾT SẢN PHẨM -->
        <h4>Chi tiết sản phẩm</h4>

        <table class="table  table-striped">
            <thead>
                <tr class="table-warning">
                    <th>Sản phẩm</th>
                    <th>Số lượng</th>
                    <th>Đơn giá</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.CTBHs.Count; i++)
                {
                    <tr>
                        <td>
                            <input type="hidden" asp-for="CTBHs[i].MaSP" />
                            <span>@Model.CTBHs[i].TenSP</span>
                            
                        </td>
                        <td>
                            <input asp-for="CTBHs[i].SLB" class="form-control" />
                        </td>
                        <td>
                            <input asp-for="CTBHs[i].DGB" class="form-control" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <button type="submit" class="btn btn-warning text-white">
            <i class="fa-solid fa-save"></i> Cập nhật
        </button>

        <a asp-action="Details" asp-route-id="@Model.MaDBH" class="btn btn-secondary">
            <i class="fa-solid fa-arrow-left"></i> Quay lại
        </a>

    </form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>      

         $(function () {
            $('#MaTinh').change(function () {
                var maTinh = $(this).val();
                var maXaSelected = '@ViewData["MaXaSelected"]';

                $('#MaXa').html('<option value="">-- Chọn Xã --</option>');

                if (maTinh) {
                    $.getJSON('/KhachHang/GetXaByTinh', { maTinh: maTinh }, function (data) {
                        var options = '<option value="">-- Chọn Xã --</option>';

                        $.each(data, function (i, xa) {
                            var maXa = xa.MaXa !== undefined ? xa.MaXa : xa.maXa;
                            var tenXa = xa.TenXa !== undefined ? xa.TenXa : xa.tenXa;
                            var selected = (maXa == maXaSelected) ? 'selected' : '';
                            options += `<option value="${maXa}" ${selected}>${tenXa}</option>`;
                        });

                        $('#MaXa').html(options);
                    });
                }
            });

            if ($('#MaTinh').val()) {
                $('#MaTinh').trigger('change');
            }
        });
    </script>
}
