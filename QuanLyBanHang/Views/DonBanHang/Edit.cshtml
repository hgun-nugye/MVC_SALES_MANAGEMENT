@model QuanLyBanHang.Models.DonBanHangEditCTBH

@{
    ViewBag.Title = "Sửa Đơn bán hàng";
}

<div class="container border p-4 rounded shadow-sm bg-light">

    <h2 class="mb-3 text-warning">
        <i class="fa-solid fa-pen-to-square"></i> Sửa Đơn bán hàng
    </h2>

    <form asp-action="Edit" method="post">

        <input type="hidden" asp-for="MaDBH" />

        <!-- THÔNG TIN ĐƠN -->
        <div class="mb-3">
            <label class="form-label fw-bold">Ngày Bán hàng </label>
            <input asp-for="NgayBH" type="date" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Khách hàng</label>
            <select asp-for="MaKH" asp-items="ViewBag.MaKH" class="form-select"></select>
        </div>

        <hr />

        <!-- BẢNG CHI TIẾT SẢN PHẨM -->
        <h4>Chi tiết sản phẩm</h4>

        <table class="table table-bordered table-striped">
            <thead>
                <tr class="table-warning">
                    <th>Sản phẩm</th>
                    <th>Số lượng</th>
                    <th>Đơn giá</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.ChiTiet.Count; i++)
                {
                    <tr>
                        <td>
                            <input type="hidden" asp-for="ChiTiet[i].MaSP" />
                            <span>@Model.ChiTiet[i].TenSP</span>
                            
                        </td>
                        <td>
                            <input asp-for="ChiTiet[i].SLB" class="form-control" />
                        </td>
                        <td>
                            <input asp-for="ChiTiet[i].DGB" class="form-control" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <button type="submit" class="btn btn-warning text-white">
            <i class="fa-solid fa-save"></i> Lưu thay đổi
        </button>

        <a asp-action="Index" class="btn btn-secondary">
            <i class="fa-solid fa-arrow-left"></i> Quay lại
        </a>

    </form>
</div>
