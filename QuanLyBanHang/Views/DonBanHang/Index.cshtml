@model IEnumerable<QuanLyBanHang.Models.DonBanHang>

@{
    ViewBag.Title = "Quản lý Đơn bán hàng";
}

<div class="container">
    <h2 class="mb-5 text-primary">
        <i class="fa-solid fa-file-invoice-dollar pe-2"></i> Danh sách Đơn bán hàng
    </h2>
  
    <!-- FORM LỌC -->
    <form id="filterForm" method="get" class="d-flex flex-wrap align-items-center justify-content-between mb-4 gap-2">
        <!-- SEARCH -->
        <div class="input-group" style="flex: 1; min-width: 250px; max-width: 400px;">
            <span class="input-group-text bg-light border-end-0">
                <i class="fa fa-search text-info"></i>
            </span>
            <input id="searchBox" type="text" name="search" value="@ViewBag.Search"
                   class="form-control border-start-0 bg-light"
                   placeholder="Tìm đơn hàng, khách hàng, ngày bán...">
        </div>

        <!-- FILTERS -->
        <div class="d-flex align-items-center gap-2 flex-wrap">
            <!-- LỌC THÁNG -->
            <select name="month" id="monthSelect" class="form-select" style="width: 120px;">
                <option value="">-- Tháng --</option>
                @for (int i = 1; i <= 12; i++)
                {
                    @Html.Raw($"<option value='{i}' {(ViewBag.Month == i ? "selected" : "")}>Tháng {i}</option>")
                }
            </select>

            <!-- LỌC NĂM -->
            <select name="year" id="yearSelect" class="form-select" style="width: 120px; ">
                <option value="">-- Năm --</option>
                @for (int y = DateTime.Now.Year; y >= DateTime.Now.Year - 10; y--)
                {
                    @Html.Raw($"<option value='{y}' {(ViewBag.Year == y ? "selected" : "")}>{y}</option>")
                }
            </select>

            <button type="submit" class="btn btn-primary">
                <i class="fa fa-filter"></i> Lọc
            </button>

            <a href="@Url.Action("Create", "DonBanHang")" class="btn btn-success ms-2">
                <i class="fa-solid fa-circle-plus"></i> Thêm
            </a>
        </div>
    </form>

    <!-- TABLE -->
    <div id="tableContainer">
        <table class="table table-bordered table-hover align-middle text-center shadow-sm">
            <thead class="table-primary">
                <tr>
                    <th>Mã Đơn</th>
                    <th>Ngày bán hàng</th>
                    <th>Mã KH</th>
                    <th>Tên KH</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody id="tableBody">
                @await Html.PartialAsync("DonBanHangTable", Model)
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $("#searchBox").on("keyup", function () {
            let keyword = $(this).val();

            $.ajax({
                url: "/DonBanHang/Search",
                type: "GET",
                data: { keyword: keyword },
                success: function (result) {
                    $("#tableBody").html(result);
                }
            });
        });
    </script>
}
