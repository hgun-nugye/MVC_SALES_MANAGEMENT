@model IEnumerable<QuanLyBanHang.Models.DonBanHang>

@{
    ViewBag.Title = "Quản lý Đơn bán hàng";
}

<style>
    .search-wrapper {
        position: relative;
        width: 100%;
        max-width: 400px;
    }

        .search-wrapper i {
            position: absolute;
            left: 12px;
            top: 50%;
            transform: translateY(-50%);
            color: #0d6efd;
            font-size: 15px;
            pointer-events: none;
        }

        .search-wrapper input {
            padding-left: 38px !important;
            border-radius: 8px;
        }

            .search-wrapper input:focus {
                box-shadow: 0 0 0 3px rgba(13,110,253,0.25);
                border-color: #0d6efd;
            }
</style>


<div class="container">
    <h2 class="mb-5 text-success">
        <i class="fa-solid fa-file-invoice-dollar pe-2"></i> Danh sách Đơn bán hàng
    </h2>

    <!-- FORM LỌC -->
    <form id="filterForm" method="get"
          class="d-flex flex-wrap align-items-center justify-content-between mb-4 gap-3">

        <!-- SEARCH BOX -->
        <div class="search-wrapper flex-grow-1">
            <i class="fa fa-search"></i>
            <input id="searchBox" type="text" name="search" value="@ViewBag.Search"
                   class="form-control bg-light"
                   placeholder="Tìm đơn hàng, khách hàng, ngày bán...">
        </div>

        <!-- FILTER GROUP -->
        <div class="d-flex flex-wrap align-items-center gap-2">

            <!-- THÁNG -->
            <select name="month" id="monthSelect" class="form-select text-black-50" style="width: 130px;">
                <option value="">-- Tháng --</option>
                @for (int i = 1; i <= 12; i++)
                {
                    @Html.Raw($"<option value='{i}' {(ViewBag.Month == i ? "selected" : "")}>Tháng {i}</option>")
                }
            </select>

            <!-- NĂM -->
            <select name="year" id="yearSelect" class="form-select text-black-50" style="width: 130px;">
                <option value="">-- Năm --</option>
                @for (int y = DateTime.Now.Year; y >= DateTime.Now.Year - 10; y--)
                {
                    @Html.Raw($"<option value='{y}' {(ViewBag.Year == y ? "selected" : "")}>{y}</option>")
                }
            </select>

            <button type="submit" class="btn btn-primary">
                <i class="fa fa-filter"></i> Lọc
            </button>

            <button type="button" id="btnClearFilter" class="btn btn-secondary">
                <i class="fa-solid fa-rotate-left"></i> Xóa
            </button>

            <a href="@Url.Action("Create", "DonBanHang")" class="btn btn-success">
                <i class="fa-solid fa-circle-plus"></i> Thêm
            </a>
        </div>
    </form>


    <!-- TABLE -->
    <div id="tableContainer">
        <table class="table table-bordered table-hover align-middle text-center shadow-sm">
            <thead class="table-primary">
                <tr>
                    <th>Mã Đơn</th>
                    <th>Ngày bán hàng</th>
                    <th>Mã KH</th>
                    <th>Tên KH</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody id="tableBody">
                @await Html.PartialAsync("DonBanHangTable", Model)
            </tbody>
        </table>
    </div>
</div>


@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>

        // SEARCH
        $("#searchBox").on("keyup", function () {
            let keyword = $(this).val();

            $.ajax({
                url: "/DonBanHang/Search",
                type: "GET",
                data: { keyword: keyword },
                success: function (result) {
                    $("#tableBody").html(result);
                }
            });
        });

        //  CLEAR FILTER
        $("#btnClearFilter").on("click", function () {
            $("#searchBox").val("");
            $("#monthSelect").val("");
            $("#yearSelect").val("");

            $.ajax({
                url: "/DonBanHang/Search",
                type: "GET",
                success: function (result) {
                    $("#tableBody").html(result);
                }
            });
        });

    </script>
}
