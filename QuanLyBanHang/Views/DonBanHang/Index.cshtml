@model IEnumerable<QuanLyBanHang.Models.DonBanHangDetailDto>

@{
    ViewBag.Title = "Quản lý Đơn bán hàng";
}

<style>
    .search-wrapper {
        position: relative;
        width: 100%;
        max-width: 400px;
    }

    .search-wrapper i {
            position: absolute;
            left: 12px;
            top: 50%;
            transform: translateY(-50%);
            font-size: 15px;
            pointer-events: none;
        }

        .search-wrapper input {
            padding-left: 38px !important;
            border-radius: 8px;
        }

    .badge-status {
        padding: 0.5em 0.8em;
        border-radius: 50px;
        font-weight: 500;
        font-size: 0.85rem;
        display: inline-block;
        min-width: 100px;
    }

    /* Chờ xử lý - Vàng */
    .status-cho {
        background-color: #fff3cd;
        color: #856404;
        border: 1px solid #ffeeba;
    }

    /* Đã xác nhận - Xanh dương */
    .status-dxn{
        background-color: #cfe2ff;
        color: #084298;
        border: 1px solid #b6d4fe;
    }   

    /* Đã hoàn thành - Xanh lơ */
    .status-hth {
        background-color: #d1e7dd;
        color: #0f5132;
        border: 1px solid #badbcc;
    }
    /* Đã hủy - Đỏ */
    .status-huy {
        background-color: #f8d7da;
        color: #842029;
        border: 1px solid #f5c2c7;
    }
   
    .status-default {
        background-color: #e2e3e5;
        color: #41464b;
    }
</style>


<div class="container">
    @{
        bool isCustomer = ViewBag.IsCustomer == true;
    }

    <div class="d-flex flex-wrap align-items-center justify-content-between gap-2">
        <h4 class="mb-5 fw-bold text-success">
            @(isCustomer ? "Đơn hàng của bạn" : "Danh sách Đơn bán hàng")
        </h4>

        @if (!isCustomer)
        {
            <a href="@Url.Action("Index", "TrangThaiBH")" class="btn btn-success mb-5">
                <i class="fa-solid fa-list-check"></i> Quản lý trạng thái bán hàng
            </a>
        }
    </div>
    <!-- FORM LỌC -->
    <div class="filter-card">
        <form id="Form" method="get" class="row g-3 align-items-end">
            <!-- SEARCH BOX -->
            <div class="col-lg-4">
                <label class="form-label small fw-bold text-muted text-uppercase">Tìm kiếm nhanh</label>
                <div class="search-input-group">
                    <i class="fa-solid fa-magnifying-glass"></i>
                    <input id="searchBox" type="text" name="search" value="@ViewBag.Search"
                           class="form-control"
                           placeholder="Tìm đơn hàng, khách hàng...">
                </div>
            </div>

            <!-- FILTERS -->
            <div class="col-lg-2">
                <label class="form-label small fw-bold text-muted text-uppercase">Tháng</label>
                <select name="month" id="monthSelect" class="form-select">
                    <option value="">-- Tháng --</option>
                    @for (int i = 1; i <= 12; i++)
                    {
                        @Html.Raw($"<option value='{i}' {(ViewBag.Month == i ? "selected" : "")}>Tháng {i}</option>")
                    }
                </select>
            </div>

            <div class="col-lg-2">
                <label class="form-label small fw-bold text-muted text-uppercase">Năm</label>
                <select name="year" id="yearSelect" class="form-select">
                    <option value="">-- Năm --</option>
                    @for (int y = DateTime.Now.Year; y >= DateTime.Now.Year - 10; y--)
                    {
                        @Html.Raw($"<option value='{y}' {(ViewBag.Year == y ? "selected" : "")}>{y}</option>")
                    }
                </select>
            </div>

            <div class="col-lg-2">
                <label class="form-label small fw-bold text-muted text-uppercase">Trạng thái</label>
                <select name="MaTTBH" id="ttdhSelect" class="form-select">
                    <option value="">-- Trạng thái --</option>
                    @foreach (var tt in (IEnumerable<SelectListItem>)ViewBag.TrangThaiBH)
                    {
                        <option value="@tt.Value" selected="@(tt.Value == ViewBag.MaTTBH)">
                            @tt.Text
                        </option>
                    }
                </select>
            </div>

            <!-- BUTTONS -->
            <div class="col-lg-2 d-flex gap-2">
                <button type="button" id="btnClear" class="btn btn-outline-secondary btn-clear">
                    <i class="fa-solid fa-rotate-left"></i>
                </button>
                <a href="@Url.Action("Create", "DonBanHang")" class="btn btn-success d-flex align-items-center justify-content-center flex-grow-1" style="border-radius:12px; height:50px;">
                    <i class="fa-solid fa-plus-circle me-2"></i> Thêm
                </a>
            </div>
        </form>
    </div>


    <!-- TABLE -->
    <div id="tableContainer">
        <table class="table  table-hover align-middle text-center shadow-sm">
            <thead class="table-success">
                <tr>
                    <th>Mã Đơn</th>
                    <th>Ngày bán hàng</th>
                    <th>Mã KH</th>
                    <th>Tên KH</th>
                    <th>Trạng thái</th>
                </tr>
            </thead>
            <tbody id="tableBody">
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr class="clickable-row" data-href="@Url.Action("Details", "DonBanHang", new { id = item.MaDBH, search = ViewBag.Search, month = ViewBag.Month, year = ViewBag.Year, MaTTBH = ViewBag.MaTTBH })">

                            <td>@item.MaDBH</td>
                            <td>@item.NgayBH.ToString("dd/MM/yyyy")</td>
                            <td>@item.MaKH</td>
                            <td>@item.TenKH</td>
                            <td>
                                @{
                                    string statusClass = item.MaTTBH?.ToLower().Trim() ?? "default";
                                }
                                <span class="badge-status status-@statusClass">
                                    @item.TenTTBH
                                </span>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-muted fst-italic">Không có đơn hàng nào.</td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
   
</div>

@section Scripts {
    <script>
            // debounce function
            function debounce(fn, delay) {
                let timer = null;
                return function() {
                    const context = this, args = arguments;
                    clearTimeout(timer);
                    timer = setTimeout(() => fn.apply(context, args), delay);
                };
            }

        // khi thay đổi  -> submit form
        $("#searchBox, #monthSelect, #yearSelect, #ttdhSelect").on("change", debounce(function(){
            $("#Form").submit();
        }, 400));

        // clear 
        $("#btnClear").on("click", function(){
            $("#searchBox").val("");
            $("#monthSelect").val("");
            $("#yearSelect").val("");
            $("#ttdhSelect").val("");
            $("#Form").submit();
        });
    </script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            document.querySelectorAll(".clickable-row").forEach(row => {
                row.addEventListener("click", function () {
                    window.location = this.dataset.href;
                });
            });
        });
    </script>
}