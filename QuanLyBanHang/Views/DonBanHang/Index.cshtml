@model IEnumerable<QuanLyBanHang.Models.DonBanHang>

@{
    ViewBag.Title = "Quản lý Đơn bán hàng";
}

<style>
    .search-wrapper {
        position: relative;
        width: 100%;
        max-width: 400px;
    }

    .search-wrapper i {
            position: absolute;
            left: 12px;
            top: 50%;
            transform: translateY(-50%);
            font-size: 15px;
            pointer-events: none;
        }

        .search-wrapper input {
            padding-left: 38px !important;
            border-radius: 8px;
        }

</style>


<div class="container">
    <h4 class="mb-5 text-success">
        Danh sách Đơn bán hàng
    </h4>

    <!-- FORM LỌC -->
    <form id="Form" method="get"
          class="d-flex flex-wrap align-items-center justify-content-between mb-4 gap-3">

        <!-- SEARCH BOX -->
        <div class="search-wrapper flex-grow-1">
            <i class="fa fa-search"></i>
            <input id="searchBox" type="text" name="search" value="@ViewBag.Search"
                   class="form-control bg-light"
                   placeholder="Tìm đơn hàng, khách hàng, ngày bán...">
        </div>

        <!--  GROUP -->
        <div class="d-flex flex-wrap align-items-center gap-2">

            <div class="d-flex align-items-center gap-2">
                <label class="w-100 text-end opacity-50"> <i class="fa fa- me-2"></i>:</label>
                <!-- THÁNG -->
                <select name="month" id="monthSelect" class="form-select" style="width: 130px;">
                    <option value="">-- Tháng --</option>
                    @for (int i = 1; i <= 12; i++)
                    {
                        @Html.Raw($"<option value='{i}' {(ViewBag.Month == i ? "selected" : "")}>Tháng {i}</option>")
                    }
                </select>

                <!-- NĂM -->
                <select name="year" id="yearSelect" class="form-select" style="width: 130px;">
                    <option value="">-- Năm --</option>
                    @for (int y = DateTime.Now.Year; y >= DateTime.Now.Year - 10; y--)
                    {
                        @Html.Raw($"<option value='{y}' {(ViewBag.Year == y ? "selected" : "")}>{y}</option>")
                    }
                </select>
            </div>           

            <button type="submit" class="btn btn-success">
                <i class="fa fa-"></i> Lọc
            </button>

            <button type="button" id="btnClear" class="btn btn-secondary">
                <i class="fa-solid fa-rotate-left"></i> Xóa
            </button>

            <a href="@Url.Action("Create", "DonBanHang")" class="btn btn-success">
                <i class="fa-solid fa-circle-plus"></i> Thêm
            </a>
        </div>
    </form>


    <!-- TABLE -->
    <div id="tableContainer">
        <table class="table  table-hover align-middle text-center shadow-sm">
            <thead class="table-success">
                <tr>
                    <th>Mã Đơn</th>
                    <th>Ngày bán hàng</th>
                    <th>Mã KH</th>
                    <th>Tên KH</th>
                </tr>
            </thead>
            <tbody id="tableBody">
                @await Html.PartialAsync("DonBanHangTable", Model)
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
            // debounce function
            function debounce(fn, delay) {
                let timer = null;
                return function() {
                    const context = this, args = arguments;
                    clearTimeout(timer);
                    timer = setTimeout(() => fn.apply(context, args), delay);
                };
            }

        // khi thay đổi  -> submit form
        $("#searchBox, #monthSelect, #yearSelect").on("change keyup", debounce(function(){
            $("#Form").submit();
        }, 400));

        // clear 
        $("#btnClear").on("click", function(){
            $("#searchBox").val("");
            $("#monthSelect").val("");
            $("#yearSelect").val("");
            $("#Form").submit();
        });
    </script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            document.querySelectorAll(".clickable-row").forEach(row => {
                row.addEventListener("click", function () {
                    window.location = this.dataset.href;
                });
            });
        });
    </script>
}