    @model IEnumerable<QuanLyBanHang.Models.NhomSP>

@{
    ViewBag.Title = "Quản lý Nhóm sản phẩm";
}

<style>
    .search-wrapper {
        position: relative;
        width: 100%;
        max-width: 400px;
    }

        .search-wrapper input {
            padding-left: 38px !important;
            border-radius: 8px;
            background: #f8f9fa;
        }

        .search-wrapper i {
            position: absolute;
            left: 12px;
            top: 50%;
            transform: translateY(-50%);
            pointer-events: none;
        }

    .table {
        overflow-x: auto;
        white-space: nowrap;
        width: 100%;
    }

    .table-hover tbody tr:hover {
        background-color: #f5faff;
        transition: 0.2s;
    }
</style>

<div class="container">
    <h4 class="mb-3 text-success">
        Danh sách Nhóm sản phẩm
    </h4>    

    <table class="table  table-hover align-middle text-center shadow-sm">
        <thead class="table-success">
            <tr>
                <th class="w-25">Mã Nhóm sản phẩm</th>
                <th class="w-25">Tên Nhóm sản phẩm</th>
            </tr>
        </thead>
        <tbody class="text-start">
            @foreach (var item in Model)
            {
                <tr class="clickable-row" data-href="@Url.Action("Details", "NhomSP", new { id = item.MaNhom })">
                    <td>@item.MaNhom</td>
                    <td>@item.TenNhom</td>
                                        
                </tr>
            }
        </tbody>
    </table>

</div>

 <script>
        document.addEventListener("DOMContentLoaded", function () {
            document.querySelectorAll(".clickable-row").forEach(row => {
                row.addEventListener("click", function () {
                    window.location = this.dataset.href;
                });
            });
        });
    </script>
