@model QuanLyBanHang.Models.NhomSP
@{
    ViewBag.Title = "Chi tiết Nhóm sản phẩm";
}
<div class=" container">
    <h4 class="text-success mb-3">
        Chi tiết Nhóm sản phẩm
    </h4>

    <div class="border p-4 rounded shadow-sm bg-light">
            <p><strong>@Html.DisplayNameFor(m => m.MaNhom):</strong> @Model.MaNhom</p>
            <p><strong>@Html.DisplayNameFor(m => m.TenNhom):</strong> @Model.TenNhom</p>
    </div>

    <div class=" mt-4">
        <a class="btn btn-warning text-white me-2" href="@Url.Action("Edit", "NhomSP", new { id = Model.MaNhom })">
            <i class="fa-solid fa-pen-to-square"></i> Sửa
        </a>
        <a class="btn btn-danger me-2 text-white" href="@Url.Action("Delete", "NhomSP", new { id = Model.MaNhom })">
            <i class="fa-solid fa-trash"></i> Xóa
        </a>
        <button type="button" onclick="history.back()" class="btn btn-secondary">
            <i class="fa-solid fa-arrow-left"></i> Quay lại
        </button>
    </div>

</div>