@model QuanLyBanHang.Models.NhomSP
@{
    ViewBag.Title = "Chi tiết Nhóm sản phẩm";
}
<div class=" container">
    <h4 class="text-success mb-3">
        Chi tiết Nhóm sản phẩm
    </h4>

    <div class="card shadow-sm border-info">
        <div class="card-body">
            <p><strong>Mã Nhóm sản phẩm:</strong> @Model.MaNhom</p>
            <p><strong>Tên Nhóm sản phẩm:</strong> @Model.TenNhom</p>
        </div>
    </div>

    <div class=" mt-4">
        <a asp-action="Edit" asp-route-maNhom="@Model.MaNhom" class="btn btn-warning">
            <i class="fa-solid fa-pen-to-square"></i> Sửa
        </a>
        <a class="btn btn-danger me-2 text-white" href="@Url.Action("Delete", "NhomSP", new { id = Model.MaNhom })">
            <i class="fa-solid fa-trash"></i> Xóa
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fa-solid fa-arrow-left"></i> Quay lại
        </a>
    </div>

</div>