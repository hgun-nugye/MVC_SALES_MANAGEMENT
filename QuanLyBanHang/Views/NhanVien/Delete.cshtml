@model QuanLyBanHang.Models.NhanVienDetailView

@{
    ViewBag.Title = "Xóa Nhân Viên";
}

<style>
    .delete-card {
        background: white;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        max-width: 600px;
        margin: 2rem auto;
    }

    .warning-header {
        background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
        color: white;
        padding: 2rem;
        text-align: center;
    }

    .warning-icon {
        font-size: 4rem;
        margin-bottom: 1rem;
        animation: pulse 2s infinite;
    }

    @@keyframes pulse {
        0% { transform: scale(1); opacity: 1; }
        50% { transform: scale(1.1); opacity: 0.8; }
        100% { transform: scale(1); opacity: 1; }
    }

    .info-display {
        padding: 2rem;
        background: #fff;
    }

    .info-row {
        display: flex;
        justify-content: space-between;
        padding: 0.75rem 0;
        border-bottom: 1px solid #f1f3f5;
    }

    .info-row:last-child {
        border-bottom: none;
    }

    .info-label {
        color: #6c757d;
        font-weight: 600;
    }

    .info-value {
        color: #212529;
        font-weight: 700;
    }

    .action-footer {
        padding: 1.5rem 2rem;
        background: #f8f9fa;
        display: flex;
        gap: 1rem;
        justify-content: center;
    }

    .employee-avatar-small {
        width: 60px;
        height: 60px;
        object-fit: cover;
        border-radius: 12px;
        border: 2px solid white;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    }
</style>

<div class="container py-5">
    <div class="delete-card">
        <div class="warning-header">
            <div class="warning-icon">
                <i class="fa-solid fa-user-slash"></i>
            </div>
            <h3 class="fw-bold mb-1">Xác nhận xóa nhân sự?</h3>
            <p class="mb-0 opacity-75">Hành động này sẽ xóa vĩnh viễn dữ liệu nhân viên khỏi hệ thống.</p>
        </div>

        <div class="info-display">
            <div class="d-flex align-items-center gap-3 mb-4 p-3 bg-light rounded-3">
                <img src="@(string.IsNullOrEmpty(Model.AnhNV) ? Url.Content("~/images/default-user.png") : Url.Content("~/images/employees/" + Model.AnhNV))" 
                     class="employee-avatar-small" alt="@Model.TenNV">
                <div>
                    <div class="info-value" style="font-size: 1.2rem;">@Model.TenNV</div>
                    <div class="small text-muted">Mã NV: @Model.MaNV</div>
                </div>
            </div>

            <div class="info-row">
                <span class="info-label">Số CCCD</span>
                <span class="info-value">@Model.CCCD</span>
            </div>
            <div class="info-row">
                <span class="info-label">Số điện thoại</span>
                <span class="info-value">@Model.SDT</span>
            </div>
            <div class="info-row">
                <span class="info-label">Vai trò</span>
                <span class="info-value text-success">@(Model.TenVT ?? "Chưa phân công")</span>
            </div>
            <div class="info-row">
                <span class="info-label">Tên đăng nhập</span>
                <span class="info-value">@(Model.TenDNNV ?? "N/A")</span>
            </div>
        </div>

        <div class="action-footer">
            <a asp-action="Details" asp-route-id="@Model.MaNV" class="btn btn-light px-4 fw-bold">
                <i class="fa-solid fa-arrow-left me-2"></i> Quay lại
            </a>
            <form id="deleteForm" asp-action="Delete" method="post">
                <input type="hidden" asp-for="MaNV" />
                <button type="button" class="btn btn-danger px-4 fw-bold" onclick="confirmDelete()">
                    <i class="fa-solid fa-trash-can me-2"></i> Xác nhận xóa
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function confirmDelete() {
            Swal.fire({
                title: 'Bạn có chắc chắn?',
                text: "Dữ liệu về nhân viên này sẽ bị xóa vĩnh viễn!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#dc3545',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Xóa',
                cancelButtonText: 'Hủy',
                background: '#fff',
                customClass: {
                    confirmButton: 'btn btn-danger px-4',
                    cancelButton: 'btn btn-light px-4'
                },
                buttonsStyling: false
            }).then((result) => {
                if (result.isConfirmed) {
                    document.getElementById('deleteForm').submit();
                }
            })
        }
    </script>
}

