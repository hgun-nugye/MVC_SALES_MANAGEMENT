@model IEnumerable<QuanLyBanHang.Models.NhanVienDetailView>

@{
    ViewBag.Title = "Quản lý Nhân Viên";
}

<style>
    .search-wrapper {
        position: relative;
        width: 100%;
        max-width: 400px;
    }

    .search-wrapper input {
        padding-left: 38px !important;
        border-radius: 8px;
        background: #f8f9fa;
    }

    .search-wrapper i {
        position: absolute;
        left: 12px;
        top: 50%;
        transform: translateY(-50%);
        pointer-events: none;
    }

    .table {
        overflow-x: auto;
        white-space: nowrap;
        width: 100%;
    }

    .table-hover tbody tr:hover {
        background-color: #f5faff;
        transition: 0.2s;
        cursor: pointer;
    }

    .badge-dynamic {
        /* Sử dụng màu HSL để tự động tạo màu nền và viền dựa trên biến --role-hue */
        background-color: hsl(var(--role-hue), 70%, 90%); /* Màu nền nhạt */
        color: hsl(var(--role-hue), 70%, 20%); /* Chữ màu đậm cùng tông */
        border: 1px solid hsl(var(--role-hue), 70%, 80%);
        padding: 0.5em 0.8em;
        font-weight: 600;
        border-radius: 12px;
    }
</style>

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h4 class="text-success">
            <i class="fa-solid fa-users me-2"></i>
            Danh sách Nhân Viên
        </h4>
       
    </div>

    <!-- Form tìm kiếm -->
    <form id="Form" class="d-flex flex-wrap align-items-center justify-content-between mb-4 gap-3">
        <div class="search-wrapper" style="max-width: 350px; position: relative;">
            <i class="fa fa-search" style="position: absolute; left: 12px; top: 50%; transform: translateY(-50%); color: #777;"></i>
            <input id="searchBox" name="search" type="text" class="form-control"
                   value="@ViewBag.Search"
                   placeholder="Tìm mã nhân viên, tên nhân viên..."
                   style="padding-left: 35px;">
        </div>

        <div class="d-flex flex-wrap align-items-center gap-2">
            <button type="button" id="btnClear" class="btn btn-secondary">
                <i class="fa-solid fa-rotate-left me-2"></i>
                Reset
            </button>

            <a href="@Url.Action("Create", "NhanVien")" class="btn btn-success">
                <i class="fa-solid fa-circle-plus me-2"></i>
                Thêm nhân viên
            </a>
        </div>
    </form>

    <!-- Bảng danh sách -->
    <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle shadow-sm">
            <thead class="table-success">
                <tr>
                    <th class="text-center" style="width: 10%;">Mã NV</th>
                    <th class="text-center" style="width: 20%;">Tên Nhân Viên</th>
                    <th class="text-center" style="width: 10%;">CCCD</th>
                    <th class="text-center" style="width: 12%;">Số Điện Thoại</th>
                    <th class="text-center" style="width: 15%;">Email</th>
                    <th class="text-center" style="width: 15%;">Vai Trò</th>
                    <th class="text-center" style="width: 18%;">Tên Đăng Nhập</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr class="clickable-row"
                            data-href="@Url.Action("Details", "NhanVien", new { id = item.MaNV })"
                            data-manv="@item.MaNV"
                            data-tennv="@item.TenNV">
                            <td class="text-center">
                                <img src="@(string.IsNullOrEmpty(item.AnhNV) ? Url.Content("~/images/default-user.png") : @Url.Content("~/images/employees/" + item.AnhNV))" width="40" height="40" style="object-fit:cover; border-radius:10px;">
                                @item.MaNV
                            </td>
                            <td>@item.TenNV</td>
                            <td class="text-center">@item.CCCD</td>
                            <td class="text-center">@item.SDT</td>
                            <td class="text-center">@(item.Email ?? "-")</td>
                            <td class="text-center">
                                @if (!string.IsNullOrEmpty(item.TenVT))
                                {
                                    // Tạo một mã số duy nhất từ tên vị trí
                                    var hue = Math.Abs(item.TenVT.GetHashCode()) % 360;
                                    <span class="badge badge-dynamic" style="--role-hue: @hue;">
                                        @item.TenVT
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td class="text-center">@(item.TenDNNV ?? "-")</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-center text-muted fst-italic py-4">
                            <i class="fa-solid fa-inbox me-2"></i>
                            Không có nhân viên nào.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        // debounce function
        function debounce(fn, delay) {
            let timer = null;
            return function() {
                const context = this, args = arguments;
                clearTimeout(timer);
                timer = setTimeout(() => fn.apply(context, args), delay);
            };
        }

        // áp dụng cho searchBox
        $("#searchBox").on("change", debounce(function() {
            $("#Form").submit();
        }, 400));

        // clear
        $("#btnClear").on("click", function () {
            $("#searchBox").val("");
            $("#Form").submit();
        });

        // Click vào row để xem chi tiết
        document.addEventListener("DOMContentLoaded", function () {
            document.querySelectorAll(".clickable-row").forEach(row => {
                row.addEventListener("click", function () {
                    window.location = this.dataset.href;
                });
            });
        });
    </script>
}
