@model IEnumerable<QuanLyBanHang.Models.NhanVienDetailView>

@{
    ViewBag.Title = "Quản lý Nhân Viên";
}

<style>
    .search-card {
        background: white;
        border-radius: 12px;
        padding: 1.5rem;
        margin-bottom: 2rem;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    }

    .form-control, .form-select {
        border-radius: 8px;
        border: 1.5px solid #dee2e6;
        padding: 0.65rem 0.85rem;
    }

    .form-control:focus, .form-select:focus {
        border-color: #198754;
        box-shadow: 0 0 0 0.25rem rgba(25, 135, 84, 0.15);
    }

    .data-table-container {
        background: white;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    }

    .table thead {
        background-color: #f8f9fa;
        border-bottom: 2px solid #e9ecef;
    }

    .table th {
        font-weight: 600;
        color: #495057;
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 0.5px;
        padding: 1rem;
    }

    .table td {
        padding: 1rem;
        vertical-align: middle;
    }

    .employee-img {
        width: 45px;
        height: 45px;
        object-fit: cover;
        border-radius: 10px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }

    .clickable-row {
        cursor: pointer;
        transition: background-color 0.2s;
    }

    .clickable-row:hover {
        background-color: #f8fbf9 !important;
    }

    .search-wrapper {
        position: relative;
    }

    .search-wrapper i {
        position: absolute;
        left: 12px;
        top: 50%;
        transform: translateY(-50%);
        color: #6c757d;
    }

    .search-wrapper input {
        padding-left: 2.5rem;
    }

    .badge-dynamic {
        background-color: hsl(var(--role-hue), 70%, 95%);
        color: hsl(var(--role-hue), 70%, 25%);
        border: 1px solid hsl(var(--role-hue), 70%, 85%);
        padding: 0.4em 0.8em;
        font-weight: 600;
        border-radius: 8px;
        font-size: 0.75rem;
    }
</style>

<div class="container-fluid py-4">
    <div class="page-header d-flex justify-content-between align-items-center mb-4">
        <h4 class="mb-0 fw-bold">
            <i class="fa-solid fa-user-tie me-2"></i>
            Quản lý Nhân Viên
        </h4>
        <div class="d-flex gap-2">
            <a href="@Url.Action("Index", "PhanQuyen")" class="btn btn-success fw-bold px-3">
                <i class="fa-solid fa-user-shield me-2"></i> Phân quyền
            </a>
            <a href="@Url.Action("Create", "NhanVien")" class="btn btn-light text-success fw-bold px-4">
                <i class="fa-solid fa-plus-circle me-2"></i> Thêm
            </a>
        </div>
    </div>

    <!-- Filter Section -->
    <div class="filter-card">
        <form id="Form" method="get" class="row g-3 align-items-end">
            <div class="col-lg-9">
                <label class="form-label small fw-bold text-muted text-uppercase">Tìm kiếm nhanh</label>
                <div class="search-input-group">
                    <i class="fa-solid fa-magnifying-glass"></i>
                    <input id="searchBox" type="text" name="search" value="@ViewBag.Search"
                           class="form-control" placeholder="Tìm theo tên, email, CCCD, mã nhân viên...">
                </div>
            </div>
            <div class="col-lg-3 d-flex gap-2">
                <button type="button" id="btnClear" class="btn btn-outline-secondary btn-clear">
                    <i class="fa-solid fa-rotate-left"></i>
                </button>
            </div>
        </form>
    </div>

    <!-- Table Section -->
    <div class="data-table-container">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th class="ps-4">Nhân viên</th>
                        <th>Liên hệ</th>
                        <th>Vai trò</th>
                        <th class="text-center">Tên đăng nhập</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr class="clickable-row" data-href="@Url.Action("Details", "NhanVien", new { id = item.MaNV })">
                                <td class="ps-4">
                                    <div class="d-flex align-items-center gap-3">
                                        <img src="@(string.IsNullOrEmpty(item.AnhNV) ? Url.Content("~/images/default-user.png") : Url.Content("~/images/employees/" + item.AnhNV))" 
                                             class="employee-img" alt="@item.TenNV">
                                        <div>
                                            <div class="fw-bold text-dark">@item.TenNV</div>
                                            <div class="text-muted small">@item.MaNV • @item.CCCD</div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div><i class="fa-solid fa-phone-volume me-2 text-muted small"></i>@item.SDT</div>
                                    <div class="text-muted small"><i class="fa-solid fa-envelope me-2"></i>@(item.Email ?? "N/A")</div>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.TenVT))
                                    {
                                        var hue = Math.Abs(item.TenVT.GetHashCode()) % 360;
                                        <span class="badge badge-dynamic" style="--role-hue: @hue;">@item.TenVT</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted small">Chưa phân vị trí</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-light text-dark border font-monospace">@(item.TenDNNV ?? "N/A")</span>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center py-5 text-muted">
                                <i class="fa-solid fa-user-slash fa-3x mb-3 opacity-25"></i>
                                <p>Không tìm thấy nhân viên nào phù hợp.</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // clear 
        $("#btnClear").on("click", function () {
            $("#searchBox").val("");
            $("#Form").submit();
        });

        document.addEventListener("DOMContentLoaded", function () {
            document.querySelectorAll(".clickable-row").forEach(row => {
                row.addEventListener("click", function (e) {
                    if (e.target.closest("a, button, .badge")) return;
                    window.location = this.dataset.href;
                });
            });
        });
    </script>
}

