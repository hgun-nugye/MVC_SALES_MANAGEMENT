@model QuanLyBanHang.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Đổi mật khẩu";
}

<style>
    .page-header {
        background: linear-gradient(135deg, #198754 0%, #20c997 100%);
        color: white;
        padding: 1.5rem 2rem;
        border-radius: 12px;
        margin-bottom: 2rem;
        box-shadow: 0 4px 12px rgba(25, 135, 84, 0.3);
    }

    .form-section {
        background: white;
        border-radius: 12px;
        padding: 2.5rem;
        max-width: 600px;
        margin: 0 auto;
        box-shadow: 0 10px 30px rgba(0,0,0,0.05);
        border: 1px solid #eef2f0;
    }

    .section-title {
        color: #198754;
        font-weight: 700;
        font-size: 1.25rem;
        margin-bottom: 2rem;
        text-align: center;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.75rem;
    }

    .form-label {
        font-weight: 600;
        color: #495057;
        margin-bottom: 0.5rem;
    }

    .form-control {
        border-radius: 10px;
        border: 1.5px solid #dee2e6;
        padding: 0.75rem 1rem;
        transition: all 0.2s;
    }

    .form-control:focus {
        border-color: #198754;
        box-shadow: 0 0 0 0.25rem rgba(25, 135, 84, 0.1);
    }

    .password-hint {
        font-size: 0.85rem;
        color: #6c757d;
        margin-top: 0.5rem;
    }

    .btn-submit {
        background: #198754;
        color: white;
        font-weight: 700;
        padding: 0.8rem;
        border-radius: 10px;
        transition: 0.3s;
        border: none;
        width: 100%;
        margin-top: 1rem;
    }

    .btn-submit:hover {
        background: #157347;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(21, 115, 71, 0.2);
    }

    .btn-cancel {
        display: block;
        text-align: center;
        margin-top: 1.5rem;
        color: #6c757d;
        text-decoration: none;
        font-weight: 500;
        transition: 0.2s;
    }

    .btn-cancel:hover {
        color: #198754;
    }
</style>

<div class="container py-4">
    <div class="page-header text-center">
        <h4 class="mb-0 fw-bold">
            <i class="fa-solid fa-shield-halved me-2"></i>
            Bảo mật tài khoản
        </h4>
    </div>

    <div class="form-section">
        <div class="section-title">
            <i class="fa-solid fa-key"></i>
            Đổi mật khẩu mới
        </div>

        <form asp-action="ChangePassword" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>

            <div class="mb-4">
                <label asp-for="OldPassword" class="form-label">Mật khẩu hiện tại</label>
                <div class="input-group">
                    <span class="input-group-text bg-light border-end-0"><i class="fa-solid fa-lock text-muted"></i></span>
                    <input asp-for="OldPassword" class="form-control border-start-0" placeholder="Nhập mật khẩu đang dùng" />
                </div>
                <span asp-validation-for="OldPassword" class="text-danger small"></span>
            </div>

            <div class="mb-4">
                <label asp-for="NewPassword" class="form-label">Mật khẩu mới</label>
                <div class="input-group">
                    <span class="input-group-text bg-light border-end-0"><i class="fa-solid fa-key text-muted"></i></span>
                    <input asp-for="NewPassword" class="form-control border-start-0" placeholder="Nhập mật khẩu mới" />
                </div>
                <div class="password-hint">
                    <i class="fa-solid fa-circle-info me-1"></i> Mật khẩu phải dài ít nhất 6 ký tự.
                </div>
                <span asp-validation-for="NewPassword" class="text-danger small"></span>
            </div>

            <div class="mb-4">
                <label asp-for="ConfirmPassword" class="form-label">Xác nhận mật khẩu mới</label>
                <div class="input-group">
                    <span class="input-group-text bg-light border-end-0"><i class="fa-solid fa-check-double text-muted"></i></span>
                    <input asp-for="ConfirmPassword" class="form-control border-start-0" placeholder="Nhập lại mật khẩu mới" />
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-submit">
                <i class="fa-solid fa-paper-plane me-2"></i> Xác nhận đổi mật khẩu
            </button>

            <a asp-action="Profile" class="btn btn-cancel">
                <i class="fa-solid fa-circle-xmark me-1"></i> Hủy và quay lại hồ sơ
            </a>
        </form>
    </div>
</div>
