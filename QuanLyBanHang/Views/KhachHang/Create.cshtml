@model QuanLyBanHang.Models.KhachHang
@{
    ViewBag.Title = "Thêm Khách hàng";
}

<div class="container">
    <h4 class="text-success mb-3">
        Thêm Khách hàng
    </h4>

    <form asp-action="Create" method="post" class="border p-4 rounded shadow-sm bg-light">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group mb-2">
            <label>Tên KH</label>
            <input asp-for="TenKH" class="form-control" />
            <span asp-validation-for="TenKH" class="text-danger"></span>
        </div>

        <div class="form-group mb-2">
            <label>Điện thoại</label>
            <input asp-for="DienThoaiKH" class="form-control" />
            <span asp-validation-for="DienThoaiKH" class="text-danger"></span>
        </div>

        <div class="form-group mb-2">
            <label>Email</label>
            <input asp-for="EmailKH" class="form-control" />
            <span asp-validation-for="EmailKH" class="text-danger"></span>
        </div>

        <div class="form-group mb-2">
            <label>Địa chỉ</label>
            <input asp-for="DiaChiKH" class="form-control" />
            <span asp-validation-for="DiaChiKH" class="text-danger"></span>
        </div>

        <div class="form-group mb-2">
            <label>Tỉnh</label>
            <select id="MaTinh" name="maTinh" asp-items="@ViewBag.Tinh" class="form-control">
                <option value="">-- Chọn Tỉnh --</option>
            </select>
        </div>

        <div class="form-group mb-2">
            <label>Xã</label>
            <select id="MaXa" asp-for="MaXa" asp-items="@ViewBag.Xa" class="form-control">
                <option value="">-- Chọn Xã --</option>
            </select>
            <span asp-validation-for="MaXa" class="text-danger"></span>
        </div>

        <div class="form-group mb-2">
            <label>Ảnh</label>
            <input type="file" asp-for="AnhFile" class="form-control" />
            <span asp-validation-for="AnhFile" class="text-danger"></span>
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-success">
                <i class="fa-solid fa-check"></i> Thêm mới
            </button>
            <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
        </div>
    </form>

</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        $(function () {

            // 1. Khi chọn Tỉnh → load danh sách Xã
            $('#MaTinh').change(function () {
                var maTinh = $(this).val();
                var maXaSelected = '@ViewData["MaXaSelected"]';

                // Xóa Xã cũ
                $('#MaXa').html('<option value="">-- Chọn Xã --</option>');

                if (maTinh) {
                    $.getJSON('/KhachHang/GetXaByTinh', { maTinh: maTinh }, function (data) {

                        var options = '<option value="">-- Chọn Xã --</option>';

                        $.each(data, function (i, xa) {

                            // Tự nhận dạng key JSON (MaXa hoặc maXa)
                            var maXa = xa.MaXa !== undefined ? xa.MaXa : xa.maXa;
                            var tenXa = xa.TenXa !== undefined ? xa.TenXa : xa.tenXa;

                            var selected = (maXa == maXaSelected) ? 'selected' : '';

                            options += `<option value="${maXa}" ${selected}>${tenXa}</option>`;
                        });

                        $('#MaXa').html(options);
                    });
                }
            });

            // 2. Khi load lại trang (POST sai) → tự động load lại Xã đúng với Tỉnh đã chọn
            if ($('#MaTinh').val()) {
                $('#MaTinh').trigger('change');
            }
        });
    </script>
}
