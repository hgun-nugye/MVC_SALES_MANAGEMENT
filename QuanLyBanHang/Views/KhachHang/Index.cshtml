@model IEnumerable<QuanLyBanHang.Models.KhachHangDetailView>

@{
    ViewBag.Title = "Quản lý Khách hàng";
}
<style>
    .search-wrapper {
        position: relative;
        width: 100%;
        max-width: 400px;
    }

        .search-wrapper i {
            position: absolute;
            left: 12px;
            top: 50%;
            transform: translateY(-50%);
            pointer-events: none;
        }

        .search-wrapper input {
            padding-left: 38px !important;
            border-radius: 8px;
            background: #f8f9fa;
        }
}

    .table-hover tbody tr:hover {
        background-color: #f5faff;
        transition: 0.2s;
    }
</style>

<div class="container">
    <h4 class="mb-4 text-success">
        Danh sách Khách hàng
    </h4>

    <!--  Form -->
    <form id="Form" method="get" class="d-flex flex-wrap align-items-center justify-content-between mb-4 gap-3">

        <div class="search-wrapper flex-grow-1">
            <i class="fa fa-search"></i>
            <input id="searchBox" type="text" name="search" value="@ViewBag.Search"
                   class="form-control" placeholder="Tìm tên, email, SĐT...">
        </div>

        <div class="d-flex flex-wrap align-items-center gap-2">
            <!--  TỈNH -->

            <div class="d-flex align-items-center gap-2">
                <label class="w-100 text-end opacity-50">Tỉnh/Thành phố</label>
                <select asp-items="ViewBag.TinhList" id="tinh" name="tinh" class="form-select">
                    <option value="">-- Tất cả --</option>
                </select>
            </div>               

            <button type="button" id="btnClear" class="btn btn-secondary">
                <i class="fa-solid fa-rotate-left"></i>Reset
            </button>

            <a href="@Url.Action("Create", "KhachHang")" class="btn btn-success"><i class="fa-solid fa-circle-plus"></i> Add</a>

        </div>
    </form>

    <!-- TABLE -->
    <table class="table  table-hover align-middle shadow-sm">
        <thead class="table-success text-center">
            <tr>
                <th>Mã KH</th>
                <th>Tên KH</th>
                <th>Điện thoại</th>
                <th>Email</th>
                <th>Địa chỉ</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var item in Model)
                {
                    <tr class="clickable-row" data-href="@Url.Action("Details", "KhachHang", new { id = item.MaKH })">

                        <td>
                            <img src="@(string.IsNullOrEmpty(item.AnhKH) ? Url.Content("~/images/default-user.png") : @Url.Content("~/images/customers/" + item.AnhKH))" width="60" height="60" style="object-fit:cover; border-radius:10px;">
                            @item.MaKH
                        </td>
                        <td>@item.TenKH</td>
                        <td>@item.DienThoaiKH</td>
                        <td>@item.EmailKH</td>
                        <td>@item.DiaChiKH, @item.TenXa, @item.TenTinh</td>

                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center text-muted fst-italic">Không có khách hàng nào.</td>
                </tr>
            }

        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        // debounce function
        function debounce(fn, delay) {
            let timer = null;
            return function() {
                const context = this, args = arguments;
                clearTimeout(timer);
                timer = setTimeout(() => fn.apply(context, args), delay);
            };
        }

        // áp dụng cho searchBox
        $("#searchBox").on("change", debounce(function() {
            $("#Form").submit();
        }, 400));

        // tinh vẫn submit ngay khi chọn
        $("#tinh").on("change", function () {
            $("#Form").submit();
        });

        // clear 
        $("#btnClear").on("click", function () {
            $("#searchBox").val("");
            $("#tinh").val("");
            $("#Form").submit();
        });
    </script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            document.querySelectorAll(".clickable-row").forEach(row => {
                row.addEventListener("click", function () {
                    window.location = this.dataset.href;
                });
            });
        });
    </script>
}
