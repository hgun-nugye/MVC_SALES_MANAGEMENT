@model QuanLyBanHang.Models.KhachHang
@{
    ViewBag.Title = "Sửa Khách hàng";
}

<div class="container">
    <h4 class="text-success mb-4">
        Sửa Thông Tin Khách hàng
    </h4>

    <form asp-action="Edit" method="post" enctype="multipart/form-data" class="border p-4 rounded shadow-sm bg-light">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group mb-3">
            <label>Mã KH</label>
            <input asp-for="MaKH" class="form-control" readonly />
        </div>

        <div class="form-group mb-3">
            <label>Tên KH</label>
            <input asp-for="TenKH" class="form-control" />
        </div>

        <div class="form-group mb-3">
            <label>Điện thoại</label>
            <input asp-for="DienThoaiKH" class="form-control" />
        </div>

        <div class="form-group mb-3">
            <label>Email</label>
            <input asp-for="EmailKH" class="form-control" />
        </div>

        <div class="form-group mb-3">
            <label>Địa chỉ</label>
            <input asp-for="DiaChiKH" class="form-control" />
        </div>

        <div class="form-group mb-3">
            <label>Tỉnh</label>
            <select id="MaTinh" name="maTinh" class="form-control" asp-items="@ViewBag.Tinh">
                <option value="">@Model.TenTinh</option>
            </select>
        </div>

        <div class="form-group mb-3">
            <label>Xã</label>
            <select id="MaXa" asp-for="MaXa" class="form-control" asp-items="@ViewBag.Xa">
                <option value="">@Model.TenXa</option>
            </select>
        </div>

        <div class="form-group mb-3">
            <label>Ảnh</label>
            <input type="file" name="AnhFile" class="form-control" />
            <p>Ảnh hiện tại:</p>
            <img src="/images/@Model.AnhKH" width="120" />
        </div>

        <div class="mt-4 d-flex gap-2">
            <button type="submit" class="btn btn-warning text-white">
                <i class="fa-solid fa-save"></i> Cập nhật
            </button>
            <a asp-action="Details" asp-route-id="@Model.MaKH" class="btn btn-secondary">
                <i class="fa-solid fa-arrow-left"></i> Quay lại
            </a>
        </div>
    </form>

</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        $(function () {

            // Khi chọn Tỉnh → load Xã
            $('#MaTinh').change(function () {
                var maTinh = $(this).val();

                $('#MaXa').html('<option value="">-- Chọn Xã --</option>');

                if (maTinh) {
                    $.getJSON('/KhachHang/GetXaByTinh', { maTinh: maTinh }, function (data) {

                        var options = '<option value="">-- Chọn Xã --</option>';

                        $.each(data, function (i, xa) {
                            options += `<option value="${xa.maXa}">${xa.tenXa}</option>`;
                        });

                        $('#MaXa').html(options);
                    });
                }
            });

            // Khi load trang → Tự chọn lại Xã đúng với Model.MaXa
            var selectedXa = "@Model.MaXa";
            if ($('#MaTinh').val()) {
                $('#MaTinh').trigger('change');

                setTimeout(() => {
                    $('#MaXa').val(selectedXa);
                }, 300);
            }
        });
    </script>
}

