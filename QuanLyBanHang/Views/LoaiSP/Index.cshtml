@model IEnumerable<QuanLyBanHang.Models.LoaiSPDto>

@{
    ViewBag.Title = "Quản lý Loại sản phẩm";

    int totalPages = ViewBag.TotalPages;
    int currentPage = ViewBag.PageNumber;
    int pageWindow = 5; // số trang xung quanh current
    int startPage = Math.Max(1, currentPage - pageWindow);
    int endPage = Math.Min(totalPages, currentPage + pageWindow);
}

<style>
    .search-wrapper {
        position: relative;
        width: 100%;
        max-width: 400px;
    }

        .search-wrapper i {
            position: absolute;
            left: 12px;
            top: 50%;
            transform: translateY(-50%);
            pointer-events: none;
        }

        .search-wrapper input {
            padding-left: 38px !important;
            border-radius: 8px;
            background: #f8f9fa;
        }

    .table {
        white-space: nowrap;
        width: 100%;
    }

    .table-hover tbody tr:hover {
        background-color: #f5faff;
        transition: 0.2s;
    }
</style>

<div class="container">
    <h4 class="mb-3 text-success">
        Danh sách Loại sản phẩm
    </h4>

    <!--  Form -->
    <form id="Form" method="get" class="d-flex flex-wrap align-items-center justify-content-between mb-4 gap-3">
        <div class="search-wrapper flex-grow-1">
            <i class="fa fa-search"></i>
            <input id="searchBox" type="text" name="search" value="@ViewBag.Search" class="form-control" placeholder="Tìm tên loại sản phẩm">
        </div>

        <div class="d-flex flex-wrap align-items-center gap-2">
            <div class="d-flex align-items-center gap-2">
                <label class="w-100 text-end opacity-50"> <i class="fa fa- me-2"></i>:</label>
                @Html.DropDownList(
                "group",
                                (SelectList)ViewBag.MaNhom,
                                "-- Nhóm SP --",
                                new { @class = "form-select", style = "width:200px;", id = "groupSelect" }
                                )

            </div>
           
            <button type="button" id="btnClear" class="btn btn-secondary"><i class="fa-solid fa-rotate-left"></i>Reset</button>
            <a href="@Url.Action("Create", "LoaiSP")" class="btn btn-success"><i class="fa-solid fa-circle-plus"></i> Add</a>
        </div>

        <!-- Hidden inputs giữ state -->
        <input type="hidden" name="pageNumber" id="pageNumberInput" value="@currentPage" />
        <input type="hidden" name="pageSize" id="pageSizeInput" value="@ViewBag.PageSize" />
    </form>


    <table class="table  table-hover align-middle shadow-sm ">
        <thead class="table-success">
            <tr>
                <th>Mã Loại sản phẩm</th>
                <th>Tên Loại sản phẩm</th>
                <th>Mã Nhóm sản phẩm</th>
                <th>Tên Nhóm sản phẩm</th>
            </tr>
        </thead>
        <tbody class="text-start">
            @await Html.PartialAsync("LoaiSPTable", Model)
        </tbody>
    </table>


    <!-- Pagination + PageSize -->
    <div class="d-flex justify-content-between align-items-center mt-4">
        <!-- PageSize bên trái -->
        <div class="d-flex align-items-center gap-2">
            <label for="pageSizeSelect">Hiển thị:</label>
            <select id="pageSizeSelect" class="form-select" style="width:120px;">
                @foreach (int size in new int[] { 5, 10, 20, 50 })
                {
                    @Html.Raw($"<option value='{size}' {(ViewBag.PageSize == size ? "selected" : "")}>{size} /page</option>")
                }
            </select>
        </div>

        <!-- Pagination numbers bên phải -->
        <nav>
            <ul class="pagination mb-0">
                @if (currentPage > 1)
                {
                    <li class="page-item"><a class="page-link" href="#" onclick="changePage(1); return false;">&laquo;</a></li>
                }

                @if (currentPage - pageWindow > 1)
                {
                    <li class="page-item"><a class="page-link" href="#" onclick="changePage(1); return false;">1</a></li>
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                }

                @for (int i = startPage; i <= endPage; i++)
                {
                    <li class="page-item @(currentPage == i ? "active bg-success" : "")">
                        <a class="page-link @(currentPage == i ? "text-white" : "")" href="#" onclick="changePage(@i); return false;">@i</a>
                    </li>
                }

                @if (currentPage + pageWindow < totalPages)
                {
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                    <li class="page-item"><a class="page-link" href="#" onclick="changePage(@totalPages); return false;">@totalPages</a></li>
                }

                @if (currentPage < totalPages)
                {
                    <li class="page-item"><a class="page-link" href="#" onclick="changePage(@totalPages); return false;">&raquo;</a></li>
                }
            </ul>
        </nav>
    </div>
</div>

@section Scripts {
    <script>
                // debounce function
            function debounce(fn, delay) {
                let timer = null;
                return function() {
                    const context = this, args = arguments;
                    clearTimeout(timer);
                    timer = setTimeout(() => fn.apply(context, args), delay);
                };
            }
            // khi thay đổi  -> submit form
        $("#searchBox").on("change keyup", debounce(function(){
            $("#pageNumberInput").val(1);
            $("#Form").submit();
        }, 400));

         $("#groupSelect").on("change", function(){
            $("#pageNumberInput").val(1);
            $("#Form").submit();
        });

        // pageSize change
        $("#pageSizeSelect").on("change", function(){
            $("#pageSizeInput").val($(this).val());
            $("#pageNumberInput").val(1);
            $("#Form").submit();
        });

        // pagination
        function changePage(page){
            $("#pageNumberInput").val(page);
            $("#Form").submit();
        }

        // clear 
        $("#btnClear").on("click", function(){
            $("#searchBox").val("");
            $("#monthSelect").val("");
            $("#yearSelect").val("");
            $("#pageSizeInput").val(10);
            $("#pageNumberInput").val(1);
            $("#Form").submit();
        });
    </script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            document.querySelectorAll(".clickable-row").forEach(row => {
                row.addEventListener("click", function () {
                    window.location = this.dataset.href;
                });
            });
        });
    </script>
}
