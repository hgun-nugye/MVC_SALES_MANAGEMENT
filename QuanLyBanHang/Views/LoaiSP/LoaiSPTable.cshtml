@model IEnumerable<QuanLyBanHang.Models.LoaiSP>

@if (Model != null && Model.Any())
{
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.MaLoai</td>
            <td>@item.TenLoai</td>
            <td>@item.MaNhom</td>
            <td>@item.TenNhom</td>

            <td class="flex justify-content-between text-center">
                <a class="btn btn-info btn-sm text-white" href="@Url.Action("Details", "LoaiSP", new { id = item.MaLoai })">
                    <i class="fa-solid fa-eye"></i> Chi tiết
                </a>
                <a class="btn btn-warning btn-sm text-white" href="@Url.Action("Edit", "LoaiSP", new { id = item.MaLoai })">
                    <i class="fa-solid fa-pen-to-square"></i> Sửa
                </a>
                <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", "LoaiSP", new { id = item.MaLoai })">
                    <i class="fa-solid fa-trash"></i> Xóa
                </a>
            </td>
        </tr>
    }
}
else
{
    <tr>
        <td colspan="8" class="text-center text-muted fst-italic">Không có loại sản phẩm nào.</td>
    </tr>
}
