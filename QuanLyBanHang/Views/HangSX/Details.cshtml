@model QuanLyBanHang.Models.HangSX
@{
    ViewBag.Title = "Chi tiết Hãng";
}

<div class=" container">
    <h4 class="text-success mb-3">
        Chi tiết Hãng
    </h4>

    <div class="border p-4 rounded shadow-sm bg-light">
            <p><strong>@Html.DisplayNameFor(m => m.MaHangSX):</strong> @Model.MaHangSX</p>
            <p><strong>@Html.DisplayNameFor(m => m.TenHangSX):</strong> @Model.TenHangSX</p>
            <p><strong>@Html.DisplayNameFor(m => m.MaNuoc):</strong> @Model.MaNuoc</p>
            <p><strong>@Html.DisplayNameFor(m => m.TenNuoc):</strong> @(Model.TenNuoc)</p>
    </div>

    <div class="mt-4">
        <a class="btn btn-warning text-white me-2" href="@Url.Action("Edit", "HangSX", new { id = Model.MaHangSX })">
            <i class="fa-solid fa-pen-to-square"></i> Sửa
        </a>
        <a class="btn btn-danger me-2 text-white" href="@Url.Action("Delete", "HangSX", new { id = Model.MaHangSX })">
            <i class="fa-solid fa-trash"></i> Xóa
        </a>
        <button type="button" onclick="history.back()" class="btn btn-secondary">
            <i class="fa-solid fa-arrow-left"></i> Quay lại
        </button>
    </div>
</div>
